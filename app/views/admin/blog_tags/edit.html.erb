<% content_for :title, "Edit #{@tag.name} - Blog Tags - Admin Dashboard" %>
<% content_for :page_title, "Edit Tag" %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to "Blog Tags", admin_blog_tags_path, class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to @tag.name, admin_blog_tag_path(@tag), class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500">Edit</span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex items-center gap-4">
        <div class="hidden md:block flex-shrink-0">
          <div class="w-16 h-16 md:w-20 md:h-20 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
            Edit Tag: #<%= @tag.name %>
            <span class="inline-block">✏️</span>
          </h1>
          <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
            Update tag information
          </p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Form Card -->
      <div class="lg:col-span-2">
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="p-6 md:p-8">
            <%= form_with(model: [:admin, @tag], local: true, class: "space-y-6") do |form| %>
              <!-- Error Messages -->
              <% if @tag.errors.any? %>
                <div class="bg-red-50/80 backdrop-blur-sm border-l-4 border-red-500 rounded-lg p-4 mb-6">
                  <div class="flex items-start">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h3 class="text-sm font-semibold text-red-800 mb-2">
                        <%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:
                      </h3>
                      <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                        <% @tag.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Tag Name -->
              <div class="space-y-2">
                <%= form.label :name, class: "block text-sm font-semibold text-gray-700" do %>
                  Tag Name
                  <span class="text-red-500">*</span>
                <% end %>
                <%= form.text_field :name,
                    class: "w-full px-4 py-3 bg-white/80 border-2 border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all duration-200 text-gray-900 placeholder-gray-400",
                    placeholder: "e.g., Ruby on Rails, Web Development, Tutorial",
                    required: true,
                    autofocus: true %>
                <p class="text-xs text-gray-500 mt-1">
                  <svg class="inline w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Use descriptive, specific tags to help readers find content
                </p>
              </div>

              <!-- URL Slug Display -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700">
                  Current URL Slug
                </label>
                <div class="flex items-center gap-2">
                  <code class="flex-1 px-4 py-3 bg-gray-100 text-gray-800 rounded-lg font-mono text-sm"><%= @tag.slug %></code>
                  <button type="button" onclick="navigator.clipboard.writeText('<%= @tag.slug %>')" class="inline-flex items-center px-3 py-3 bg-indigo-50 hover:bg-indigo-100 text-indigo-600 rounded-lg transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </button>
                </div>
                <p class="text-xs text-gray-500">
                  <svg class="inline w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  The URL slug is automatically generated. Changing the tag name will update it.
                </p>
              </div>

              <!-- Warning Box if Tag is Used -->
              <% if @tag.usage_count > 0 %>
                <div class="bg-gradient-to-r from-amber-50/80 to-orange-50/80 backdrop-blur-sm border border-amber-200 rounded-xl p-4">
                  <div class="flex items-start gap-3">
                    <div class="flex-shrink-0">
                      <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="text-sm font-semibold text-amber-900 mb-1">Tag in Use</h4>
                      <p class="text-xs text-amber-800">
                        This tag is currently used by <%= pluralize(@tag.usage_count, 'post') %>. Changing the name will update it across all posts.
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Form Actions -->
              <div class="flex items-center justify-between pt-6 border-t border-gray-200/50">
                <%= link_to admin_blog_tag_path(@tag), class: "inline-flex items-center px-6 py-3 bg-white/80 hover:bg-gray-50/80 backdrop-blur-sm text-gray-700 font-semibold rounded-xl border-2 border-gray-300 hover:border-gray-400 transition-all shadow-sm hover:shadow" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                  </svg>
                  Cancel
                <% end %>

                <%= form.submit "Update Tag", class: "inline-flex items-center px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 cursor-pointer" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Tag Statistics -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              Statistics
            </h3>
          </div>
          <div class="p-4 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Total Posts</span>
              <span class="text-lg font-bold text-gray-900"><%= @tag.posts.count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Published Posts</span>
              <span class="text-lg font-bold text-green-600"><%= @tag.posts.published.count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Draft Posts</span>
              <span class="text-lg font-bold text-yellow-600"><%= @tag.posts.where(status: 'draft').count %></span>
            </div>
            <% if @tag.usage_count > 10 %>
              <div class="pt-4 border-t border-gray-200/50">
                <div class="flex items-center gap-2 px-3 py-2 bg-gradient-to-r from-amber-50 to-amber-100 rounded-lg">
                  <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <span class="text-sm font-semibold text-amber-800">Popular Tag</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Quick Actions
            </h3>
          </div>
          <div class="p-4 space-y-2">
            <%= link_to admin_blog_tag_path(@tag), class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-indigo-700 bg-indigo-50/80 hover:bg-indigo-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
              <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              View Tag
            <% end %>

            <%= link_to admin_blog_tags_path, class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-gray-700 bg-gray-50/80 hover:bg-gray-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
              <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              All Tags
            <% end %>

            <% if @tag.posts.empty? %>
              <%= button_to admin_blog_tag_path(@tag), method: :delete, data: { confirm: 'Are you sure you want to delete this tag?' }, class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-red-700 bg-red-50/80 hover:bg-red-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
                <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Tag
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Info Card -->
        <div class="bg-gradient-to-br from-blue-50/80 to-indigo-50/80 backdrop-blur-sm border border-blue-200 rounded-xl p-4">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h4 class="text-sm font-semibold text-blue-900 mb-1">Editing Tips</h4>
              <ul class="text-xs text-blue-800 space-y-1">
                <li>• Changes will be reflected across all posts using this tag</li>
                <li>• The URL slug will update automatically if you change the name</li>
                <li>• Tags cannot be deleted if they're in use by posts</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom styles for glassmorphism effects */
  @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
    .backdrop-blur-sm {
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
    }
  }

  /* Smooth gradient transitions */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }

  /* Form focus styles */
  input:focus, textarea:focus, select:focus {
    outline: none;
  }
</style>