<% content_for :title, "New Blog Tag - Admin Dashboard" %>
<% content_for :page_title, "New Blog Tag" %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to "Blog Tags", admin_blog_tags_path, class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500">New Tag</span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex items-center gap-4">
        <div class="hidden md:block flex-shrink-0">
          <div class="w-16 h-16 md:w-20 md:h-20 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
            Create New Tag
            <span class="inline-block">#️⃣</span>
          </h1>
          <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
            Add a new tag to organize your blog content
          </p>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6 md:p-8">
        <%= form_with(model: [:admin, @tag], local: true, class: "space-y-6") do |form| %>
          <!-- Error Messages -->
          <% if @tag.errors.any? %>
            <div class="bg-red-50/80 backdrop-blur-sm border-l-4 border-red-500 rounded-lg p-4 mb-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-semibold text-red-800 mb-2">
                    <%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:
                  </h3>
                  <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                    <% @tag.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Tag Name -->
          <div class="space-y-2">
            <%= form.label :name, class: "block text-sm font-semibold text-gray-700" do %>
              Tag Name
              <span class="text-red-500">*</span>
            <% end %>
            <%= form.text_field :name,
                class: "w-full px-4 py-3 bg-white/80 border-2 border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all duration-200 text-gray-900 placeholder-gray-400",
                placeholder: "e.g., Ruby on Rails, Web Development, Tutorial",
                required: true,
                autofocus: true %>
            <p class="text-xs text-gray-500 mt-1">
              <svg class="inline w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Use descriptive, specific tags to help readers find content
            </p>
          </div>

          <!-- Info Box -->
          <div class="bg-gradient-to-r from-blue-50/80 to-indigo-50/80 backdrop-blur-sm border border-blue-200 rounded-xl p-4">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-blue-900 mb-1">Tag Best Practices</h4>
                <ul class="text-xs text-blue-800 space-y-1">
                  <li>• Use clear, specific tag names that readers will understand</li>
                  <li>• Keep tags focused on a single concept or topic</li>
                  <li>• The URL slug will be automatically generated from the tag name</li>
                  <li>• Tags help readers discover related content across your blog</li>
                  <li>• Aim for 3-5 tags per post for optimal organization</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200/50">
            <%= link_to admin_blog_tags_path, class: "inline-flex items-center px-6 py-3 bg-white/80 hover:bg-gray-50/80 backdrop-blur-sm text-gray-700 font-semibold rounded-xl border-2 border-gray-300 hover:border-gray-400 transition-all shadow-sm hover:shadow" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Cancel
            <% end %>

            <%= form.submit "Create Tag", class: "inline-flex items-center px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help Card -->
    <div class="mt-6 bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Tag Organization Guidelines
        </h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="space-y-3">
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">Content Discovery</h4>
              <p class="text-sm text-gray-600">Tags help readers find related content across your blog and discover topics of interest</p>
            </div>
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">SEO Benefits</h4>
              <p class="text-sm text-gray-600">Well-organized tags improve site structure and help search engines understand your content</p>
            </div>
          </div>
          <div class="space-y-3">
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">Tag Examples</h4>
              <p class="text-sm text-gray-600">Good: "Ruby on Rails", "Web Performance", "API Design"<br>
              Avoid: "misc", "stuff", "other"</p>
            </div>
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">Reusable Tags</h4>
              <p class="text-sm text-gray-600">Create tags you'll use across multiple posts to build topic clusters</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom styles for glassmorphism effects */
  @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
    .backdrop-blur-sm {
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
    }
  }

  /* Smooth gradient transitions */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }

  /* Form focus styles */
  input:focus, textarea:focus, select:focus {
    outline: none;
  }
</style>