<% content_for :title, "#{@tag.name} - Blog Tags - Admin Dashboard" %>
<% content_for :page_title, @tag.name %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to "Blog Tags", admin_blog_tags_path, class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500"><%= @tag.name %></span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex items-center justify-between">
        <div class="flex-1 pr-4">
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold">
              #<%= @tag.name %>
            </h1>
            <span class="inline-flex items-center px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-bold border border-white/30">
              <%= pluralize(@tag.usage_count, 'post') %>
            </span>
          </div>
          <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
            Tag details and associated content
          </p>
        </div>
        <div class="flex items-center gap-3">
          <div class="hidden md:block flex-shrink-0">
            <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
          </div>
          <%= link_to edit_admin_blog_tag_path(@tag), class: 'inline-flex items-center px-4 md:px-6 py-2.5 md:py-3 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-xl hover:bg-white/30 shadow-lg transition-all transform hover:-translate-y-0.5 border border-white/30' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Tag
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Tag Information Card -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h2 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Tag Information
            </h2>
          </div>
          <div class="p-6">
            <dl class="grid grid-cols-1 gap-6">
              <!-- Tag Name -->
              <div>
                <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Tag Name</dt>
                <dd class="text-lg font-bold text-gray-900">#<%= @tag.name %></dd>
              </div>

              <!-- Slug -->
              <div>
                <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">URL Slug</dt>
                <dd class="flex items-center gap-2">
                  <code class="px-3 py-2 bg-gray-100 text-gray-800 rounded-lg font-mono text-sm"><%= @tag.slug %></code>
                  <button onclick="navigator.clipboard.writeText('<%= @tag.slug %>')" class="inline-flex items-center px-3 py-2 bg-indigo-50 hover:bg-indigo-100 text-indigo-600 rounded-lg transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </button>
                </dd>
              </div>

              <!-- Usage Count -->
              <div>
                <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Usage Count</dt>
                <dd>
                  <span class="inline-flex items-center px-4 py-2 text-lg font-bold rounded-xl shadow-sm
                    <%= if @tag.usage_count > 10
                          'bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300'
                        elsif @tag.usage_count > 5
                          'bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 border border-blue-300'
                        elsif @tag.usage_count > 0
                          'bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300'
                        else
                          'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                        end %>">
                    <%= @tag.usage_count %>
                    <% if @tag.usage_count > 10 %>
                      <svg class="w-5 h-5 ml-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    <% end %>
                  </span>
                </dd>
              </div>

              <!-- Timestamps -->
              <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200/50">
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Created</dt>
                  <dd class="text-sm text-gray-900">
                    <%= @tag.created_at.strftime("%B %d, %Y") %>
                    <span class="text-gray-500 block text-xs mt-1">
                      <%= time_ago_in_words(@tag.created_at) %> ago
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Last Updated</dt>
                  <dd class="text-sm text-gray-900">
                    <%= @tag.updated_at.strftime("%B %d, %Y") %>
                    <span class="text-gray-500 block text-xs mt-1">
                      <%= time_ago_in_words(@tag.updated_at) %> ago
                    </span>
                  </dd>
                </div>
              </div>
            </dl>
          </div>
        </div>

        <!-- Posts with this Tag -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-bold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
                Posts with this Tag
                <span class="ml-2 text-sm font-normal text-gray-600">(<%= @posts.count %>)</span>
              </h2>
            </div>
          </div>
          <div class="divide-y divide-gray-200/50">
            <% if @posts.any? %>
              <% @posts.each do |post| %>
                <div class="p-4 hover:bg-indigo-50/30 transition-all duration-200 group">
                  <div class="flex items-start gap-4">
                    <!-- Thumbnail -->
                    <% if post.featured_image.attached? %>
                      <div class="flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden shadow-md group-hover:shadow-lg transition-all">
                        <%= image_tag post.featured_image.variant(resize_to_limit: [200, 200]),
                            alt: post.title,
                            class: 'w-full h-full object-cover' %>
                      </div>
                    <% else %>
                      <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg transition-all">
                        <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    <% end %>

                    <!-- Post Info -->
                    <div class="flex-1 min-w-0">
                      <%= link_to admin_blog_post_path(post), class: 'block' do %>
                        <h4 class="text-base font-bold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-1 mb-1">
                          <%= post.title %>
                        </h4>
                      <% end %>
                      <div class="flex items-center gap-3 text-xs text-gray-500">
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <%= post.published_at&.strftime("%b %d, %Y") || "Draft" %>
                        </span>
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                          </svg>
                          <%= post.author&.name || "Unknown" %>
                        </span>
                        <span class="px-2 py-0.5 text-xs font-bold rounded-full
                          <%= case post.status
                              when 'published' then 'bg-green-100 text-green-800'
                              when 'draft' then 'bg-yellow-100 text-yellow-800'
                              when 'archived' then 'bg-gray-100 text-gray-800'
                              end %>">
                          <%= post.status.capitalize %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- View All Link -->
              <% if @tag.posts.count > 10 %>
                <div class="p-4 text-center bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm">
                  <%= link_to admin_blog_posts_path(tag: @tag.slug), class: 'inline-flex items-center px-6 py-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-white/80 hover:bg-indigo-50/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                    View All <%= @tag.posts.count %> Posts
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <div class="inline-flex items-center justify-center w-12 h-12 mb-3 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                  </svg>
                </div>
                <h3 class="text-sm font-semibold text-gray-900 mb-1">No posts yet</h3>
                <p class="text-sm text-gray-600">This tag hasn't been used in any published posts</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Quick Actions
            </h3>
          </div>
          <div class="p-4 space-y-2">
            <%= link_to edit_admin_blog_tag_path(@tag), class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-blue-700 bg-blue-50/80 hover:bg-blue-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
              <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Tag
            <% end %>

            <%= link_to admin_blog_tags_path, class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-gray-700 bg-gray-50/80 hover:bg-gray-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
              <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Tags
            <% end %>

            <% if @tag.posts.empty? %>
              <%= button_to admin_blog_tag_path(@tag), method: :delete, data: { confirm: 'Are you sure you want to delete this tag?' }, class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-red-700 bg-red-50/80 hover:bg-red-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
                <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Tag
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Tag Statistics -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              Statistics
            </h3>
          </div>
          <div class="p-4 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Total Posts</span>
              <span class="text-lg font-bold text-gray-900"><%= @tag.posts.count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Published Posts</span>
              <span class="text-lg font-bold text-green-600"><%= @tag.posts.published.count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Draft Posts</span>
              <span class="text-lg font-bold text-yellow-600"><%= @tag.posts.where(status: 'draft').count %></span>
            </div>
            <% if @tag.usage_count > 10 %>
              <div class="pt-4 border-t border-gray-200/50">
                <div class="flex items-center gap-2 px-3 py-2 bg-gradient-to-r from-amber-50 to-amber-100 rounded-lg">
                  <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <span class="text-sm font-semibold text-amber-800">Popular Tag</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom styles for glassmorphism effects */
  @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
    .backdrop-blur-sm {
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
    }
  }

  /* Smooth gradient transitions */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }

  /* Line clamp utilities */
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>