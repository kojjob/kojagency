<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">CRM Sync Dashboard</h1>
    <p class="mt-2 text-sm text-gray-600">Monitor and manage CRM synchronization status</p>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Syncs -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Syncs</p>
          <p class="text-3xl font-bold text-gray-900"><%= @sync_stats[:total_syncs] %></p>
        </div>
        <div class="p-3 bg-blue-100 rounded-full">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Synced -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Synced</p>
          <p class="text-3xl font-bold text-green-600"><%= @sync_stats[:synced] %></p>
        </div>
        <div class="p-3 bg-green-100 rounded-full">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Failed -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Failed</p>
          <p class="text-3xl font-bold text-red-600"><%= @sync_stats[:failed] %></p>
        </div>
        <div class="p-3 bg-red-100 rounded-full">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
      </div>
      <% if @sync_stats[:failed] > 0 %>
        <%= link_to 'Retry All', retry_failed_admin_crm_syncs_path, method: :post, class: 'text-sm text-red-600 hover:text-red-800 mt-2 inline-block', data: { confirm: 'Retry all failed syncs?' } %>
      <% end %>
    </div>

    <!-- Pending -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Pending</p>
          <p class="text-3xl font-bold text-yellow-600"><%= @sync_stats[:pending] %></p>
        </div>
        <div class="p-3 bg-yellow-100 rounded-full">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <% if @sync_stats[:pending] > 0 %>
        <%= link_to 'Sync All', sync_all_pending_admin_crm_syncs_path, method: :post, class: 'text-sm text-yellow-600 hover:text-yellow-800 mt-2 inline-block', data: { confirm: 'Queue all pending syncs?' } %>
      <% end %>
    </div>
  </div>

  <!-- CRM System Comparison -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- HubSpot Stats -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">HubSpot Integration</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Total Syncs:</span>
          <span class="text-sm font-medium text-gray-900"><%= @hubspot_stats[:total] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Synced:</span>
          <span class="text-sm font-medium text-green-600"><%= @hubspot_stats[:synced] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Failed:</span>
          <span class="text-sm font-medium text-red-600"><%= @hubspot_stats[:failed] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Pending:</span>
          <span class="text-sm font-medium text-yellow-600"><%= @hubspot_stats[:pending] %></span>
        </div>
        <div class="pt-4 border-t">
          <div class="flex justify-between items-center text-xs text-gray-500">
            <span>Success Rate:</span>
            <span><%= @hubspot_stats[:total] > 0 ? ((@hubspot_stats[:synced].to_f / @hubspot_stats[:total]) * 100).round(1) : 0 %>%</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Salesforce Stats -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Salesforce Integration</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Total Syncs:</span>
          <span class="text-sm font-medium text-gray-900"><%= @salesforce_stats[:total] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Synced:</span>
          <span class="text-sm font-medium text-green-600"><%= @salesforce_stats[:synced] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Failed:</span>
          <span class="text-sm font-medium text-red-600"><%= @salesforce_stats[:failed] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Pending:</span>
          <span class="text-sm font-medium text-yellow-600"><%= @salesforce_stats[:pending] %></span>
        </div>
        <div class="pt-4 border-t">
          <div class="flex justify-between items-center text-xs text-gray-500">
            <span>Success Rate:</span>
            <span><%= @salesforce_stats[:total] > 0 ? ((@salesforce_stats[:synced].to_f / @salesforce_stats[:total]) * 100).round(1) : 0 %>%</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sync Trends Chart -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Sync Activity (Last 7 Days)</h3>
    <canvas id="syncTrendsChart" height="100"></canvas>
  </div>

  <!-- Three Column Layout -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Recent Syncs -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h3 class="text-lg font-semibold text-gray-900">Recent Syncs</h3>
      </div>
      <div class="divide-y">
        <% @recent_syncs.each do |sync| %>
          <div class="p-4 hover:bg-gray-50">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-900"><%= sync.lead.full_name %></span>
              <span class="text-xs px-2 py-1 rounded-full <%= sync.synced? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= sync.crm_system.upcase %>
              </span>
            </div>
            <p class="text-xs text-gray-600">
              <%= sync.last_synced_at ? "Synced #{time_ago_in_words(sync.last_synced_at)} ago" : 'Never synced' %>
            </p>
          </div>
        <% end %>
      </div>
      <div class="p-4 border-t">
        <%= link_to 'View All Syncs', admin_crm_syncs_path, class: 'text-sm text-blue-600 hover:text-blue-800' %>
      </div>
    </div>

    <!-- Failed Syncs -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h3 class="text-lg font-semibold text-gray-900">Failed Syncs</h3>
      </div>
      <div class="divide-y">
        <% if @failed_syncs.any? %>
          <% @failed_syncs.each do |sync| %>
            <div class="p-4 hover:bg-gray-50">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-900"><%= sync.lead.full_name %></span>
                <span class="text-xs px-2 py-1 rounded-full bg-red-100 text-red-800">
                  <%= sync.crm_system.upcase %>
                </span>
              </div>
              <p class="text-xs text-gray-600 mb-2"><%= sync.sync_error&.truncate(60) %></p>
              <%= link_to 'Retry', retry_admin_crm_sync_path(sync), method: :post, class: 'text-xs text-red-600 hover:text-red-800' %>
            </div>
          <% end %>
        <% else %>
          <div class="p-4 text-center text-sm text-gray-500">
            No failed syncs
          </div>
        <% end %>
      </div>
      <% if @failed_syncs.any? %>
        <div class="p-4 border-t">
          <%= link_to 'Retry All Failed', retry_failed_admin_crm_syncs_path, method: :post, class: 'text-sm text-red-600 hover:text-red-800', data: { confirm: 'Retry all failed syncs?' } %>
        </div>
      <% end %>
    </div>

    <!-- Pending Syncs -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h3 class="text-lg font-semibold text-gray-900">Pending Syncs</h3>
      </div>
      <div class="divide-y">
        <% if @pending_syncs.any? %>
          <% @pending_syncs.each do |sync| %>
            <div class="p-4 hover:bg-gray-50">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-900"><%= sync.lead.full_name %></span>
                <span class="text-xs px-2 py-1 rounded-full bg-yellow-100 text-yellow-800">
                  <%= sync.crm_system.upcase %>
                </span>
              </div>
              <p class="text-xs text-gray-600">
                Created <%= time_ago_in_words(sync.created_at) %> ago
              </p>
            </div>
          <% end %>
        <% else %>
          <div class="p-4 text-center text-sm text-gray-500">
            No pending syncs
          </div>
        <% end %>
      </div>
      <% if @pending_syncs.any? %>
        <div class="p-4 border-t">
          <%= link_to 'Sync All Pending', sync_all_pending_admin_crm_syncs_path, method: :post, class: 'text-sm text-yellow-600 hover:text-yellow-800', data: { confirm: 'Queue all pending syncs?' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Sync Trends Chart
    const syncTrendsCtx = document.getElementById('syncTrendsChart').getContext('2d');
    new Chart(syncTrendsCtx, {
      type: 'line',
      data: {
        labels: <%= raw @sync_trends.map { |t| t[:date] }.to_json %>,
        datasets: [
          {
            label: 'Successful Syncs',
            data: <%= raw @sync_trends.map { |t| t[:synced] }.to_json %>,
            borderColor: 'rgb(34, 197, 94)',
            backgroundColor: 'rgba(34, 197, 94, 0.1)',
            tension: 0.3
          },
          {
            label: 'Failed Syncs',
            data: <%= raw @sync_trends.map { |t| t[:failed] }.to_json %>,
            borderColor: 'rgb(239, 68, 68)',
            backgroundColor: 'rgba(239, 68, 68, 0.1)',
            tension: 0.3
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: {
            position: 'bottom'
          },
          title: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });
  });
</script>