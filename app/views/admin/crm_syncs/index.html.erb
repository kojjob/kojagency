<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header with Actions -->
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">CRM Syncs</h1>
      <p class="mt-2 text-sm text-gray-600">Manage and monitor CRM synchronization</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to 'Dashboard', dashboard_admin_crm_syncs_path, class: 'px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700' %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= link_to 'All Syncs', admin_crm_syncs_path, class: "block px-4 py-2 text-center rounded-lg #{params[:status].blank? && params[:crm_system].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      </div>
      <div>
        <%= link_to 'Failed Syncs', admin_crm_syncs_path(status: 'failed'), class: "block px-4 py-2 text-center rounded-lg #{params[:status] == 'failed' ? 'bg-red-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      </div>
      <div>
        <%= link_to 'Pending Syncs', admin_crm_syncs_path(status: 'pending'), class: "block px-4 py-2 text-center rounded-lg #{params[:status] == 'pending' ? 'bg-yellow-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
      <div>
        <%= link_to 'HubSpot', admin_crm_syncs_path(crm_system: 'hubspot'), class: "block px-4 py-2 text-center rounded-lg #{params[:crm_system] == 'hubspot' ? 'bg-orange-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      </div>
      <div>
        <%= link_to 'Salesforce', admin_crm_syncs_path(crm_system: 'salesforce'), class: "block px-4 py-2 text-center rounded-lg #{params[:crm_system] == 'salesforce' ? 'bg-blue-700 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      </div>
    </div>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-600">Total</p>
      <p class="text-3xl font-bold text-gray-900"><%= @sync_stats[:total_syncs] %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-600">Synced</p>
      <p class="text-3xl font-bold text-green-600"><%= @sync_stats[:synced] %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-600">Failed</p>
      <p class="text-3xl font-bold text-red-600"><%= @sync_stats[:failed] %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-600">Pending</p>
      <p class="text-3xl font-bold text-yellow-600"><%= @sync_stats[:pending] %></p>
    </div>
  </div>

  <!-- Syncs Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lead</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CRM System</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CRM ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Synced</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @crm_syncs.each do |sync| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div>
                <div class="text-sm font-medium text-gray-900"><%= sync.lead.full_name %></div>
                <div class="text-sm text-gray-500"><%= sync.lead.email %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-sm font-medium <%= sync.crm_system == 'hubspot' ? 'text-orange-600' : 'text-blue-700' %>">
                <%= sync.crm_system.upcase %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case sync.sync_status %>
              <% when 'synced' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Synced
                </span>
              <% when 'failed' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Failed
                </span>
              <% when 'pending' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Pending
                </span>
              <% when 'syncing' %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  Syncing
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= sync.crm_id || 'N/A' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= sync.last_synced_at ? time_ago_in_words(sync.last_synced_at) + ' ago' : 'Never' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'View', admin_crm_sync_path(sync), class: 'text-blue-600 hover:text-blue-900 mr-3' %>
              <% if sync.failed? && sync.can_retry? %>
                <%= link_to 'Retry', retry_admin_crm_sync_path(sync), method: :post, class: 'text-red-600 hover:text-red-900', data: { confirm: 'Retry this sync?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-gray-200">
      <%= paginate @crm_syncs %>
    </div>
  </div>
</div>