<% content_for :title, "#{@category.name} - Blog Category - Admin Dashboard" %>
<% content_for :page_title, @category.name %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to "Blog Categories", admin_blog_categories_path, class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500"><%= @category.name %></span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="hidden md:block flex-shrink-0">
            <div class="w-16 h-16 md:w-20 md:h-20 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
              <%= @category.name %>
              <% if @category.parent.present? %>
                <span class="inline-block text-base md:text-lg font-normal opacity-90">in <%= @category.parent.name %></span>
              <% end %>
            </h1>
            <% if @category.description.present? %>
              <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
                <%= @category.description %>
              </p>
            <% end %>
          </div>
        </div>
        <div class="flex flex-wrap gap-2 md:gap-3">
          <%= link_to edit_admin_blog_category_path(@category), class: 'inline-flex items-center px-4 md:px-6 py-2 md:py-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white font-semibold rounded-xl transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
          <% end %>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Main Content Area -->
      <div class="lg:col-span-2 space-y-6 md:space-y-8">
        <!-- Category Information -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="p-6 md:p-8">
            <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Category Information
            </h2>

            <dl class="grid grid-cols-1 gap-6">
              <!-- Category Hierarchy -->
              <div>
                <dt class="text-sm font-semibold text-gray-500 mb-2">Category Path</dt>
                <dd class="text-base text-gray-900 font-medium flex items-center gap-2">
                  <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                  </svg>
                  <%= @category.full_path %>
                </dd>
              </div>

              <!-- URL Slug -->
              <div>
                <dt class="text-sm font-semibold text-gray-500 mb-2">URL Slug</dt>
                <dd class="flex items-center gap-3">
                  <code class="flex-1 px-4 py-3 bg-gray-100 text-gray-800 rounded-lg font-mono text-sm overflow-x-auto">
                    <%= @category.slug %>
                  </code>
                  <button type="button"
                          onclick="navigator.clipboard.writeText('<%= @category.slug %>'); this.innerHTML = '<svg class=\'w-5 h-5\' fill=\'currentColor\' viewBox=\'0 0 20 20\'><path d=\'M9 2a1 1 0 000 2h2a1 1 0 100-2H9z\'></path><path d=\'M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm9.707 5.707a1 1 0 00-1.414-1.414L9 12.586l-1.293-1.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z\'></path></svg>'; setTimeout(() => { this.innerHTML = '<svg class=\'w-5 h-5\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z\'></path></svg>' }, 2000)"
                          class="p-2 bg-indigo-100 hover:bg-indigo-200 text-indigo-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </button>
                </dd>
              </div>

              <!-- Description -->
              <% if @category.description.present? %>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 mb-2">Description</dt>
                  <dd class="text-base text-gray-900 leading-relaxed"><%= @category.description %></dd>
                </div>
              <% end %>

              <!-- Parent Category -->
              <% if @category.parent.present? %>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 mb-2">Parent Category</dt>
                  <dd>
                    <%= link_to admin_blog_category_path(@category.parent), class: 'inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-50 to-purple-50 hover:from-indigo-100 hover:to-purple-100 text-indigo-700 font-semibold rounded-lg transition-all shadow-sm hover:shadow' do %>
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                      </svg>
                      <%= @category.parent.name %>
                    <% end %>
                  </dd>
                </div>
              <% end %>

              <!-- Subcategories -->
              <% if @category.subcategories.any? %>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 mb-2">
                    Subcategories (<%= @category.subcategories.count %>)
                  </dt>
                  <dd class="flex flex-wrap gap-2">
                    <% @category.subcategories.each do |subcategory| %>
                      <%= link_to admin_blog_category_path(subcategory), class: 'inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-indigo-50 to-purple-50 hover:from-indigo-100 hover:to-purple-100 text-indigo-700 font-medium text-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                        <%= subcategory.name %>
                      <% end %>
                    <% end %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Recent Posts -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="p-6 md:p-8">
            <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
              Recent Posts
              <span class="ml-3 text-base font-normal text-gray-500">(<%= @category.posts_count %> published)</span>
            </h2>

            <% if @posts.any? %>
              <div class="space-y-4">
                <% @posts.each do |post| %>
                  <div class="group bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm hover:from-indigo-50/80 hover:to-purple-50/80 rounded-xl p-4 transition-all shadow-sm hover:shadow-lg">
                    <%= link_to admin_blog_post_path(post), class: 'block' do %>
                      <div class="flex items-start gap-4">
                        <!-- Featured Image Thumbnail -->
                        <% if post.featured_image.attached? %>
                          <div class="flex-shrink-0 w-24 h-24 rounded-lg overflow-hidden shadow-md">
                            <%= image_tag post.featured_image.variant(resize_to_fill: [96, 96]),
                                class: 'w-full h-full object-cover group-hover:scale-110 transition-transform duration-300',
                                alt: post.title %>
                          </div>
                        <% end %>

                        <!-- Post Info -->
                        <div class="flex-1 min-w-0">
                          <h3 class="text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition-colors mb-2 truncate">
                            <%= post.title %>
                          </h3>

                          <div class="flex flex-wrap items-center gap-3 text-xs text-gray-500 mb-2">
                            <span class="flex items-center gap-1">
                              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                              </svg>
                              <%= post.published_at&.strftime("%b %d, %Y") || "Draft" %>
                            </span>
                            <span class="px-2 py-0.5 text-xs font-bold rounded-full
                              <%= case post.status
                                  when 'published' then 'bg-green-100 text-green-800'
                                  when 'draft' then 'bg-yellow-100 text-yellow-800'
                                  when 'archived' then 'bg-gray-100 text-gray-800'
                                  end %>">
                              <%= post.status.capitalize %>
                            </span>
                            <span class="flex items-center gap-1">
                              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                              </svg>
                              <%= post.views_count || 0 %> views
                            </span>
                          </div>

                          <% if post.excerpt.present? %>
                            <p class="text-sm text-gray-600 line-clamp-2">
                              <%= post.excerpt %>
                            </p>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <!-- View All Link -->
              <% if @category.blog_posts.count > 10 %>
                <div class="mt-6 p-4 text-center bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm rounded-xl">
                  <%= link_to admin_blog_posts_path(category: @category.slug), class: 'inline-flex items-center px-6 py-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-white/80 hover:bg-indigo-50/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                    View All <%= @category.blog_posts.count %> Posts
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <!-- Empty State -->
              <div class="text-center py-12">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">No Posts Yet</h3>
                <p class="text-gray-600 mb-6">This category doesn't have any published posts yet.</p>
                <%= link_to new_admin_blog_post_path(category: @category.id), class: 'inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5' do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  Create First Post
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Quick Actions
            </h3>
            <div class="space-y-2">
              <%= link_to edit_admin_blog_category_path(@category), class: 'flex items-center justify-between px-4 py-3 bg-gradient-to-r from-gray-50 to-slate-50 hover:from-indigo-50 hover:to-purple-50 rounded-lg transition-all shadow-sm hover:shadow group' do %>
                <span class="flex items-center text-sm font-semibold text-gray-700 group-hover:text-indigo-700">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  Edit Category
                </span>
                <svg class="w-4 h-4 text-gray-400 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>

              <%= link_to new_admin_blog_post_path(category: @category.id), class: 'flex items-center justify-between px-4 py-3 bg-gradient-to-r from-gray-50 to-slate-50 hover:from-indigo-50 hover:to-purple-50 rounded-lg transition-all shadow-sm hover:shadow group' do %>
                <span class="flex items-center text-sm font-semibold text-gray-700 group-hover:text-indigo-700">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  New Post
                </span>
                <svg class="w-4 h-4 text-gray-400 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>

              <%= link_to admin_blog_posts_path(category: @category.slug), class: 'flex items-center justify-between px-4 py-3 bg-gradient-to-r from-gray-50 to-slate-50 hover:from-indigo-50 hover:to-purple-50 rounded-lg transition-all shadow-sm hover:shadow group' do %>
                <span class="flex items-center text-sm font-semibold text-gray-700 group-hover:text-indigo-700">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  View All Posts
                </span>
                <svg class="w-4 h-4 text-gray-400 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Statistics -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              Statistics
            </h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between py-3 border-b border-gray-200/50">
                <span class="text-sm font-medium text-gray-600">Total Posts</span>
                <span class="text-lg font-bold text-gray-900"><%= @category.blog_posts.count %></span>
              </div>
              <div class="flex items-center justify-between py-3 border-b border-gray-200/50">
                <span class="text-sm font-medium text-gray-600">Published Posts</span>
                <span class="text-lg font-bold text-green-600"><%= @category.blog_posts.published.count %></span>
              </div>
              <div class="flex items-center justify-between py-3 border-b border-gray-200/50">
                <span class="text-sm font-medium text-gray-600">Draft Posts</span>
                <span class="text-lg font-bold text-yellow-600"><%= @category.blog_posts.draft.count %></span>
              </div>
              <div class="flex items-center justify-between py-3">
                <span class="text-sm font-medium text-gray-600">Subcategories</span>
                <span class="text-lg font-bold text-indigo-600"><%= @category.subcategories.count %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Danger Zone -->
        <% if @category.blog_posts.empty? %>
          <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border-2 border-red-200 overflow-hidden">
            <div class="p-6">
              <h3 class="text-lg font-bold text-red-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                Danger Zone
              </h3>
              <p class="text-sm text-gray-600 mb-4">This category can be deleted as it has no posts.</p>
              <%= button_to admin_blog_category_path(@category),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this category? This action cannot be undone." },
                  class: 'w-full inline-flex items-center justify-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition-all shadow-md hover:shadow-lg' do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Category
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border-2 border-amber-200 overflow-hidden">
            <div class="p-6">
              <h3 class="text-lg font-bold text-amber-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
