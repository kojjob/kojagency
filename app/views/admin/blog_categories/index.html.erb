<% content_for :title, "Blog Categories - Admin Dashboard" %>
<% content_for :page_title, "Blog Categories" %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500">Blog Categories</span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex items-center justify-between">
        <div class="flex-1 pr-4">
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
            Blog Categories
            <span class="inline-block">üè∑Ô∏è</span>
          </h1>
          <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
            Organize your blog content with categories and subcategories
          </p>
        </div>
        <div class="flex items-center gap-4">
          <div class="hidden md:block flex-shrink-0">
            <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
          </div>
          <%= link_to new_admin_blog_category_path, class: 'inline-flex items-center px-4 md:px-6 py-2.5 md:py-3 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-xl hover:bg-white/30 shadow-lg transition-all transform hover:-translate-y-0.5 border border-white/30' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Category
          <% end %>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-6 md:mb-8">
      <!-- Total Categories -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 border border-blue-300">
              Total
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">
            <%= @stats[:total] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">All Categories</p>
        </div>
        <div class="bg-gradient-to-r from-blue-50/80 to-indigo-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-blue-100/50">
          <div class="text-xs text-gray-700">
            Organization: <span class="font-bold text-blue-600">Structure</span>
          </div>
        </div>
      </div>

      <!-- Top Level Categories -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 border border-purple-300">
              Parent
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent">
            <%= @stats[:top_level] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">Top Level</p>
        </div>
        <div class="bg-gradient-to-r from-purple-50/80 to-pink-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-purple-100/50">
          <div class="text-xs text-gray-700">
            Type: <span class="font-bold text-purple-600">Main Categories</span>
          </div>
        </div>
      </div>

      <!-- Categories with Posts -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-green-500 to-green-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300">
              Active
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">
            <%= @stats[:with_posts] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">With Posts</p>
        </div>
        <div class="bg-gradient-to-r from-green-50/80 to-emerald-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-green-100/50">
          <div class="text-xs text-gray-700">
            Status: <span class="font-bold text-green-600">In Use</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Categories List -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <% if @categories.any? %>
        <div class="divide-y divide-gray-200/50">
          <% @categories.each do |category| %>
            <div class="p-4 md:p-6 hover:bg-indigo-50/30 transition-all duration-200 group">
              <div class="flex items-start gap-4">
                <!-- Category Icon -->
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 md:w-16 md:h-16 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-xl flex items-center justify-center shadow-md group-hover:shadow-lg transition-all">
                    <svg class="w-6 h-6 md:w-8 md:h-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                  </div>
                </div>

                <!-- Category Info -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between mb-2">
                    <div class="flex-1 min-w-0 pr-4">
                      <%= link_to admin_blog_category_path(category), class: 'block' do %>
                        <h4 class="text-base md:text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                          <%= category.name %>
                        </h4>
                      <% end %>
                      <% if category.parent.present? %>
                        <div class="flex items-center gap-2 mt-1">
                          <span class="text-xs text-gray-500">Subcategory of:</span>
                          <%= link_to admin_blog_category_path(category.parent), class: 'inline-flex items-center text-xs font-semibold text-indigo-600 hover:text-indigo-700' do %>
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                            </svg>
                            <%= category.parent.name %>
                          <% end %>
                        </div>
                      <% else %>
                        <div class="mt-1">
                          <span class="inline-flex items-center px-2 py-0.5 text-xs font-bold rounded-full bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 border border-purple-300">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                            </svg>
                            Top Level Category
                          </span>
                        </div>
                      <% end %>
                    </div>

                    <!-- Posts Count Badge -->
                    <span class="flex-shrink-0 px-3 py-1 text-xs font-bold rounded-full shadow-sm
                      <%= if category.posts_count > 0
                            'bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300'
                          else
                            'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                          end %>">
                      <%= pluralize(category.posts_count, 'post') %>
                    </span>
                  </div>

                  <!-- Description -->
                  <% if category.description.present? %>
                    <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                      <%= category.description %>
                    </p>
                  <% end %>

                  <!-- Meta Information -->
                  <div class="flex flex-wrap items-center gap-3 md:gap-4 text-xs text-gray-500 mb-3">
                    <% if category.subcategories.any? %>
                      <div class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <%= pluralize(category.subcategories.count, 'subcategory') %>
                      </div>
                    <% end %>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      Created <%= time_ago_in_words(category.created_at) %> ago
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                      <%= category.slug %>
                    </div>
                  </div>

                  <!-- Subcategories Display -->
                  <% if category.subcategories.any? %>
                    <div class="mb-3">
                      <div class="flex flex-wrap gap-1.5">
                        <% category.subcategories.limit(5).each do |subcat| %>
                          <%= link_to admin_blog_category_path(subcat), class: 'inline-flex items-center px-2 py-1 text-xs font-medium text-purple-700 bg-purple-50/80 hover:bg-purple-100/80 backdrop-blur-sm rounded-lg transition-all' do %>
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            <%= subcat.name %>
                          <% end %>
                        <% end %>
                        <% if category.subcategories.count > 5 %>
                          <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-600 bg-gray-50 rounded-lg">
                            +<%= category.subcategories.count - 5 %> more
                          </span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>

                  <!-- Action Buttons -->
                  <div class="flex flex-wrap items-center gap-2">
                    <%= link_to admin_blog_category_path(category), class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-indigo-600 hover:text-indigo-700 bg-indigo-50/80 hover:bg-indigo-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                      View
                    <% end %>

                    <%= link_to edit_admin_blog_category_path(category), class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-blue-600 hover:text-blue-700 bg-blue-50/80 hover:bg-blue-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                      Edit
                    <% end %>

                    <% if category.blog_posts.empty? %>
                      <%= button_to admin_blog_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }, class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-red-600 hover:text-red-700 bg-red-50/80 hover:bg-red-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                      <% end %>
                    <% else %>
                      <span class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-gray-400 bg-gray-50/80 backdrop-blur-sm rounded-lg cursor-not-allowed" title="Cannot delete category with posts">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        Locked
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @categories.total_pages > 1 %>
          <div class="bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm px-4 md:px-6 py-4 border-t border-gray-200/50">
            <%= paginate @categories, theme: 'twitter-bootstrap-4' %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="p-8 md:p-12 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 md:w-20 md:h-20 mb-4 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full">
            <svg class="w-8 h-8 md:w-10 md:h-10 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No categories yet</h3>
          <p class="text-gray-600 mb-4">Get started by creating your first blog category</p>
          <%= link_to new_admin_blog_category_path, class: 'inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg transition-all transform hover:-translate-y-0.5' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create Your First Category
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  /* Custom styles for glassmorphism effects */
  @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
    .backdrop-blur-sm {
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
    }
  }

  /* Smooth gradient transitions */
  .bg-gradient-to-br,
  .bg-gradient-to-r {
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }

  /* Hover gradient animation */
  .group:hover .bg-gradient-to-br,
  .group:hover .bg-gradient-to-r {
    background-position: 100% 100%;
  }

  /* Line clamp utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>