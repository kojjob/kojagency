<% content_for :title, "Edit #{@category.name} - Blog Category - Admin Dashboard" %>
<% content_for :page_title, "Edit Category" %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to "Blog Categories", admin_blog_categories_path, class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to @category.name, admin_blog_category_path(@category), class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500">Edit</span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex items-center gap-4">
        <div class="hidden md:block flex-shrink-0">
          <div class="w-16 h-16 md:w-20 md:h-20 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
            Edit Category
            <span class="inline-block">✏️</span>
          </h1>
          <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
            Update category information and organization
          </p>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6 md:p-8">
        <%= form_with(model: [:admin, @category], local: true, class: "space-y-6") do |form| %>
          <!-- Error Messages -->
          <% if @category.errors.any? %>
            <div class="bg-red-50/80 backdrop-blur-sm border-l-4 border-red-500 rounded-lg p-4 mb-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-semibold text-red-800 mb-2">
                    <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:
                  </h3>
                  <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                    <% @category.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Warning if category has posts -->
          <% if @category.blog_posts.any? %>
            <div class="bg-gradient-to-r from-amber-50/80 to-orange-50/80 backdrop-blur-sm border-l-4 border-amber-500 rounded-lg p-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-semibold text-amber-800 mb-1">
                    Active Category
                  </h3>
                  <p class="text-sm text-amber-700">
                    This category is currently used by <%= pluralize(@category.blog_posts.count, 'post') %>.
                    Changes to the category will affect all associated posts.
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Current Slug Display -->
          <div class="bg-gradient-to-r from-blue-50/80 to-indigo-50/80 backdrop-blur-sm border border-blue-200 rounded-xl p-4">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-blue-900 mb-1">Current URL Slug</h4>
                <div class="flex items-center gap-3">
                  <code class="flex-1 px-4 py-3 bg-white/80 text-gray-800 rounded-lg font-mono text-sm overflow-x-auto">
                    <%= @category.slug %>
                  </code>
                  <button type="button"
                          onclick="navigator.clipboard.writeText('<%= @category.slug %>'); this.innerHTML = 'Copied!'; setTimeout(() => { this.innerHTML = 'Copy' }, 2000)"
                          class="px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-lg transition-colors whitespace-nowrap">
                    Copy
                  </button>
                </div>
                <p class="text-xs text-blue-800 mt-2">The slug will be updated automatically if you change the category name</p>
              </div>
            </div>
          </div>

          <!-- Category Name -->
          <div class="space-y-2">
            <%= form.label :name, class: "block text-sm font-semibold text-gray-700" do %>
              Category Name
              <span class="text-red-500">*</span>
            <% end %>
            <%= form.text_field :name,
                class: "w-full px-4 py-3 bg-white/80 border-2 border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all duration-200 text-gray-900 placeholder-gray-400",
                placeholder: "e.g., Web Development, Mobile Apps, Data Engineering",
                required: true,
                autofocus: true %>
            <p class="text-xs text-gray-500 mt-1">
              <svg class="inline w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Use clear, descriptive names that readers will understand
            </p>
          </div>

          <!-- Description -->
          <div class="space-y-2">
            <%= form.label :description, class: "block text-sm font-semibold text-gray-700" do %>
              Description
              <span class="text-gray-400 text-xs font-normal">(Optional)</span>
            <% end %>
            <%= form.text_area :description,
                rows: 4,
                class: "w-full px-4 py-3 bg-white/80 border-2 border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all duration-200 text-gray-900 placeholder-gray-400 resize-none",
                placeholder: "A brief description of this category and the topics it covers..." %>
            <p class="text-xs text-gray-500 mt-1">
              <svg class="inline w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Help readers understand what kind of content they'll find in this category
            </p>
          </div>

          <!-- Parent Category -->
          <div class="space-y-2">
            <%= form.label :parent_id, class: "block text-sm font-semibold text-gray-700" do %>
              Parent Category
              <span class="text-gray-400 text-xs font-normal">(Optional)</span>
            <% end %>
            <%= form.select :parent_id,
                options_for_select(
                  [['None (Top Level)', nil]] + @parent_categories.map { |c| [c.name, c.id] },
                  selected: @category.parent_id
                ),
                {},
                class: "w-full px-4 py-3 bg-white/80 border-2 border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all duration-200 text-gray-900" %>
            <p class="text-xs text-gray-500 mt-1">
              <svg class="inline w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Organize categories hierarchically (e.g., "Mobile Apps" under "Development")
            </p>
          </div>

          <!-- Category Hierarchy Preview -->
          <% if @category.parent.present? || @category.subcategories.any? %>
            <div class="bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm border border-gray-200 rounded-xl p-4">
              <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                </svg>
                Category Hierarchy
              </h4>

              <div class="text-sm text-gray-700 space-y-2">
                <% if @category.parent.present? %>
                  <div class="flex items-center gap-2">
                    <span class="text-gray-500">Parent:</span>
                    <span class="px-3 py-1 bg-white/80 rounded-lg font-medium"><%= @category.parent.name %></span>
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-lg font-medium"><%= @category.name %> (Current)</span>
                  </div>
                <% end %>

                <% if @category.subcategories.any? %>
                  <div>
                    <span class="text-gray-500 block mb-2">Subcategories (<%= @category.subcategories.count %>):</span>
                    <div class="flex flex-wrap gap-2 ml-6">
                      <% @category.subcategories.each do |subcategory| %>
                        <span class="px-3 py-1 bg-white/80 rounded-lg text-sm"><%= subcategory.name %></span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Info Box -->
          <div class="bg-gradient-to-r from-blue-50/80 to-indigo-50/80 backdrop-blur-sm border border-blue-200 rounded-xl p-4">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-blue-900 mb-1">Category Organization Tips</h4>
                <ul class="text-xs text-blue-800 space-y-1">
                  <li>• Keep category names concise and descriptive</li>
                  <li>• Use parent categories to organize related subcategories</li>
                  <li>• Consider your readers' browsing experience</li>
                  <li>• Avoid creating too many top-level categories</li>
                  <li>• Update descriptions to help with SEO and clarity</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200/50">
            <%= link_to admin_blog_category_path(@category), class: "inline-flex items-center px-6 py-3 bg-white/80 hover:bg-gray-50/80 backdrop-blur-sm text-gray-700 font-semibold rounded-xl border-2 border-gray-300 hover:border-gray-400 transition-all shadow-sm hover:shadow" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Cancel
            <% end %>

            <%= form.submit "Update Category", class: "inline-flex items-center px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help Card -->
    <div class="mt-6 bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Category Management Guidelines
        </h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="space-y-3">
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">Content Organization</h4>
              <p class="text-sm text-gray-600">Use categories to organize content logically and help readers find related posts easily</p>
            </div>
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">SEO Benefits</h4>
              <p class="text-sm text-gray-600">Well-organized categories with clear descriptions improve site structure and search engine visibility</p>
            </div>
          </div>
          <div class="space-y-3">
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">Hierarchy Strategy</h4>
              <p class="text-sm text-gray-600">Use parent-child relationships to create logical content groupings (e.g., "Backend" > "Ruby on Rails")</p>
            </div>
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">Naming Conventions</h4>
              <p class="text-sm text-gray-600">Choose names that are clear, consistent, and meaningful to your audience</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom styles for glassmorphism effects */
  @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
    .backdrop-blur-sm {
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
    }
  }

  /* Smooth gradient transitions */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }

  /* Form focus styles */
  input:focus, textarea:focus, select:focus {
    outline: none;
  }
</style>