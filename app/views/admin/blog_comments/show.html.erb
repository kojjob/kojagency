<% content_for :page_title, "Comment Details" %>
<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-4 w-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <%= link_to "Comments", admin_blog_comments_path, class: "text-gray-500 hover:text-gray-700 transition-colors" %>
  </li>
  <li class="flex items-center">
    <svg class="h-4 w-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-700">Comment #<%= @comment.id %></span>
  </li>
<% end %>

<div class="space-y-6">
  <!-- Actions Bar -->
  <div class="flex items-center justify-between">
    <%= link_to admin_blog_comments_path, class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-xl text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors' do %>
      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Comments
    <% end %>

    <div class="flex items-center gap-3">
      <% if @comment.pending? %>
        <%= button_to approve_admin_blog_comment_path(@comment), method: :patch, class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-xl text-sm font-medium text-white bg-green-600 hover:bg-green-700 transition-colors' do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Approve Comment
        <% end %>

        <%= button_to reject_admin_blog_comment_path(@comment), method: :patch, class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-xl text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition-colors' do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          Reject Comment
        <% end %>
      <% end %>

      <%= button_to admin_blog_comment_path(@comment), method: :delete,
          data: { confirm: 'Are you sure you want to delete this comment? This action cannot be undone.' },
          class: 'inline-flex items-center px-4 py-2 border border-red-300 rounded-xl text-sm font-medium text-red-700 bg-white hover:bg-red-50 transition-colors' do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Comment
      <% end %>
    </div>
  </div>

  <!-- Comment Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Comment Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Comment Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <!-- Header -->
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Comment Content</h2>
            <span class="px-3 py-1 text-xs font-semibold rounded-full
              <%= case @comment.status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'approved' then 'bg-green-100 text-green-800'
                  when 'spam' then 'bg-red-100 text-red-800'
                  when 'rejected' then 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @comment.status.capitalize %>
            </span>
          </div>
        </div>

        <!-- Comment Body -->
        <div class="p-6">
          <div class="prose prose-sm max-w-none">
            <%= simple_format(@comment.content, class: 'text-gray-700 leading-relaxed') %>
          </div>
        </div>

        <!-- Comment Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
          <div class="flex items-center justify-between text-sm text-gray-600">
            <div class="flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Posted <%= time_ago_in_words(@comment.created_at) %> ago
            </div>
            <div class="flex items-center gap-2">
              <%= @comment.content.length %> characters
            </div>
          </div>
        </div>
      </div>

      <!-- Blog Post Context -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Blog Post Context</h3>
        </div>
        <div class="p-6">
          <div class="flex items-start gap-4">
            <% if @comment.blog_post.featured_image.attached? %>
              <%= image_tag @comment.blog_post.featured_image.variant(resize_to_limit: [100, 100]), class: 'w-20 h-20 rounded-lg object-cover' %>
            <% else %>
              <div class="w-20 h-20 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
              </div>
            <% end %>

            <div class="flex-1 min-w-0">
              <h4 class="text-lg font-semibold text-gray-900 mb-2">
                <%= link_to @comment.blog_post.title, blog_post_path(@comment.blog_post), class: 'hover:text-indigo-600 transition-colors', target: '_blank' %>
              </h4>
              <div class="flex items-center gap-4 text-sm text-gray-600">
                <div class="flex items-center gap-1">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <%= @comment.blog_post.author&.name %>
                </div>
                <div class="flex items-center gap-1">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                  </svg>
                  <%= @comment.blog_post.comments_count %> comments
                </div>
              </div>
              <div class="mt-3 flex gap-2">
                <%= link_to 'View Post', blog_post_path(@comment.blog_post), target: '_blank', class: 'inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-lg text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors' %>
                <%= link_to 'Edit Post', edit_admin_blog_post_path(@comment.blog_post), class: 'inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-lg text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Replies -->
      <% if @comment.has_replies? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">
              Replies (<%= @comment.replies.count %>)
            </h3>
          </div>
          <div class="divide-y divide-gray-200">
            <% @comment.replies.each do |reply| %>
              <div class="p-6">
                <div class="flex items-start gap-3">
                  <img src="<%= reply.gravatar_url(32) %>" alt="<%= reply.author_name %>" class="h-8 w-8 rounded-full">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="text-sm font-semibold text-gray-900"><%= reply.author_name %></span>
                      <span class="text-xs text-gray-500"><%= time_ago_in_words(reply.created_at) %> ago</span>
                      <span class="px-2 py-0.5 text-xs font-semibold rounded-full
                        <%= case reply.status
                            when 'pending' then 'bg-yellow-100 text-yellow-800'
                            when 'approved' then 'bg-green-100 text-green-800'
                            when 'spam' then 'bg-red-100 text-red-800'
                            when 'rejected' then 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= reply.status.capitalize %>
                      </span>
                    </div>
                    <p class="text-sm text-gray-700 leading-relaxed"><%= reply.content %></p>
                    <div class="mt-2 flex gap-2">
                      <%= link_to 'View', admin_blog_comment_path(reply), class: 'text-xs text-indigo-600 hover:text-indigo-700' %>
                      <% if reply.pending? %>
                        <%= button_to 'Approve', approve_admin_blog_comment_path(reply), method: :patch, class: 'text-xs text-green-600 hover:text-green-700' %>
                        <%= button_to 'Reject', reject_admin_blog_comment_path(reply), method: :patch, class: 'text-xs text-red-600 hover:text-red-700' %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Author Information -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-sm font-semibold text-gray-900">Comment Author</h3>
        </div>
        <div class="p-6">
          <div class="flex flex-col items-center text-center">
            <img src="<%= @comment.gravatar_url(80) %>" alt="<%= @comment.author_name %>" class="h-20 w-20 rounded-full mb-4">
            <h4 class="text-lg font-semibold text-gray-900 mb-1"><%= @comment.author_name %></h4>

            <div class="w-full space-y-3 mt-4">
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:<%= @comment.author_email %>" class="hover:text-indigo-600 truncate"><%= @comment.author_email %></a>
              </div>

              <% if @comment.author_website.present? %>
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                  <%= link_to @comment.author_website, @comment.author_website, target: '_blank', rel: 'nofollow noopener', class: 'hover:text-indigo-600 truncate' %>
                </div>
              <% end %>
            </div>

            <!-- Author Stats -->
            <div class="w-full mt-6 pt-6 border-t border-gray-200 grid grid-cols-2 gap-4">
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">
                  <%= BlogComment.where(author_email: @comment.author_email).count %>
                </p>
                <p class="text-xs text-gray-500 mt-1">Total Comments</p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">
                  <%= BlogComment.where(author_email: @comment.author_email).approved.count %>
                </p>
                <p class="text-xs text-gray-500 mt-1">Approved</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Comment Metadata -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-sm font-semibold text-gray-900">Comment Metadata</h3>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Comment ID</label>
            <p class="text-sm text-gray-900">#<%= @comment.id %></p>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Status</label>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
              <%= case @comment.status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'approved' then 'bg-green-100 text-green-800'
                  when 'spam' then 'bg-red-100 text-red-800'
                  when 'rejected' then 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @comment.status.capitalize %>
            </span>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Created</label>
            <p class="text-sm text-gray-900"><%= @comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            <p class="text-xs text-gray-500"><%= time_ago_in_words(@comment.created_at) %> ago</p>
          </div>

          <% if @comment.updated_at != @comment.created_at %>
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Last Updated</label>
              <p class="text-sm text-gray-900"><%= @comment.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(@comment.updated_at) %> ago</p>
            </div>
          <% end %>

          <% if @comment.parent.present? %>
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Parent Comment</label>
              <%= link_to admin_blog_comment_path(@comment.parent), class: 'text-sm text-indigo-600 hover:text-indigo-700' do %>
                Reply to <%= @comment.parent.author_name %> â†’
              <% end %>
            </div>
          <% end %>

          <% if @comment.has_replies? %>
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Replies</label>
              <p class="text-sm text-gray-900"><%= @comment.replies.count %> <%= 'reply'.pluralize(@comment.replies.count) %></p>
            </div>
          <% end %>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Depth Level</label>
            <p class="text-sm text-gray-900">Level <%= @comment.depth %></p>
            <% if @comment.max_depth_reached? %>
              <p class="text-xs text-amber-600 mt-1">Maximum nesting depth reached</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-sm font-semibold text-gray-900">Quick Actions</h3>
        </div>
        <div class="p-6 space-y-2">
          <%= link_to blog_post_path(@comment.blog_post, anchor: "comment-#{@comment.id}"), target: '_blank', class: 'flex items-center gap-2 px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors' do %>
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            View on Blog Post
          <% end %>

          <%= link_to admin_blog_comments_path(author_email: @comment.author_email), class: 'flex items-center gap-2 px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors' do %>
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            View All by Author
          <% end %>

          <%= link_to admin_blog_comments_path(post_id: @comment.blog_post_id), class: 'flex items-center gap-2 px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors' do %>
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            View All on Post
          <% end %>

          <% if @comment.parent.present? %>
            <%= link_to admin_blog_comment_path(@comment.parent), class: 'flex items-center gap-2 px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors' do %>
              <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
              </svg>
              View Parent Comment
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>