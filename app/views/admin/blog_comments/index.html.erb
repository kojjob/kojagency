<% content_for :title, "Admin - Blog Comments" %>
<% content_for :body_class, "admin-blog-comments" %>
<% content_for :page_title, "Blog Comments Management" %>
<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-4 w-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <span class="text-gray-600">Comments</span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Page Header -->
    <div class="mb-6 md:mb-8">
      <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl">
        <div class="flex items-center justify-between">
          <div class="flex-1 pr-4">
            <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
              Comment Moderation
              <span class="inline-block">ðŸ’¬</span>
            </h1>
            <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
              Review and moderate blog comments to maintain quality discussions
            </p>
          </div>
          <div class="hidden md:block flex-shrink-0">
            <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-6">
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
    <!-- Pending Comments -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
      <div class="p-4 md:p-6">
        <div class="flex items-center justify-between mb-3 md:mb-4">
          <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
            <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300">
            Pending
          </span>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-yellow-600 to-yellow-800 bg-clip-text text-transparent">
          <%= @comments.pending.count %>
        </h3>
        <p class="text-sm font-medium text-gray-600 mt-1">Pending Review</p>
      </div>
      <div class="bg-gradient-to-r from-yellow-50/80 to-amber-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-yellow-100/50">
        <div class="text-xs text-gray-700">
          Awaiting: <span class="font-bold text-yellow-600">Moderation</span>
        </div>
      </div>
    </div>

    <!-- Approved Comments -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
      <div class="p-4 md:p-6">
        <div class="flex items-center justify-between mb-3 md:mb-4">
          <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-green-500 to-green-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
            <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300">
            Active
          </span>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">
          <%= @comments.approved.count %>
        </h3>
        <p class="text-sm font-medium text-gray-600 mt-1">Approved</p>
      </div>
      <div class="bg-gradient-to-r from-green-50/80 to-emerald-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-green-100/50">
        <div class="text-xs text-gray-700">
          Live: <span class="font-bold text-green-600">Published</span>
        </div>
      </div>
    </div>

    <!-- Spam Comments -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
      <div class="p-4 md:p-6">
        <div class="flex items-center justify-between mb-3 md:mb-4">
          <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-red-500 to-red-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
            <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-red-100 to-red-200 text-red-800 border border-red-300">
            Flagged
          </span>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-red-600 to-red-800 bg-clip-text text-transparent">
          <%= @comments.where(status: :spam).count %>
        </h3>
        <p class="text-sm font-medium text-gray-600 mt-1">Spam</p>
      </div>
      <div class="bg-gradient-to-r from-red-50/80 to-pink-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-red-100/50">
        <div class="text-xs text-gray-700">
          Marked: <span class="font-bold text-red-600">Spam</span>
        </div>
      </div>
    </div>

    <!-- Total Comments -->
    <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
      <div class="p-4 md:p-6">
        <div class="flex items-center justify-between mb-3 md:mb-4">
          <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
            <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 border border-purple-300">
            All
          </span>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent">
          <%= @comments.count %>
        </h3>
        <p class="text-sm font-medium text-gray-600 mt-1">Total Comments</p>
      </div>
      <div class="bg-gradient-to-r from-purple-50/80 to-pink-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-purple-100/50">
        <div class="text-xs text-gray-700">
          All time: <span class="font-bold text-purple-600">Comments</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl p-4 md:p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
        </svg>
        Filter Comments
      </h3>
    </div>

    <%= form_with url: admin_blog_comments_path, method: :get, class: 'space-y-4' do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <%= f.text_field :q,
            placeholder: 'Search by author, email, or content...',
            value: params[:q],
            class: 'w-full px-4 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm transition-all' %>
        </div>

        <!-- Status Filter -->
        <div>
          <%= f.select :status,
            options_for_select(
              [
                ['All Statuses', ''],
                ['Pending', 'pending'],
                ['Approved', 'approved'],
                ['Spam', 'spam'],
                ['Rejected', 'rejected']
              ],
              params[:status]
            ),
            {},
            class: 'w-full px-4 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm transition-all' %>
        </div>

        <!-- Blog Post Filter -->
        <div>
          <%= f.select :post_id,
            options_for_select(
              [['All Posts', '']] + BlogPost.published.pluck(:title, :id),
              params[:post_id]
            ),
            {},
            class: 'w-full px-4 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm transition-all' %>
        </div>
      </div>

      <div class="flex justify-between items-center">
        <%= f.submit 'Apply Filters',
          class: 'px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-indigo-800 shadow-lg transition-all transform hover:-translate-y-0.5' %>

        <%= link_to 'Reset', admin_blog_comments_path,
          class: 'px-6 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-white shadow-sm transition-all' %>
      </div>
    <% end %>
  </div>

  <!-- Comments List -->
  <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl overflow-hidden">
    <div class="px-4 md:px-6 py-3 md:py-4 border-b border-indigo-100/50 bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm">
      <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
        </svg>
        Comments
      </h3>
    </div>

    <% if @comments.any? %>
      <div class="divide-y divide-gray-100/50">
        <% @comments.each do |comment| %>
          <div class="p-4 md:p-6 hover:bg-indigo-50/30 transition-all duration-200 group">
            <div class="flex items-start justify-between">
              <!-- Comment Info -->
              <div class="flex-1 min-w-0">
                <!-- Author Info -->
                <div class="flex items-center gap-3 mb-3">
                  <img src="<%= comment.gravatar_url(40) %>" alt="<%= comment.author_name %>" class="h-10 w-10 rounded-full ring-2 ring-white shadow-md group-hover:ring-indigo-200 transition-all">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2">
                      <h3 class="text-sm font-semibold text-gray-900">
                        <%= comment.author_name %>
                      </h3>
                      <% if comment.author_website.present? %>
                        <%= link_to comment.author_website, target: '_blank', rel: 'nofollow noopener', class: 'text-gray-400 hover:text-indigo-600 transition-colors' do %>
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-500"><%= comment.author_email %></p>
                  </div>
                </div>

                <!-- Comment Content -->
                <div class="mb-3">
                  <p class="text-gray-700 text-sm leading-relaxed"><%= comment.content %></p>
                </div>

                <!-- Comment Meta -->
                <div class="flex items-center gap-4 text-xs text-gray-500">
                  <div class="flex items-center gap-1">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= time_ago_in_words(comment.created_at) %> ago
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                    <%= link_to comment.blog_post.title, blog_post_path(comment.blog_post), class: 'hover:text-indigo-600 transition-colors', target: '_blank' %>
                  </div>
                  <% if comment.parent.present? %>
                    <div class="flex items-center gap-1">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                      </svg>
                      Reply to <%= comment.parent.author_name %>
                    </div>
                  <% end %>
                  <% if comment.has_replies? %>
                    <div class="flex items-center gap-1">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
                      </svg>
                      <%= comment.replies.count %> <%= 'reply'.pluralize(comment.replies.count) %>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Status Badge and Actions -->
              <div class="flex flex-col items-end gap-3 ml-4">
                <!-- Status Badge -->
                <span class="px-3 py-1 text-xs font-bold rounded-full shadow-sm
                  <%= case comment.status
                      when 'pending' then 'bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300'
                      when 'approved' then 'bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300'
                      when 'spam' then 'bg-gradient-to-r from-red-100 to-red-200 text-red-800 border border-red-300'
                      when 'rejected' then 'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                      end %>">
                  <%= comment.status.capitalize %>
                </span>

                <!-- Action Buttons -->
                <div class="flex items-center gap-2">
                  <%= link_to admin_blog_comment_path(comment), class: 'p-2 text-gray-600 hover:text-indigo-600 hover:bg-indigo-50/80 backdrop-blur-sm rounded-xl transition-all transform hover:scale-110 shadow-sm hover:shadow' do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>

                  <% if comment.pending? %>
                    <%= button_to approve_admin_blog_comment_path(comment), method: :patch, class: 'p-2 text-green-600 hover:text-green-700 hover:bg-green-50/80 backdrop-blur-sm rounded-xl transition-all transform hover:scale-110 shadow-sm hover:shadow' do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    <% end %>

                    <%= button_to reject_admin_blog_comment_path(comment), method: :patch, class: 'p-2 text-red-600 hover:text-red-700 hover:bg-red-50/80 backdrop-blur-sm rounded-xl transition-all transform hover:scale-110 shadow-sm hover:shadow' do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    <% end %>
                  <% end %>

                  <%= button_to admin_blog_comment_path(comment), method: :delete,
                      data: { confirm: 'Are you sure you want to delete this comment?' },
                      class: 'p-2 text-red-600 hover:text-red-700 hover:bg-red-50/80 backdrop-blur-sm rounded-xl transition-all transform hover:scale-110 shadow-sm hover:shadow' do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy %>
        <div class="px-4 md:px-6 py-3 md:py-4 bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm border-t border-gray-100/50">
          <%== pagy_nav(@pagy) if defined?(pagy_nav) %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16 md:py-20">
        <div class="inline-flex items-center justify-center w-20 h-20 md:w-24 md:h-24 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl md:rounded-3xl mb-6">
          <svg class="w-10 h-10 md:w-12 md:h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h3 class="text-lg md:text-xl font-bold text-gray-900 mb-2">No comments found</h3>
        <p class="text-sm md:text-base text-gray-600 max-w-md mx-auto mb-6">
          <% if params[:q].present? || params[:status].present? || params[:post_id].present? %>
            Try adjusting your filters or search query to find the comments you're looking for.
          <% else %>
            Comments will appear here when users start engaging with your blog posts. Encourage discussions to build community!
          <% end %>
        </p>
        <% if params[:q].present? || params[:status].present? || params[:post_id].present? %>
          <div class="flex justify-center">
            <%= link_to 'Clear all filters', admin_blog_comments_path, class: 'inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-indigo-800 shadow-lg transition-all transform hover:-translate-y-0.5' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
  </div>
</div>

<style>
  /* Custom styles for glassmorphism effects */
  @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
    .backdrop-blur-sm {
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
    }
  }

  /* Smooth gradient transitions */
  .bg-gradient-to-br,
  .bg-gradient-to-r {
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }

  /* Hover gradient animation */
  .group:hover .bg-gradient-to-br,
  .group:hover .bg-gradient-to-r {
    background-position: 100% 100%;
  }
</style>