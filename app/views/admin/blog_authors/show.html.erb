<% content_for :title, "#{@author.name} - Blog Authors - Admin Dashboard" %>
<% content_for :page_title, @author.name %>

<% content_for :breadcrumbs do %>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <%= link_to "Blog Authors", admin_blog_authors_path, class: "text-gray-500 hover:text-gray-700" %>
  </li>
  <li>
    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
  </li>
  <li>
    <span class="text-gray-500"><%= @author.name %></span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Header -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl mb-6 md:mb-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4 flex-1 pr-4">
          <!-- Avatar -->
          <div class="flex-shrink-0">
            <% if @author.avatar.attached? %>
              <%= image_tag @author.avatar.variant(resize_to_limit: [200, 200]),
                  alt: @author.name,
                  class: 'w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 rounded-full object-cover border-4 border-white shadow-xl' %>
            <% else %>
              <img src="<%= @author.display_avatar %>"
                   alt="<%= @author.name %>"
                   class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 rounded-full border-4 border-white shadow-xl">
            <% end %>
          </div>

          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold">
                <%= @author.name %>
              </h1>
              <% if @author.verified %>
                <span class="inline-flex items-center px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-bold border border-white/30">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Verified
                </span>
              <% end %>
            </div>
            <% if @author.title.present? %>
              <p class="text-indigo-100 text-sm md:text-base lg:text-lg mb-1">
                <%= @author.title %>
                <% if @author.company.present? %>
                  <span class="text-indigo-200">at <%= @author.company %></span>
                <% end %>
              </p>
            <% end %>
            <p class="text-indigo-100 text-sm">
              <%= pluralize(@author.posts_count, 'post') %> â€¢ <%= pluralize(@author.total_views, 'view') %>
            </p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <%= link_to edit_admin_blog_author_path(@author), class: 'inline-flex items-center px-4 md:px-6 py-2.5 md:py-3 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-xl hover:bg-white/30 shadow-lg transition-all transform hover:-translate-y-0.5 border border-white/30' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Author Information Card -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h2 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Author Information
            </h2>
          </div>
          <div class="p-6">
            <dl class="grid grid-cols-1 gap-6">
              <!-- Bio -->
              <% if @author.bio.present? %>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Biography</dt>
                  <dd class="text-base text-gray-900 leading-relaxed"><%= @author.bio %></dd>
                </div>
              <% end %>

              <!-- Contact Information -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Email</dt>
                  <dd>
                    <%= mail_to @author.email, @author.email,
                        class: "text-base text-indigo-600 hover:text-indigo-700 font-medium" %>
                  </dd>
                </div>

                <% if @author.website.present? %>
                  <div>
                    <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Website</dt>
                    <dd>
                      <%= link_to @author.website, @author.website,
                          target: "_blank",
                          class: "text-base text-indigo-600 hover:text-indigo-700 font-medium inline-flex items-center" do %>
                        <%= URI.parse(@author.website).host %>
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                      <% end %>
                    </dd>
                  </div>
                <% end %>
              </div>

              <!-- Social Media -->
              <% if @author.social_media.present? && @author.social_media.values.any?(&:present?) %>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Social Media</dt>
                  <dd class="flex items-center gap-3">
                    <% if @author.social_link(:twitter).present? %>
                      <%= link_to @author.social_link(:twitter),
                          target: "_blank",
                          class: 'inline-flex items-center justify-center w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-500 text-white rounded-lg hover:shadow-lg transition-all transform hover:-translate-y-0.5' do %>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"></path>
                        </svg>
                      <% end %>
                    <% end %>

                    <% if @author.social_link(:linkedin).present? %>
                      <%= link_to @author.social_link(:linkedin),
                          target: "_blank",
                          class: 'inline-flex items-center justify-center w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 text-white rounded-lg hover:shadow-lg transition-all transform hover:-translate-y-0.5' do %>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                        </svg>
                      <% end %>
                    <% end %>

                    <% if @author.social_link(:github).present? %>
                      <%= link_to @author.social_link(:github),
                          target: "_blank",
                          class: 'inline-flex items-center justify-center w-10 h-10 bg-gradient-to-br from-gray-700 to-gray-800 text-white rounded-lg hover:shadow-lg transition-all transform hover:-translate-y-0.5' do %>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </dd>
                </div>
              <% end %>

              <!-- Timestamps -->
              <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200/50">
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Joined</dt>
                  <dd class="text-sm text-gray-900">
                    <%= @author.created_at.strftime("%B %d, %Y") %>
                    <span class="text-gray-500 block text-xs mt-1">
                      <%= time_ago_in_words(@author.created_at) %> ago
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Last Updated</dt>
                  <dd class="text-sm text-gray-900">
                    <%= @author.updated_at.strftime("%B %d, %Y") %>
                    <span class="text-gray-500 block text-xs mt-1">
                      <%= time_ago_in_words(@author.updated_at) %> ago
                    </span>
                  </dd>
                </div>
              </div>
            </dl>
          </div>
        </div>

        <!-- Recent Posts -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-bold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
                Recent Posts
                <span class="ml-2 text-sm font-normal text-gray-600">(<%= @posts.count %>)</span>
              </h2>
            </div>
          </div>
          <div class="divide-y divide-gray-200/50">
            <% if @posts.any? %>
              <% @posts.each do |post| %>
                <div class="p-4 hover:bg-indigo-50/30 transition-all duration-200 group">
                  <div class="flex items-start gap-4">
                    <!-- Thumbnail -->
                    <% if post.featured_image.attached? %>
                      <div class="flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden shadow-md group-hover:shadow-lg transition-all">
                        <%= image_tag post.featured_image.variant(resize_to_limit: [200, 200]),
                            alt: post.title,
                            class: 'w-full h-full object-cover' %>
                      </div>
                    <% else %>
                      <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg transition-all">
                        <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    <% end %>

                    <!-- Post Info -->
                    <div class="flex-1 min-w-0">
                      <%= link_to admin_blog_post_path(post), class: 'block' do %>
                        <h4 class="text-base font-bold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-1 mb-1">
                          <%= post.title %>
                        </h4>
                      <% end %>
                      <div class="flex items-center gap-3 text-xs text-gray-500">
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <%= post.published_at&.strftime("%b %d, %Y") || "Draft" %>
                        </span>
                        <span class="px-2 py-0.5 text-xs font-bold rounded-full
                          <%= case post.status
                              when 'published' then 'bg-green-100 text-green-800'
                              when 'draft' then 'bg-yellow-100 text-yellow-800'
                              when 'archived' then 'bg-gray-100 text-gray-800'
                              end %>">
                          <%= post.status.capitalize %>
                        </span>
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                          <%= post.views_count || 0 %> views
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- View All Link -->
              <% if @author.blog_posts.count > 10 %>
                <div class="p-4 text-center bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm">
                  <%= link_to admin_blog_posts_path(author: @author.slug), class: 'inline-flex items-center px-6 py-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-white/80 hover:bg-indigo-50/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                    View All <%= @author.blog_posts.count %> Posts
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <div class="inline-flex items-center justify-center w-12 h-12 mb-3 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                  </svg>
                </div>
                <h3 class="text-sm font-semibold text-gray-900 mb-1">No posts yet</h3>
                <p class="text-sm text-gray-600 mb-4">This author hasn't published any posts</p>
                <%= link_to new_admin_blog_post_path(author_id: @author.id),
                    class: 'inline-flex items-center px-4 py-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-indigo-50/80 hover:bg-indigo-100/80 backdrop-blur-sm rounded-lg transition-all' do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  Create First Post
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Quick Actions
            </h3>
          </div>
          <div class="p-4 space-y-2">
            <%= link_to edit_admin_blog_author_path(@author), class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-blue-700 bg-blue-50/80 hover:bg-blue-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
              <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Author
            <% end %>

            <%= link_to admin_blog_authors_path, class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-gray-700 bg-gray-50/80 hover:bg-gray-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
              <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Authors
            <% end %>

            <% if @author.blog_posts.empty? %>
              <%= button_to admin_blog_author_path(@author), method: :delete, data: { confirm: 'Are you sure you want to delete this author?' }, class: 'flex items-center w-full px-4 py-3 text-sm font-semibold text-red-700 bg-red-50/80 hover:bg-red-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow group' do %>
                <svg class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Author
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Statistics -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm px-6 py-4 border-b border-gray-200/50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
