<% content_for :title, "Admin - Blog Posts" %>
<% content_for :body_class, "admin-blog-posts" %>
<% content_for :page_title, "Blog Posts Management" %>
<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-4 w-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <span class="text-gray-600">Blog Posts</span>
  </li>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Page Header -->
    <div class="mb-6 md:mb-8">
      <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl">
        <div class="flex items-center justify-between">
          <div class="flex-1 pr-4">
            <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
              Blog Posts
              <span class="inline-block">üìù</span>
            </h1>
            <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
              Create, manage, and publish your blog content
            </p>
          </div>
          <div class="flex items-center gap-4">
            <div class="hidden md:block flex-shrink-0">
              <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
                <svg class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
              </div>
            </div>
            <%= link_to new_admin_blog_post_path, class: 'inline-flex items-center px-4 md:px-6 py-2.5 md:py-3 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-xl hover:bg-white/30 shadow-lg transition-all transform hover:-translate-y-0.5 border border-white/30' do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              New Post
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
        <!-- Published Posts -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
          <div class="p-4 md:p-6">
            <div class="flex items-center justify-between mb-3 md:mb-4">
              <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-green-500 to-green-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300">
                Live
              </span>
            </div>
            <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">
              <%= @posts.published.count %>
            </h3>
            <p class="text-sm font-medium text-gray-600 mt-1">Published Posts</p>
          </div>
          <div class="bg-gradient-to-r from-green-50/80 to-emerald-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-green-100/50">
            <div class="text-xs text-gray-700">
              Visible: <span class="font-bold text-green-600">Public</span>
            </div>
          </div>
        </div>

        <!-- Draft Posts -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
          <div class="p-4 md:p-6">
            <div class="flex items-center justify-between mb-3 md:mb-4">
              <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </div>
              <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300">
                Draft
              </span>
            </div>
            <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-yellow-600 to-yellow-800 bg-clip-text text-transparent">
              <%= @posts.draft.count %>
            </h3>
            <p class="text-sm font-medium text-gray-600 mt-1">Draft Posts</p>
          </div>
          <div class="bg-gradient-to-r from-yellow-50/80 to-amber-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-yellow-100/50">
            <div class="text-xs text-gray-700">
              Status: <span class="font-bold text-yellow-600">Unpublished</span>
            </div>
          </div>
        </div>

        <!-- Archived Posts -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
          <div class="p-4 md:p-6">
            <div class="flex items-center justify-between mb-3 md:mb-4">
              <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
              </div>
              <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300">
                Archived
              </span>
            </div>
            <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-gray-600 to-gray-800 bg-clip-text text-transparent">
              <%= @posts.archived.count %>
            </h3>
            <p class="text-sm font-medium text-gray-600 mt-1">Archived Posts</p>
          </div>
          <div class="bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-gray-100/50">
            <div class="text-xs text-gray-700">
              Hidden: <span class="font-bold text-gray-600">Not Visible</span>
            </div>
          </div>
        </div>

        <!-- Total Posts -->
        <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
          <div class="p-4 md:p-6">
            <div class="flex items-center justify-between mb-3 md:mb-4">
              <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 border border-purple-300">
                All
              </span>
            </div>
            <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent">
              <%= @posts.count %>
            </h3>
            <p class="text-sm font-medium text-gray-600 mt-1">Total Posts</p>
          </div>
          <div class="bg-gradient-to-r from-purple-50/80 to-pink-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-purple-100/50">
            <div class="text-xs text-gray-700">
              All time: <span class="font-bold text-purple-600">Content</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Filters and Search -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl p-4 md:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
            </svg>
            Filter Posts
          </h3>
        </div>

        <%= form_with url: admin_blog_posts_path, method: :get, class: 'space-y-4' do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Search -->
            <div class="md:col-span-2">
              <%= f.text_field :q,
                placeholder: 'Search by title, content, or author...',
                value: params[:q],
                class: 'w-full px-4 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm transition-all' %>
            </div>

            <!-- Status Filter -->
            <div>
              <%= f.select :status,
                options_for_select(
                  [
                    ['All Status', ''],
                    ['Published', 'published'],
                    ['Draft', 'draft'],
                    ['Archived', 'archived']
                  ],
                  params[:status]
                ),
                {},
                class: 'w-full px-4 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm transition-all' %>
            </div>
          </div>

          <div class="flex justify-between items-center">
            <%= f.submit 'Apply Filters',
              class: 'px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-indigo-800 shadow-lg transition-all transform hover:-translate-y-0.5' %>

            <%= link_to 'Reset', admin_blog_posts_path,
              class: 'px-6 py-2.5 bg-white/80 backdrop-blur-sm border border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-white shadow-sm transition-all' %>
          </div>
        <% end %>
      </div>

      <!-- Blog Posts Grid -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl overflow-hidden">
        <div class="px-4 md:px-6 py-3 md:py-4 border-b border-indigo-100/50 bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm">
          <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            Blog Posts
          </h3>
        </div>

        <% if @posts.any? %>
          <div class="divide-y divide-gray-100/50">
            <% @posts.each do |post| %>
              <div class="p-4 md:p-6 hover:bg-indigo-50/30 transition-all duration-200 group">
                <div class="flex items-start gap-4">
                  <!-- Featured Image -->
                  <% if post.featured_image.attached? %>
                    <div class="flex-shrink-0 w-24 h-24 md:w-32 md:h-32 rounded-xl overflow-hidden shadow-md group-hover:shadow-lg transition-all">
                      <%= image_tag post.featured_image.variant(resize_to_limit: [300, 300]),
                          alt: post.title,
                          class: 'w-full h-full object-cover' %>
                    </div>
                  <% else %>
                    <div class="flex-shrink-0 w-24 h-24 md:w-32 md:h-32 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-xl flex items-center justify-center shadow-md group-hover:shadow-lg transition-all">
                      <svg class="w-12 h-12 md:w-16 md:h-16 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  <% end %>

                  <!-- Post Info -->
                  <div class="flex-1 min-w-0">
                    <!-- Title and Featured Badge -->
                    <div class="flex items-start justify-between mb-2">
                      <div class="flex-1 min-w-0 pr-4">
                        <%= link_to admin_blog_post_path(post), class: 'block' do %>
                          <h4 class="text-base md:text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2">
                            <%= post.title %>
                          </h4>
                        <% end %>
                        <% if post.featured? %>
                          <span class="inline-flex items-center mt-1 px-2 py-0.5 text-xs font-bold rounded-full bg-gradient-to-r from-amber-100 to-amber-200 text-amber-800 border border-amber-300">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                            Featured
                          </span>
                        <% end %>
                      </div>

                      <!-- Status Badge -->
                      <span class="flex-shrink-0 px-3 py-1 text-xs font-bold rounded-full shadow-sm
                        <%= case post.status
                            when 'published' then 'bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300'
                            when 'draft' then 'bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300'
                            when 'archived' then 'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                            end %>">
                        <%= post.status.capitalize %>
                      </span>
                    </div>

                    <!-- Excerpt -->
                    <% if post.excerpt.present? %>
                      <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                        <%= post.excerpt %>
                      </p>
                    <% end %>

                    <!-- Meta Information -->
                    <div class="flex flex-wrap items-center gap-3 md:gap-4 text-xs text-gray-500 mb-3">
                      <div class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <%= post.author&.name || 'Unknown' %>
                      </div>

                      <% if post.category.present? %>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                          </svg>
                          <%= post.category.name %>
                        </div>
                      <% end %>

                      <% if post.published_at.present? %>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <%= post.published_at.strftime("%b %d, %Y") %>
                        </div>
                      <% end %>

                      <% if post.blog_comments.approved.any? %>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                          </svg>
                          <%= post.blog_comments.approved.count %> comments
                        </div>
                      <% end %>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap items-center gap-2">
                      <%= link_to admin_blog_post_path(post), class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-indigo-600 hover:text-indigo-700 bg-indigo-50/80 hover:bg-indigo-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View
                      <% end %>

                      <% if defined?(admin_signed_in?) && admin_signed_in? || (defined?(current_blog_author) && current_blog_author && post.author == current_blog_author) %>
                        <%= link_to edit_admin_blog_post_path(post), class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-blue-600 hover:text-blue-700 bg-blue-50/80 hover:bg-blue-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                          Edit
                        <% end %>

                        <%= link_to preview_admin_blog_post_path(post), target: '_blank', class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-gray-600 hover:text-gray-700 bg-gray-50/80 hover:bg-gray-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                          </svg>
                          Preview
                        <% end %>

                        <% if post.draft? %>
                          <%= button_to publish_admin_blog_post_path(post), method: :post, class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-green-600 hover:text-green-700 bg-green-50/80 hover:bg-green-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Publish
                          <% end %>
                        <% elsif post.published? %>
                          <%= button_to archive_admin_blog_post_path(post), method: :post, class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-amber-600 hover:text-amber-700 bg-amber-50/80 hover:bg-amber-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                            </svg>
                            Archive
                          <% end %>
                        <% end %>

                        <%= button_to admin_blog_post_path(post), method: :delete,
                            data: { confirm: 'Are you sure you want to delete this post?' },
                            class: 'inline-flex items-center px-3 py-1.5 text-xs font-semibold text-red-600 hover:text-red-700 bg-red-50/80 hover:bg-red-100/80 backdrop-blur-sm rounded-lg transition-all shadow-sm hover:shadow' do %>
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                          Delete
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Pagination -->
          <% if defined?(paginate) %>
            <div class="px-4 md:px-6 py-3 md:py-4 bg-gradient-to-r from-gray-50/80 to-slate-50/80 backdrop-blur-sm border-t border-gray-100/50">
              <%= paginate @posts %>
            </div>
          <% end %>
        <% else %>
          <!-- Empty State -->
          <div class="text-center py-16 md:py-20">
            <div class="inline-flex items-center justify-center w-20 h-20 md:w-24 md:h-24 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl md:rounded-3xl mb-6">
              <svg class="w-10 h-10 md:w-12 md:h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-bold text-gray-900 mb-2">No blog posts found</h3>
            <p class="text-sm md:text-base text-gray-600 max-w-md mx-auto mb-6">
              <% if params[:q].present? || params[:status].present? %>
                Try adjusting your filters or search query to find the posts you're looking for.
              <% else %>
                Start creating engaging content for your audience. Click the button below to create your first post!
              <% end %>
            </p>
            <div class="flex justify-center gap-4">
              <% if params[:q].present? || params[:status].present? %>
                <%= link_to 'Clear all filters', admin_blog_posts_path, class: 'inline-flex items-center px-6 py-3 bg-white/80 backdrop-blur-sm border border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-white shadow-sm transition-all' %>
              <% end %>
              <%= link_to new_admin_blog_post_path, class: 'inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-indigo-800 shadow-lg transition-all transform hover:-translate-y-0.5' do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create First Post
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

