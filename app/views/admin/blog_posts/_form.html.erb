<%= form_with model: [:admin, post], local: true, class: 'space-y-8' do |form| %>
  <% if post.errors.any? %>
    <div class="bg-gradient-to-r from-red-50 to-pink-50 border-l-4 border-red-500 rounded-xl p-6 shadow-md animate-shake">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="text-red-800 font-bold text-lg mb-2">
            <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% post.errors.full_messages.each do |message| %>
              <li class="flex items-start">
                <span class="inline-block w-2 h-2 bg-red-400 rounded-full mr-2 mt-1.5 flex-shrink-0"></span>
                <span><%= message %></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Content Section -->
  <div class="bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-100">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-6">
      <h2 class="text-2xl font-bold text-white flex items-center">
        <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Post Content
      </h2>
    </div>

    <div class="p-8 space-y-6">
      <div class="group">
        <%= form.label :title, class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-indigo-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
            </svg>
          </div>
          <%= form.text_field :title,
              placeholder: "Enter an engaging post title...",
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 text-gray-900 font-medium placeholder-gray-400' %>
        </div>
      </div>

      <div class="group">
        <%= form.label :excerpt, class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-indigo-600 transition-colors' %>
        <div class="relative">
          <div class="absolute top-3 left-3 pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h12"></path>
            </svg>
          </div>
          <%= form.text_area :excerpt,
              rows: 3,
              placeholder: "Write a compelling excerpt that will appear in blog listings...",
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 text-gray-900 placeholder-gray-400 resize-none' %>
        </div>
        <p class="mt-2 text-sm text-gray-500 flex items-center">
          <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Brief description that appears in blog listings and search results
        </p>
      </div>

      <div data-controller="lexxy" data-lexxy-config-value='{"toolbar": true, "placeholder": "Start writing your amazing blog post...", "features": {"markdown": true, "mentions": false, "links": true, "formatting": true}}' class="group">
        <%= form.label :rich_content, 'Content', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-indigo-600 transition-colors' %>
        <div class="border-2 border-gray-200 rounded-xl overflow-hidden focus-within:border-indigo-500 focus-within:ring focus-within:ring-indigo-200 focus-within:ring-opacity-50 transition-all duration-200">
          <%= form.rich_text_area :rich_content,
              class: 'lexxy-editor min-h-[400px]',
              data: { lexxy_target: "editor" } %>
        </div>
      </div>
    </div>
  </div>

    <div class="grid grid-cols-2 gap-6">
      <div>
        <%= form.label :author_id, 'Author', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <% if @authors.any? %>
          <%= form.select :author_id,
              options_for_select(@authors.map { |a| [a.name, "BlogAuthor-#{a.id}"] }, post.author_type == 'BlogAuthor' ? "BlogAuthor-#{post.author_id}" : nil),
              { prompt: 'Select an author', include_blank: 'Or create new author below' },
              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        <% else %>
          <%= form.hidden_field :author_id, value: '' %>
          <p class="text-sm text-gray-500 mt-1">No authors exist yet. Enter a name below to create one.</p>
        <% end %>
      </div>

      <div>
        <%= form.label :category_id, class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= form.select :category_id,
            options_for_select(@categories.map { |c| [c.name, c.id] }, post.category_id),
            { prompt: 'Select a category' },
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
      </div>
    </div>

    <!-- New Author Creation Fields -->
    <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-xl p-6 border border-purple-100 space-y-4">
      <h4 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Create New Author (Optional)
      </h4>

      <div class="grid grid-cols-2 gap-4">
        <div class="group">
          <%= label_tag :new_author_name, 'Author Name', class: 'block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= text_field_tag :new_author_name, nil, placeholder: 'Enter author name',
                class: 'pl-10 pr-3 py-2 block w-full rounded-lg border border-purple-200 focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 transition-all duration-200 bg-white' %>
          </div>
        </div>

        <div class="group">
          <%= label_tag :new_author_email, 'Author Email', class: 'block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= email_field_tag :new_author_email, nil, placeholder: 'author@example.com',
                class: 'pl-10 pr-3 py-2 block w-full rounded-lg border border-purple-200 focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 transition-all duration-200 bg-white' %>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= label_tag :new_author_title, 'Professional Title', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= text_field_tag :new_author_title, nil, placeholder: 'e.g. Senior Developer',
              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= label_tag :new_author_company, 'Company', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= text_field_tag :new_author_company, nil, placeholder: 'e.g. Koj Agency',
              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>
      </div>

      <div>
        <%= label_tag :new_author_bio, 'Bio', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= text_area_tag :new_author_bio, nil, rows: 3, placeholder: 'Brief author biography...',
            class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
      </div>

      <div class="grid grid-cols-3 gap-4">
        <div>
          <%= label_tag :new_author_location, 'Location', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= text_field_tag :new_author_location, nil, placeholder: 'e.g. San Francisco, CA',
              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= label_tag :new_author_expertise, 'Expertise (comma separated)', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= text_field_tag :new_author_expertise, nil, placeholder: 'Ruby, Rails, JavaScript',
              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>

        <div>
          <%= label_tag :new_author_follower_count, 'Followers', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= number_field_tag :new_author_follower_count, nil, placeholder: '0',
              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
        </div>
      </div>

      <div class="space-y-4">
        <h5 class="text-sm font-medium text-gray-700">Social Media Links</h5>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= label_tag :new_author_twitter, 'Twitter URL', class: 'block text-xs font-medium text-gray-600 mb-1' %>
            <%= text_field_tag :new_author_twitter, nil, placeholder: 'https://twitter.com/username',
                class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm' %>
          </div>
          <div>
            <%= label_tag :new_author_linkedin, 'LinkedIn URL', class: 'block text-xs font-medium text-gray-600 mb-1' %>
            <%= text_field_tag :new_author_linkedin, nil, placeholder: 'https://linkedin.com/in/username',
                class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm' %>
          </div>
          <div>
            <%= label_tag :new_author_github, 'GitHub URL', class: 'block text-xs font-medium text-gray-600 mb-1' %>
            <%= text_field_tag :new_author_github, nil, placeholder: 'https://github.com/username',
                class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm' %>
          </div>
          <div>
            <%= label_tag :new_author_website, 'Website URL', class: 'block text-xs font-medium text-gray-600 mb-1' %>
            <%= text_field_tag :new_author_website, nil, placeholder: 'https://example.com',
                class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm' %>
          </div>
        </div>
      </div>

      <div class="flex items-center">
        <%= check_box_tag :new_author_verified, '1', false, class: 'rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
        <%= label_tag :new_author_verified, 'Verified Author', class: 'ml-2 text-sm font-medium text-gray-700' %>
      </div>

      <p class="mt-2 text-sm text-gray-500">Fill these fields to create a new author if none exist or to add a new one</p>
    </div>

    <!-- Tags Selection -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-3">
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
          </svg>
          Tags
        </span>
      </label>
      <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
        <div class="flex flex-wrap gap-3">
          <%= form.collection_check_boxes :tag_ids, @tags || [], :id, :name do |b| %>
            <label class="inline-flex items-center px-4 py-2 rounded-full bg-white border-2 border-gray-200 hover:border-purple-400 cursor-pointer transition-all duration-200 hover:shadow-md">
              <%= b.check_box(class: 'sr-only peer') %>
              <span class="text-sm font-medium text-gray-700 peer-checked:text-purple-700">
                <%= b.label(class: '') %>
              </span>
              <svg class="w-4 h-4 ml-2 text-purple-600 hidden peer-checked:block" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </label>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Publishing Settings -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Status -->
      <div class="group">
        <%= form.label :status, class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <%= form.select :status,
              options_for_select([['ðŸ“ Draft', 'draft'], ['âœ… Published', 'published'], ['ðŸ“¦ Archived', 'archived']], post.status),
              {},
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 transition-all duration-200 bg-white' %>
        </div>
      </div>

      <!-- Published Date -->
      <div class="group">
        <%= form.label :published_at, 'Publish Date', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <%= form.datetime_field :published_at,
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 transition-all duration-200' %>
        </div>
        <p class="mt-2 text-sm text-gray-500 flex items-center">
          <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Leave blank to publish immediately
        </p>
      </div>
    </div>

    <!-- Display Options -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Hero Style -->
      <div class="group">
        <%= form.label :hero_style, 'Hero Style', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <%= form.select :hero_style,
              options_for_select([['ðŸŽ¨ Standard', 'standard'], ['ðŸ–¼ï¸ Fullscreen', 'fullscreen'], ['âœ¨ Minimal', 'minimal'], ['ðŸ“ Split', 'split']], post.hero_style),
              {},
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 transition-all duration-200 bg-white' %>
        </div>
        <p class="mt-2 text-sm text-gray-500">How the hero section appears on the post page</p>
      </div>

      <!-- Content Layout -->
      <div class="group">
        <%= form.label :content_layout, 'Content Layout', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"></path>
            </svg>
          </div>
          <%= form.select :content_layout,
              options_for_select([['ðŸ“– Classic', 'classic'], ['ðŸ“° Magazine', 'magazine'], ['ðŸŽ¯ Minimal', 'minimal'], ['ðŸƒ Cards', 'cards']], post.content_layout),
              {},
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 transition-all duration-200 bg-white' %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Content presentation style</p>
      </div>
    </div>

    <!-- Featured Post -->
    <div class="bg-gradient-to-r from-yellow-50 to-orange-50 rounded-xl p-6 border border-yellow-200">
      <label class="flex items-center cursor-pointer">
        <%= form.check_box :featured, class: 'sr-only peer' %>
        <div class="relative w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-gradient-to-r peer-checked:from-yellow-400 peer-checked:to-orange-400 transition-all duration-200">
          <div class="absolute top-0.5 left-[2px] bg-white w-5 h-5 rounded-full transition-all duration-200 peer-checked:translate-x-5 shadow-md"></div>
        </div>
        <span class="ml-3 font-semibold text-gray-700 flex items-center">
          <svg class="w-5 h-5 mr-2 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          Feature this post
        </span>
      </label>
      <p class="mt-2 ml-14 text-sm text-gray-600">Featured posts appear prominently on the blog homepage</p>
    </div>

    <!-- Featured Image -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Featured Image
      </label>
      <div class="relative group">
        <label class="flex flex-col items-center justify-center w-full h-48 border-2 border-gray-300 border-dashed rounded-xl cursor-pointer bg-gray-50 hover:bg-gray-100 transition-all duration-200 group-hover:border-purple-400">
          <%= form.file_field :featured_image, class: 'hidden' %>
          <div class="flex flex-col items-center justify-center pt-5 pb-6">
            <svg class="w-10 h-10 mb-3 text-gray-400 group-hover:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
            <p class="text-xs text-gray-400">PNG, JPG, GIF up to 10MB</p>
          </div>
        </label>
      </div>
      <% if post.featured_image.attached? %>
        <div class="mt-4 p-4 bg-gray-50 rounded-xl">
          <p class="text-sm font-medium text-gray-700 mb-2">Current Image:</p>
          <%= image_tag post.featured_image, class: 'rounded-lg shadow-md max-w-sm' %>
        </div>
      <% end %>
    </div>

    <!-- Additional Content Images -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"></path>
        </svg>
        Additional Content Images
      </label>
      <div class="relative group">
        <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-200 border-dashed rounded-xl cursor-pointer bg-gray-50 hover:bg-gray-100 transition-all duration-200 group-hover:border-purple-400">
          <%= form.file_field :content_images, multiple: true, class: 'hidden' %>
          <div class="flex flex-col items-center justify-center pt-5 pb-6">
            <svg class="w-8 h-8 mb-2 text-gray-400 group-hover:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <p class="text-sm text-gray-500"><span class="font-semibold">Add multiple images</span></p>
            <p class="text-xs text-gray-400">Hold Ctrl/Cmd to select multiple</p>
          </div>
        </label>
      </div>
      <% if post.content_images.attached? %>
        <div class="mt-4 p-4 bg-gray-50 rounded-xl">
          <p class="text-sm font-medium text-gray-700 mb-2">Current images:</p>
          <div class="grid grid-cols-4 gap-2">
            <% post.content_images.each do |image| %>
              <div class="relative group">
                <%= image_tag image, class: 'rounded-lg shadow-sm hover:shadow-md transition-shadow' %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- SEO Settings -->
  <div class="bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-100 mt-8">
    <div class="bg-gradient-to-r from-green-600 to-teal-600 p-6">
      <h2 class="text-2xl font-bold text-white flex items-center">
        <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        SEO Settings
      </h2>
    </div>

    <div class="p-8 space-y-6">
      <div class="group">
        <%= form.label :meta_title, 'SEO Title', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <%= form.text_field :meta_title,
              placeholder: 'Custom title for search engines...',
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 transition-all duration-200' %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Defaults to post title if not set (Max 60 characters)</p>
      </div>

      <div class="group">
        <%= form.label :meta_description, 'SEO Description', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors' %>
        <div class="relative">
          <div class="absolute top-3 left-3 pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h12"></path>
            </svg>
          </div>
          <%= form.text_area :meta_description,
              rows: 3,
              placeholder: 'Compelling description for search results...',
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 transition-all duration-200 resize-none' %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Defaults to excerpt if not set (Max 160 characters)</p>
      </div>

      <div class="group">
        <%= form.label :meta_keywords, 'Keywords', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
            </svg>
          </div>
          <%= form.text_field :meta_keywords,
              placeholder: 'keyword1, keyword2, keyword3...',
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 transition-all duration-200' %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Comma-separated list of keywords</p>
      </div>

      <div class="group">
        <%= form.label :canonical_url, 'Canonical URL', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
          </div>
          <%= form.text_field :canonical_url,
              placeholder: 'https://example.com/blog/post-url',
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 transition-all duration-200' %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Leave blank to use the default post URL</p>
      </div>
    </div>
  </div>

  <!-- Location Settings -->
  <div class="bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-100 mt-8">
    <div class="bg-gradient-to-r from-blue-600 to-cyan-600 p-6">
      <h2 class="text-2xl font-bold text-white flex items-center">
        <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Location Targeting (Optional)
      </h2>
    </div>

    <div class="p-8 space-y-6">
      <div class="grid md:grid-cols-2 gap-6">
        <div class="group">
          <%= form.label :country_code, 'Country Code', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
              </svg>
            </div>
            <%= form.text_field :country_code,
                placeholder: 'US',
                maxlength: 2,
                class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-all duration-200 uppercase' %>
          </div>
        </div>

        <div class="group">
          <%= form.label :region, 'State/Region', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            </div>
            <%= form.text_field :region,
                placeholder: 'California',
                class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-all duration-200' %>
          </div>
        </div>
      </div>

      <div class="group">
        <%= form.label :city, 'City', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors' %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <%= form.text_field :city,
              placeholder: 'San Francisco',
              class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-all duration-200' %>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="group">
          <%= form.label :latitude, 'Latitude', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </div>
            <%= form.number_field :latitude,
                step: :any,
                placeholder: '37.7749',
                class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-all duration-200' %>
          </div>
        </div>

        <div class="group">
          <%= form.label :longitude, 'Longitude', class: 'block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </div>
            <%= form.number_field :longitude,
                step: :any,
                placeholder: '-122.4194',
                class: 'pl-10 pr-3 py-3 block w-full rounded-xl border-2 border-gray-200 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-all duration-200' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-6 mt-8 border border-gray-200">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
      <div>
        <%= link_to admin_blog_posts_path, class: 'inline-flex items-center px-6 py-3 bg-white border-2 border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 shadow-sm' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          Cancel
        <% end %>
      </div>

      <div class="flex gap-3">
        <%= form.submit 'Save as Draft', name: 'save_draft', class: 'inline-flex items-center px-6 py-3 bg-white border-2 border-purple-600 rounded-xl text-purple-600 font-semibold hover:bg-purple-50 hover:border-purple-700 transition-all duration-200 shadow-sm cursor-pointer' %>
        <%= form.submit 'Publish Post', class: 'inline-flex items-center px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-xl font-semibold hover:from-purple-700 hover:to-pink-700 transform hover:scale-105 transition-all duration-200 shadow-lg cursor-pointer' %>
      </div>
    </div>
  </div>
<% end %>