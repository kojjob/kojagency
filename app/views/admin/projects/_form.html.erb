<%= form_with(model: [:admin, project], local: true, class: "space-y-6") do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
      <h3 class="font-bold mb-2"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h3>
      <ul class="list-disc list-inside">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Enterprise Analytics Platform" %>
  </div>

  <div>
    <%= form.label :client_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :client_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Tech Corp Inc" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 8, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "A comprehensive description of the project..." %>
    <p class="mt-1 text-sm text-gray-500">Minimum 50 characters required</p>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :project_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.url_field :project_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "https://example.com" %>
    </div>

    <div>
      <%= form.label :github_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.url_field :github_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "https://github.com/company/project" %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= form.label :completion_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.date_field :completion_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :duration_months, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :duration_months, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "6" %>
    </div>

    <div>
      <%= form.label :team_size, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :team_size, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "4" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status,
                      Project.statuses.keys.map { |s| [s.titleize, s] },
                      {},
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex items-end pb-2">
      <label class="flex items-center">
        <%= form.check_box :featured, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mr-2" %>
        <span class="text-sm font-medium text-gray-700">Featured Project</span>
      </label>
    </div>
  </div>

  <% if Technology.any? %>
    <div>
      <%= form.label :technology_ids, "Technologies", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="grid grid-cols-3 gap-2">
        <%= form.collection_check_boxes :technology_ids, Technology.ordered_by_name, :id, :name do |b| %>
          <label class="flex items-center">
            <%= b.check_box class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mr-2" %>
            <span class="text-sm text-gray-700"><%= b.text %></span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if Service.any? %>
    <div>
      <%= form.label :service_ids, "Services", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="grid grid-cols-2 gap-2">
        <%= form.collection_check_boxes :service_ids, Service.all, :id, :name do |b| %>
          <label class="flex items-center">
            <%= b.check_box class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mr-2" %>
            <span class="text-sm text-gray-700"><%= b.text %></span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex gap-4">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", admin_projects_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-6 rounded" %>
  </div>
<% end %>