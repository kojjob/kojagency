<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @project.title %></h1>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_project_path(@project), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", admin_projects_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="grid grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Client</h3>
        <p class="text-lg"><%= @project.client_name %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Status</h3>
        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(@project.status) %>">
          <%= @project.status.titleize %>
        </span>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Completion Date</h3>
        <p class="text-lg"><%= @project.formatted_completion_date %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Duration</h3>
        <p class="text-lg"><%= @project.display_duration %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Team Size</h3>
        <p class="text-lg"><%= @project.display_team_size %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Featured</h3>
        <p class="text-lg"><%= @project.featured? ? "Yes â˜…" : "No" %></p>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Description</h3>
      <div class="prose max-w-none">
        <%= simple_format(@project.description) %>
      </div>
    </div>

    <% if @project.project_url.present? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 mb-1">Project URL</h3>
        <p><%= link_to @project.project_url, @project.project_url, target: "_blank", class: "text-blue-600 hover:text-blue-900" %></p>
      </div>
    <% end %>

    <% if @project.github_url.present? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 mb-1">GitHub URL</h3>
        <p><%= link_to @project.github_url, @project.github_url, target: "_blank", class: "text-blue-600 hover:text-blue-900" %></p>
      </div>
    <% end %>

    <% if @project.technologies.any? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 mb-2">Technologies</h3>
        <div class="flex flex-wrap gap-2">
          <% @project.technologies.each do |technology| %>
            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              <%= technology.name %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @project.services.any? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 mb-2">Services</h3>
        <div class="flex flex-wrap gap-2">
          <% @project.services.each do |service| %>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
              <%= service.name %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 pt-6 border-t border-gray-200 flex justify-between items-center text-sm text-gray-500">
      <div>
        Created: <%= @project.created_at.strftime("%B %d, %Y") %>
      </div>
      <div>
        Last updated: <%= @project.updated_at.strftime("%B %d, %Y") %>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= button_to "Delete Project", admin_project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this project? This action cannot be undone." }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>