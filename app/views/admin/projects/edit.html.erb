<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Edit Project</h1>
    <div class="flex gap-2">
      <%= link_to "View", admin_project_path(@project), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", admin_projects_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= render 'form', project: @project %>
  </div>
</div>