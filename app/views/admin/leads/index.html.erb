<% content_for :title, "Lead Management" %>

<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <span class="ml-2 text-sm text-gray-500">Leads</span>
  </li>
<% end %>

<!-- Page Header -->
<div class="sm:flex sm:items-center sm:justify-between mb-8">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Lead Management</h1>
    <p class="text-gray-600">Track and manage your sales pipeline</p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to admin_leads_path(format: :csv, **request.query_parameters),
        class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" do %>
      <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
      Export CSV
    <% end %>
  </div>
</div>

<!-- Statistics Overview -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Leads</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">High Priority</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:high_priority] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Medium Priority</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:medium_priority] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">This Week</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:this_week] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">This Month</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:this_month] %></p>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="bg-white rounded-lg border border-gray-200 p-6 mb-8">
  <%= form_with url: admin_leads_path, method: :get, local: true, class: "space-y-4" do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Search -->
      <div>
        <%= form.label :q, "Search", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :q,
            value: params[:q],
            placeholder: "Name, email, company...",
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <!-- Priority Filter -->
      <div>
        <%= form.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :priority,
            options_for_select([
              ['All Priorities', ''],
              ['High Priority', 'high'],
              ['Medium Priority', 'medium'],
              ['Low Priority', 'low']
            ], params[:priority]),
            {},
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status,
            options_for_select([
              ['All Statuses', ''],
              ['Pending', 'pending'],
              ['Contacted', 'contacted'],
              ['Qualified', 'qualified'],
              ['Unqualified', 'unqualified'],
              ['Lost', 'lost']
            ], params[:status]),
            {},
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <!-- Project Type Filter -->
      <div>
        <%= form.label :project_type, "Project Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :project_type,
            options_for_select([
              ['All Project Types', ''],
              ['Web Development', 'web_development'],
              ['Mobile App', 'mobile_app'],
              ['Data Pipeline', 'data_pipeline'],
              ['Analytics Platform', 'analytics_platform'],
              ['Consulting', 'consulting'],
              ['Other', 'other']
            ], params[:project_type]),
            {},
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <!-- Date Range -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= form.label :start_date, "From Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :start_date,
            value: params[:start_date],
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :end_date, "To Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :end_date,
            value: params[:end_date],
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div class="flex items-end space-x-2">
        <%= form.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Clear", admin_leads_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Sorting Options -->
<div class="flex items-center justify-between mb-6">
  <div class="flex items-center space-x-4">
    <span class="text-sm text-gray-500">Sort by:</span>
    <%= link_to "Score (High to Low)", admin_leads_path(sort: 'score_desc', **request.query_parameters.except('sort')),
        class: "text-sm #{params[:sort] == 'score_desc' ? 'text-indigo-600 font-semibold' : 'text-gray-500 hover:text-gray-700'}" %>
    <%= link_to "Recent First", admin_leads_path(sort: 'created_desc', **request.query_parameters.except('sort')),
        class: "text-sm #{params[:sort] == 'created_desc' || params[:sort].blank? ? 'text-indigo-600 font-semibold' : 'text-gray-500 hover:text-gray-700'}" %>
    <%= link_to "Name", admin_leads_path(sort: 'name', **request.query_parameters.except('sort')),
        class: "text-sm #{params[:sort] == 'name' ? 'text-indigo-600 font-semibold' : 'text-gray-500 hover:text-gray-700'}" %>
  </div>

  <div class="text-sm text-gray-500">
    Showing <%= @leads.offset_value + 1 %>-<%= [@leads.offset_value + @leads.limit_value, @leads.total_count].min %> of <%= @leads.total_count %> leads
  </div>
</div>

<!-- Leads Table -->
<div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
  <% if @leads.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lead</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Budget</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @leads.each do |lead| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-indigo-500 flex items-center justify-center">
                      <span class="text-sm font-medium text-white">
                        <%= lead.first_name&.first&.upcase || lead.email&.first&.upcase || '?' %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to lead.full_name, admin_lead_path(lead), class: "hover:text-indigo-600" %>
                    </div>
                    <div class="text-sm text-gray-500"><%= lead.email %></div>
                    <% if lead.company.present? %>
                      <div class="text-xs text-gray-400"><%= lead.company %></div>
                    <% end %>
                  </div>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
                    case lead.priority_level
                    when 'high' then 'bg-red-100 text-red-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-gray-100 text-gray-800'
                    end
                  %>">
                    <%= lead.score %>
                  </span>
                  <span class="ml-2 text-xs text-gray-500"><%= lead.priority_level.capitalize %></span>
                </div>
              </td>

              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= lead.project_type_display %></div>
                <div class="text-sm text-gray-500">
                  <%= truncate(lead.project_description, length: 60) if lead.project_description.present? %>
                </div>
                <div class="text-xs text-gray-400 mt-1">
                  Timeline: <%= lead.timeline_display %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= lead.budget_range_display %></div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
                  case lead.lead_status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'contacted' then 'bg-blue-100 text-blue-800'
                  when 'qualified' then 'bg-green-100 text-green-800'
                  when 'unqualified' then 'bg-red-100 text-red-800'
                  when 'lost' then 'bg-gray-100 text-gray-800'
                  else 'bg-gray-100 text-gray-800'
                  end
                %>">
                  <%= lead.lead_status.humanize %>
                </span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <div><%= lead.created_at.strftime('%b %d, %Y') %></div>
                <div class="text-xs text-gray-400"><%= time_ago_in_words(lead.created_at) %> ago</div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center space-x-2">
                  <%= link_to admin_lead_path(lead), class: "text-indigo-600 hover:text-indigo-900" do %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                      <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>

                  <% if lead.lead_status == 'pending' %>
                    <%= link_to contact_admin_lead_path(lead), method: :patch,
                        class: "text-blue-600 hover:text-blue-900",
                        title: "Mark as Contacted" do %>
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                      </svg>
                    <% end %>
                  <% end %>

                  <% if lead.lead_status == 'contacted' %>
                    <%= link_to qualify_admin_lead_path(lead), method: :patch,
                        class: "text-green-600 hover:text-green-900",
                        title: "Mark as Qualified" do %>
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  <% end %>

                  <%= link_to admin_lead_path(lead), method: :delete,
                      class: "text-red-600 hover:text-red-900",
                      title: "Delete Lead",
                      confirm: "Are you sure you want to delete this lead?" do %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414L10 12.414l3.707-3.707z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="flex-1 flex justify-between sm:hidden">
          <% if @leads.prev_page %>
            <%= link_to "Previous", admin_leads_path(page: @leads.prev_page, **request.query_parameters.except('page')),
                class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
          <% if @leads.next_page %>
            <%= link_to "Next", admin_leads_path(page: @leads.next_page, **request.query_parameters.except('page')),
                class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>

        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Showing
              <span class="font-medium"><%= @leads.offset_value + 1 %></span>
              to
              <span class="font-medium"><%= [@leads.offset_value + @leads.limit_value, @leads.total_count].min %></span>
              of
              <span class="font-medium"><%= @leads.total_count %></span>
              results
            </p>
          </div>
          <div>
            <%= paginate @leads, theme: 'twitter_bootstrap_4' %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No leads found</h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if params.values.any?(&:present?) %>
          Try adjusting your search criteria or clearing the filters.
        <% else %>
          Get started by generating some leads through your website contact form.
        <% end %>
      </p>
      <% if params.values.any?(&:present?) %>
        <div class="mt-6">
          <%= link_to "Clear all filters", admin_leads_path,
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>