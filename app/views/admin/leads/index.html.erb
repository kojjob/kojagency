<% content_for :title, "Lead Management" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-blue-900 to-indigo-900 bg-clip-text text-transparent">
            Lead Management
          </h1>
          <p class="mt-2 text-gray-600 text-lg">
            Track and manage your sales pipeline with advanced analytics
          </p>
        </div>

        <div class="flex items-center space-x-4">
          <%= link_to admin_leads_path(format: :csv, **request.query_parameters),
              class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-600 to-teal-600 text-white font-medium rounded-xl hover:from-emerald-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 backdrop-blur-sm" do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
            Export CSV
          <% end %>
        </div>
      </div>
    </div>

    <!-- Statistics Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
      <!-- Total Leads -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Leads</p>
            <p class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">
              <%= @stats[:total] %>
            </p>
          </div>
        </div>
      </div>

      <!-- High Priority -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">High Priority</p>
            <p class="text-3xl font-bold bg-gradient-to-r from-red-600 to-red-800 bg-clip-text text-transparent">
              <%= @stats[:high_priority] %>
            </p>
          </div>
        </div>
      </div>

      <!-- Medium Priority -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Medium Priority</p>
            <p class="text-3xl font-bold bg-gradient-to-r from-yellow-600 to-yellow-800 bg-clip-text text-transparent">
              <%= @stats[:medium_priority] %>
            </p>
          </div>
        </div>
      </div>

      <!-- This Week -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">This Week</p>
            <p class="text-3xl font-bold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">
              <%= @stats[:this_week] %>
            </p>
          </div>
        </div>
      </div>

      <!-- This Month -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">This Month</p>
            <p class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent">
              <%= @stats[:this_month] %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters and Search -->
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 p-8 mb-8 shadow-xl">
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.707A1 1 0 013 7V4z"/>
          </svg>
          Filter & Search
        </h3>
        <p class="text-gray-600">Use the filters below to find specific leads</p>
      </div>

      <%= form_with url: admin_leads_path, method: :get, local: true, class: "space-y-6" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Search -->
          <div>
            <%= form.label :q, "Search", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.text_field :q,
                value: params[:q],
                placeholder: "Name, email, company...",
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-sm hover:shadow-md" %>
          </div>

          <!-- Priority Filter -->
          <div>
            <%= form.label :priority, "Priority", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.select :priority,
                options_for_select([
                  ['All Priorities', ''],
                  ['High Priority', 'high'],
                  ['Medium Priority', 'medium'],
                  ['Low Priority', 'low']
                ], params[:priority]),
                {},
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-sm hover:shadow-md" %>
          </div>

          <!-- Status Filter -->
          <div>
            <%= form.label :status, "Status", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.select :status,
                options_for_select([
                  ['All Statuses', ''],
                  ['Pending', 'pending'],
                  ['Contacted', 'contacted'],
                  ['Qualified', 'qualified'],
                  ['Unqualified', 'unqualified'],
                  ['Lost', 'lost']
                ], params[:status]),
                {},
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-sm hover:shadow-md" %>
          </div>

          <!-- Project Type Filter -->
          <div>
            <%= form.label :project_type, "Project Type", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.select :project_type,
                options_for_select([
                  ['All Project Types', ''],
                  ['Web Development', 'web_development'],
                  ['Mobile App', 'mobile_app'],
                  ['Data Pipeline', 'data_pipeline'],
                  ['Analytics Platform', 'analytics_platform'],
                  ['Consulting', 'consulting'],
                  ['Other', 'other']
                ], params[:project_type]),
                {},
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-sm hover:shadow-md" %>
          </div>
        </div>

        <!-- Date Range -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <%= form.label :start_date, "From Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.date_field :start_date,
                value: params[:start_date],
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-sm hover:shadow-md" %>
          </div>

          <div>
            <%= form.label :end_date, "To Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.date_field :end_date,
                value: params[:end_date],
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-sm hover:shadow-md" %>
          </div>

          <div class="flex items-end space-x-3">
            <%= form.submit "Filter", class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-xl hover:from-blue-700 hover:to-indigo-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
            <%= link_to "Clear", admin_leads_path, class: "flex-1 inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 bg-white/80 backdrop-blur-sm font-medium rounded-xl hover:bg-white transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sorting Options -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center space-x-6">
        <span class="text-sm font-medium text-gray-600">Sort by:</span>
        <%= link_to "Score (High to Low)", admin_leads_path(sort: 'score_desc', **request.query_parameters.except('sort')),
            class: "text-sm font-medium transition-colors #{params[:sort] == 'score_desc' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
        <%= link_to "Recent First", admin_leads_path(sort: 'created_desc', **request.query_parameters.except('sort')),
            class: "text-sm font-medium transition-colors #{params[:sort] == 'created_desc' || params[:sort].blank? ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
        <%= link_to "Name", admin_leads_path(sort: 'name', **request.query_parameters.except('sort')),
            class: "text-sm font-medium transition-colors #{params[:sort] == 'name' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
      </div>

      <div class="text-sm text-gray-500 bg-white/50 px-4 py-2 rounded-lg backdrop-blur-sm">
        Showing <%= @leads.offset_value + 1 %>-<%= [@leads.offset_value + @leads.limit_value, @leads.total_count].min %> of <%= @leads.total_count %> leads
      </div>
    </div>

    <!-- Leads Table -->
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl border border-white/20 overflow-hidden shadow-xl">
      <% if @leads.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200/50">
            <thead class="bg-gradient-to-r from-gray-50/80 to-blue-50/80 backdrop-blur-sm">
              <tr>
                <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Lead</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Score</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Project</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Budget</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Created</th>
                <th scope="col" class="relative px-6 py-4"><span class="sr-only">Actions</span></th>
              </tr>
            </thead>
            <tbody class="bg-white/50 backdrop-blur-sm divide-y divide-gray-200/30">
              <% @leads.each do |lead| %>
                <tr class="hover:bg-white/80 transition-all duration-200 group">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-12 w-12">
                        <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-200">
                          <span class="text-lg font-bold text-white">
                            <%= lead.first_name&.first&.upcase || lead.email&.first&.upcase || '?' %>
                          </span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                          <%= link_to lead.full_name, admin_lead_path(lead), class: "hover:text-blue-600" %>
                        </div>
                        <div class="text-sm text-gray-600"><%= lead.email %></div>
                        <% if lead.company.present? %>
                          <div class="text-xs text-gray-500 font-medium"><%= lead.company %></div>
                        <% end %>
                      </div>
                    </div>
                  </td>

                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold shadow-sm <%=
                        case lead.priority_level
                        when 'high' then 'bg-gradient-to-r from-red-100 to-red-200 text-red-800 border border-red-300'
                        when 'medium' then 'bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300'
                        else 'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                        end
                      %>">
                        <%= lead.score %>
                      </span>
                      <span class="ml-2 text-xs text-gray-600 font-medium bg-white/60 px-2 py-1 rounded-md">
                        <%= lead.priority_level.capitalize %>
                      </span>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900"><%= lead.project_type_display %></div>
                    <div class="text-sm text-gray-600 mt-1">
                      <%= truncate(lead.project_description, length: 60) if lead.project_description.present? %>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 bg-blue-50 px-2 py-1 rounded-md inline-block">
                      Timeline: <%= lead.timeline_display %>
                    </div>
                  </td>

                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-gray-900 bg-green-50 px-3 py-1 rounded-lg inline-block">
                      <%= lead.budget.humanize.gsub('_', ' ') %>
                    </div>
                  </td>

                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold shadow-sm <%=
                      case lead.lead_status
                      when 'pending' then 'bg-gradient-to-r from-yellow-100 to-amber-200 text-yellow-800 border border-yellow-300'
                      when 'contacted' then 'bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 border border-blue-300'
                      when 'qualified' then 'bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300'
                      when 'unqualified' then 'bg-gradient-to-r from-red-100 to-red-200 text-red-800 border border-red-300'
                      when 'lost' then 'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                      else 'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                      end
                    %>">
                      <%= lead.lead_status.humanize %>
                    </span>
                  </td>

                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <div class="font-medium"><%= lead.created_at.strftime('%b %d, %Y') %></div>
                    <div class="text-xs text-gray-500"><%= time_ago_in_words(lead.created_at) %> ago</div>
                  </td>

                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center space-x-3">
                      <%= link_to admin_lead_path(lead),
                          class: "p-2 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-all duration-200",
                          title: "View Lead" do %>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                        </svg>
                      <% end %>

                      <% if lead.lead_status == 'pending' %>
                        <%= link_to contact_admin_lead_path(lead), method: :patch,
                            class: "p-2 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-all duration-200",
                            title: "Mark as Contacted" do %>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                          </svg>
                        <% end %>
                      <% end %>

                      <% if lead.lead_status == 'contacted' %>
                        <%= link_to qualify_admin_lead_path(lead), method: :patch,
                            class: "p-2 text-green-600 hover:text-green-800 hover:bg-green-50 rounded-lg transition-all duration-200",
                            title: "Mark as Qualified" do %>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                        <% end %>
                      <% end %>

                      <%= link_to admin_lead_path(lead), method: :delete,
                          class: "p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-all duration-200",
                          title: "Delete Lead",
                          confirm: "Are you sure you want to delete this lead?" do %>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414L10 12.414l3.707-3.707z" clip-rule="evenodd"></path>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="bg-gradient-to-r from-gray-50/80 to-blue-50/80 backdrop-blur-sm px-6 py-4 border-t border-gray-200/50">
          <div class="flex items-center justify-between">
            <div class="flex-1 flex justify-between sm:hidden">
              <% if @leads.prev_page %>
                <%= link_to "Previous", admin_leads_path(page: @leads.prev_page, **request.query_parameters.except('page')),
                    class: "relative inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-xl text-gray-700 bg-white/80 hover:bg-white shadow-md hover:shadow-lg transition-all duration-200" %>
              <% end %>
              <% if @leads.next_page %>
                <%= link_to "Next", admin_leads_path(page: @leads.next_page, **request.query_parameters.except('page')),
                    class: "ml-3 relative inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-xl text-gray-700 bg-white/80 hover:bg-white shadow-md hover:shadow-lg transition-all duration-200" %>
              <% end %>
            </div>

            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div class="bg-white/60 px-4 py-2 rounded-lg backdrop-blur-sm">
                <p class="text-sm text-gray-700 font-medium">
                  Showing
                  <span class="font-bold text-blue-600"><%= @leads.offset_value + 1 %></span>
                  to
