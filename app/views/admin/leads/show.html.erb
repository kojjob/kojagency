<% content_for :title, "#{@lead.full_name} - Lead Details" %>

<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <%= link_to "Leads", admin_leads_path, class: "ml-2 text-sm text-gray-500 hover:text-gray-700 transition-colors duration-200" %>
  </li>
  <li class="flex items-center">
    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <span class="ml-2 text-sm text-gray-500"><%= @lead.full_name %></span>
  </li>
<% end %>

<!-- Enhanced Page Header with Glassmorphism -->
<div class="relative mb-12 mx-auto max-w-7xl">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/10 rounded-3xl blur-3xl"></div>

  <div class="relative bg-white/80 backdrop-blur-xl border border-white/20 rounded-3xl shadow-2xl p-8 transition-all duration-500 hover:shadow-3xl hover:bg-white/90">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="flex items-center space-x-6">
        <!-- Enhanced Avatar with Gradient Ring -->
        <div class="relative">
          <div class="absolute -inset-1 bg-gradient-to-r from-purple-500 to-blue-500 rounded-full blur opacity-75 group-hover:opacity-100 transition duration-500"></div>
          <div class="relative h-20 w-20 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center shadow-xl">
            <span class="text-2xl font-bold text-white">
              <%= @lead.first_name&.first&.upcase || @lead.email&.first&.upcase || '?' %>
            </span>
          </div>

          <!-- Status Indicator -->
          <div class="absolute -bottom-1 -right-1 h-6 w-6 rounded-full border-4 border-white <%=
            case @lead.lead_status
            when 'qualified' then 'bg-green-500'
            when 'contacted' then 'bg-blue-500'
            when 'pending' then 'bg-yellow-500'
            else 'bg-gray-400'
            end
          %> shadow-lg"></div>
        </div>

        <div class="space-y-2">
          <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
            <%= @lead.full_name %>
          </h1>
          <div class="flex items-center space-x-4 text-gray-600">
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <%= @lead.company %>
            </span>
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <%= @lead.email %>
            </span>
          </div>

          <!-- Priority Badge with Animation -->
          <div class="flex items-center space-x-3">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold transition-all duration-300 <%=
              case @lead.priority_level
              when 'high' then 'bg-red-100 text-red-800 border border-red-200 shadow-red-200/50 shadow-lg animate-pulse'
              when 'medium' then 'bg-yellow-100 text-yellow-800 border border-yellow-200 shadow-yellow-200/50 shadow-lg'
              else 'bg-green-100 text-green-800 border border-green-200 shadow-green-200/50 shadow-lg'
              end
            %>">
              <span class="w-2 h-2 rounded-full mr-2 <%=
                case @lead.priority_level
                when 'high' then 'bg-red-500'
                when 'medium' then 'bg-yellow-500'
                else 'bg-green-500'
                end
              %>"></span>
              <%= @lead.priority_level.titleize %> Priority
            </span>

            <!-- Score Badge -->
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-purple-600 to-blue-600 text-white shadow-lg">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
              Score: <%= @lead.score %>
            </span>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="mt-6 sm:mt-0 flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
        <%= link_to admin_leads_path, class: "group relative inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-xl text-gray-700 bg-white/80 backdrop-blur-sm hover:bg-white hover:shadow-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
          <svg class="-ml-1 mr-2 h-4 w-4 transition-transform duration-200 group-hover:-translate-x-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          Back to Leads
        <% end %>

        <%= link_to edit_admin_lead_path(@lead), class: "group relative inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-sm font-medium rounded-xl text-white shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
          <svg class="-ml-1 mr-2 h-4 w-4 transition-transform duration-200 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Lead
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Main Content Grid -->
<div class="max-w-7xl mx-auto space-y-8">
  <!-- Lead Score Dashboard -->
  <div class="bg-gradient-to-br from-white to-gray-50/50 backdrop-blur-xl border border-white/20 rounded-3xl shadow-2xl p-8 transition-all duration-500 hover:shadow-3xl">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
          Lead Score Analysis
        </h2>
        <p class="text-gray-600 mt-2">Comprehensive scoring breakdown with real-time updates</p>
      </div>
      <button
        onclick="refreshLeadScore()"
        class="group relative inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-600 text-white text-sm font-semibold rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500">
        <svg class="-ml-1 mr-2 h-5 w-5 transition-transform duration-300 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Recalculate Score
      </button>
    </div>

    <!-- Score Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <%
        budget_score = case @lead.budget
                      when 'under_10k' then 15
                      when '10k_25k' then 35
                      when '25k_50k' then 55
                      when '50k_100k' then 70
                      when '100k_250k' then 85
                      when '250k_plus' then 100
                      else 0
                      end

        timeline_score = case @lead.timeline
                        when 'asap' then 100
                        when '1_month' then 85
                        when '3_months' then 70
                        when '6_months' then 50
                        when '1_year' then 30
                        when 'flexible' then 20
                        else 0
                        end

        complexity_score = case @lead.project_type
                          when 'data_engineering' then 100
                          when 'analytics_platform' then 90
                          when 'technical_consulting' then 85
                          when 'mobile_development' then 75
                          when 'web_development' then 70
                          when 'other' then 50
                          else 50
                          end

        quality_score = 0
        quality_score += 20 if @lead.company.present? && @lead.company.strip.length > 2
        quality_score += 15 if @lead.phone.present?
        quality_score += 10 if @lead.website.present?
        quality_score += 20 if @lead.project_description.present? && @lead.project_description.length > 100
        quality_score = [quality_score, 100].min
      %>

      <!-- Budget Score Card -->
      <div class="relative overflow-hidden bg-gradient-to-br from-blue-50 to-indigo-100 rounded-2xl p-6 border border-blue-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 bg-blue-400/20 rounded-full"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-blue-500 rounded-xl shadow-lg">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <span class="text-2xl font-bold text-blue-600"><%= budget_score %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Budget Score</h3>
          <p class="text-sm text-gray-600"><%= @lead.budget_range_display %></p>
          <div class="mt-4 bg-white/50 rounded-full h-2 overflow-hidden">
            <div class="h-full bg-gradient-to-r from-blue-500 to-blue-600 transition-all duration-1000 ease-out" style="width: <%= budget_score %>%"></div>
          </div>
        </div>
      </div>

      <!-- Timeline Score Card -->
      <div class="relative overflow-hidden bg-gradient-to-br from-green-50 to-emerald-100 rounded-2xl p-6 border border-green-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 bg-green-400/20 rounded-full"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-green-500 rounded-xl shadow-lg">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="text-2xl font-bold text-green-600"><%= timeline_score %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Timeline Score</h3>
          <p class="text-sm text-gray-600"><%= @lead.timeline_display %></p>
          <div class="mt-4 bg-white/50 rounded-full h-2 overflow-hidden">
            <div class="h-full bg-gradient-to-r from-green-500 to-green-600 transition-all duration-1000 ease-out" style="width: <%= timeline_score %>%"></div>
          </div>
        </div>
      </div>

      <!-- Complexity Score Card -->
      <div class="relative overflow-hidden bg-gradient-to-br from-purple-50 to-violet-100 rounded-2xl p-6 border border-purple-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 bg-purple-400/20 rounded-full"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-purple-500 rounded-xl shadow-lg">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <span class="text-2xl font-bold text-purple-600"><%= complexity_score %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Complexity Score</h3>
          <p class="text-sm text-gray-600"><%= @lead.project_type_display %></p>
          <div class="mt-4 bg-white/50 rounded-full h-2 overflow-hidden">
            <div class="h-full bg-gradient-to-r from-purple-500 to-purple-600 transition-all duration-1000 ease-out" style="width: <%= complexity_score %>%"></div>
          </div>
        </div>
      </div>

      <!-- Quality Score Card -->
      <div class="relative overflow-hidden bg-gradient-to-br from-orange-50 to-amber-100 rounded-2xl p-6 border border-orange-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 bg-orange-400/20 rounded-full"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-orange-500 rounded-xl shadow-lg">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="text-2xl font-bold text-orange-600"><%= quality_score %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Quality Score</h3>
          <p class="text-sm text-gray-600">Lead completeness</p>
          <div class="mt-4 bg-white/50 rounded-full h-2 overflow-hidden">
            <div class="h-full bg-gradient-to-r from-orange-500 to-orange-600 transition-all duration-1000 ease-out" style="width: <%= quality_score %>%"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Score Visualization -->
    <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-3xl p-8 text-white relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 to-blue-600/20"></div>
      <div class="relative flex items-center justify-between">
        <div>
          <h3 class="text-3xl font-bold mb-2">Overall Lead Score</h3>
          <p class="text-gray-300">Weighted calculation based on all factors</p>
        </div>
        <div class="text-right">
          <div class="text-6xl font-bold bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">
            <%= @lead.score %>
          </div>
          <div class="text-sm text-gray-400 mt-2">
            Target response: <%= @lead.response_time_target %>
          </div>
        </div>
      </div>
      <div class="mt-6 bg-gray-700/50 rounded-full h-4 overflow-hidden">
        <div class="h-full bg-gradient-to-r from-yellow-400 to-orange-500 transition-all duration-2000 ease-out shadow-lg" style="width: <%= @lead.score %>%"></div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Lead Information Column -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Contact Information -->
      <div class="bg-white/80 backdrop-blur-xl border border-white/20 rounded-3xl shadow-2xl p-8 transition-all duration-500 hover:shadow-3xl">
        <h3 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-6">
          Contact Information
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-6">
            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Full Name</label>
              <div class="mt-2 flex items-center p-4 bg-gray-50 rounded-xl border border-gray-200 group-hover:border-blue-300 transition-colors duration-200">
                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span class="text-gray-900 font-medium"><%= @lead.full_name %></span>
              </div>
            </div>

            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Email</label>
              <div class="mt-2 flex items-center p-4 bg-gray-50 rounded-xl border border-gray-200 group-hover:border-blue-300 transition-colors duration-200">
                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:<%= @lead.email %>" class="text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200">
                  <%= @lead.email %>
                </a>
              </div>
            </div>

            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Phone</label>
              <div class="mt-2 flex items-center p-4 bg-gray-50 rounded-xl border border-gray-200 group-hover:border-blue-300 transition-colors duration-200">
                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <% if @lead.phone.present? %>
                  <a href="tel:<%= @lead.phone %>" class="text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200">
                    <%= @lead.phone %>
                  </a>
                <% else %>
                  <span class="text-gray-400">Not provided</span>
                <% end %>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Company</label>
              <div class="mt-2 flex items-center p-4 bg-gray-50 rounded-xl border border-gray-200 group-hover:border-blue-300 transition-colors duration-200">
                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <span class="text-gray-900 font-medium"><%= @lead.company %></span>
              </div>
            </div>

            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Website</label>
              <div class="mt-2 flex items-center p-4 bg-gray-50 rounded-xl border border-gray-200 group-hover:border-blue-300 transition-colors duration-200">
                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
                <% if @lead.website.present? %>
                  <a href="<%= @lead.website %>" target="_blank" class="text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200">
                    <%= @lead.website %>
                  </a>
                <% else %>
                  <span class="text-gray-400">Not provided</span>
                <% end %>
              </div>
            </div>

            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Source</label>
              <div class="mt-2 flex items-center p-4 bg-gray-50 rounded-xl border border-gray-200 group-hover:border-blue-300 transition-colors duration-200">
                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
                <span class="text-gray-900 font-medium"><%= @lead.source.humanize %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Project Details -->
      <div class="bg-white/80 backdrop-blur-xl border border-white/20 rounded-3xl shadow-2xl p-8 transition-all duration-500 hover:shadow-3xl">
        <h3 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent mb-6">
          Project Details
        </h3>

        <div class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="group">
              <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Project Type</label>
