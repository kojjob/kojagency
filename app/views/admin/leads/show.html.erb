<% content_for :title, "#{@lead.full_name} - Lead Details" %>

<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <%= link_to "Leads", admin_leads_path, class: "ml-2 text-sm text-gray-500 hover:text-gray-700" %>
  </li>
  <li class="flex items-center">
    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <span class="ml-2 text-sm text-gray-500"><%= @lead.full_name %></span>
  </li>
<% end %>

<!-- Page Header -->
<div class="sm:flex sm:items-center sm:justify-between mb-8">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <div class="h-12 w-12 rounded-full bg-indigo-500 flex items-center justify-center">
        <span class="text-lg font-medium text-white">
          <%= @lead.first_name&.first&.upcase || @lead.email&.first&.upcase || '?' %>
        </span>
      </div>
    </div>
    <div class="ml-4">
      <h1 class="text-2xl font-bold text-gray-900"><%= @lead.full_name %></h1>
      <p class="text-gray-600"><%= @lead.company %> â€¢ <%= @lead.email %></p>
    </div>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to admin_leads_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
      </svg>
      Back to Leads
    <% end %>
  </div>
</div>

<!-- Lead Score and Priority Alert -->
<div class="mb-8">
  <div class="rounded-md p-4 <%=
    case @lead.priority_level
    when 'high' then 'bg-red-50 border border-red-200'
    when 'medium' then 'bg-yellow-50 border border-yellow-200'
    else 'bg-gray-50 border border-gray-200'
    end
  %>">
    <div class="flex">
      <div class="flex-shrink-0">
        <% case @lead.priority_level %>
        <% when 'high' %>
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        <% when 'medium' %>
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium <%=
          case @lead.priority_level
          when 'high' then 'text-red-800'
          when 'medium' then 'text-yellow-800'
          else 'text-gray-800'
          end
        %>">
          <%= @lead.priority_level.capitalize %> Priority Lead (Score: <%= @lead.score %>)
        </h3>
        <div class="mt-2 text-sm <%=
          case @lead.priority_level
          when 'high' then 'text-red-700'
          when 'medium' then 'text-yellow-700'
          else 'text-gray-700'
          end
        %>">
          <% case @lead.priority_level %>
          <% when 'high' %>
            This lead requires immediate attention. Expected response time: immediate.
          <% when 'medium' %>
            This lead should be contacted within 2 hours for optimal conversion.
          <% else %>
            Standard priority lead. Follow up within 24 hours.
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Left Column - Lead Details -->
  <div class="lg:col-span-2 space-y-8">
    <!-- Contact Information -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Contact Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-500">Full Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @lead.full_name %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500">Email</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= mail_to @lead.email, @lead.email, class: "text-indigo-600 hover:text-indigo-500" %>
          </p>
        </div>
        <% if @lead.phone.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Phone</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= link_to @lead.phone, "tel:#{@lead.phone}", class: "text-indigo-600 hover:text-indigo-500" %>
            </p>
          </div>
        <% end %>
        <% if @lead.company.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Company</label>
            <p class="mt-1 text-sm text-gray-900"><%= @lead.company %></p>
          </div>
        <% end %>
        <% if @lead.website.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Website</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= link_to @lead.website, @lead.website, target: "_blank", class: "text-indigo-600 hover:text-indigo-500" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Project Details -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Project Details</h3>
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-500">Project Type</label>
            <p class="mt-1 text-sm text-gray-900"><%= @lead.project_type_display %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-500">Budget Range</label>
            <p class="mt-1 text-sm text-gray-900"><%= @lead.budget_range_display %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-500">Timeline</label>
            <p class="mt-1 text-sm text-gray-900"><%= @lead.timeline_display %></p>
          </div>
        </div>

        <% if @lead.project_description.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Project Description</label>
            <div class="mt-1 text-sm text-gray-900 bg-gray-50 rounded-md p-3">
              <%= simple_format(@lead.project_description) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Lead Scoring Breakdown -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Lead Scoring Breakdown</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Budget Range</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
              <div class="bg-green-500 h-2 rounded-full" style="width: 75%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900">35 points</span>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Timeline Urgency</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
              <div class="bg-blue-500 h-2 rounded-full" style="width: 60%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900">25 points</span>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Project Complexity</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
              <div class="bg-purple-500 h-2 rounded-full" style="width: 50%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900">20 points</span>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Lead Quality</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
              <div class="bg-yellow-500 h-2 rounded-full" style="width: 40%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900">8 points</span>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-4">
          <div class="flex items-center justify-between font-medium">
            <span class="text-gray-900">Total Score</span>
            <span class="text-lg text-gray-900"><%= @lead.score %> points</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Notes Section -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Internal Notes</h3>
      <%= form_with model: [@lead], url: admin_lead_path(@lead), method: :patch, local: true do |form| %>
        <div class="space-y-4">
          <%= form.text_area :notes,
              value: @notes,
              rows: 6,
              placeholder: "Add internal notes about this lead...",
              class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>

          <div class="flex justify-end">
            <%= form.submit "Save Notes", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Right Column - Actions and Status -->
  <div class="space-y-8">
    <!-- Lead Status and Actions -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Lead Status</h3>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-500">Current Status</label>
          <span class="mt-1 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%=
            case @lead.lead_status
            when 'pending' then 'bg-yellow-100 text-yellow-800'
            when 'contacted' then 'bg-blue-100 text-blue-800'
            when 'qualified' then 'bg-green-100 text-green-800'
            when 'unqualified' then 'bg-red-100 text-red-800'
            when 'lost' then 'bg-gray-100 text-gray-800'
            else 'bg-gray-100 text-gray-800'
            end
          %>">
            <%= @lead.lead_status.humanize %>
          </span>
        </div>

        <div class="space-y-3">
          <% case @lead.lead_status %>
          <% when 'pending' %>
            <%= link_to contact_admin_lead_path(@lead), method: :patch,
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              Mark as Contacted
            <% end %>
          <% when 'contacted' %>
            <%= link_to qualify_admin_lead_path(@lead), method: :patch,
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Mark as Qualified
            <% end %>

            <%= link_to disqualify_admin_lead_path(@lead), method: :patch,
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
              Mark as Unqualified
            <% end %>
          <% when 'qualified' %>
            <div class="p-3 bg-green-50 rounded-md">
              <p class="text-sm text-green-700">This lead has been qualified and is ready for sales follow-up.</p>
            </div>
          <% when 'unqualified' %>
            <div class="p-3 bg-red-50 rounded-md">
              <p class="text-sm text-red-700">This lead has been marked as unqualified.</p>
            </div>
          <% when 'lost' %>
            <div class="p-3 bg-gray-50 rounded-md">
              <p class="text-sm text-gray-700">This lead has been archived.</p>
            </div>
          <% end %>

          <% unless @lead.lead_status == 'lost' %>
            <%= link_to archive_admin_lead_path(@lead), method: :patch,
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                confirm: "Are you sure you want to archive this lead?" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z"></path>
                <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
              Archive Lead
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Lead Information -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Lead Information</h3>

      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium text-gray-500">Created</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @lead.created_at.strftime('%B %d, %Y at %I:%M %p') %>
            <span class="text-gray-500">(<%= time_ago_in_words(@lead.created_at) %> ago)</span>
          </p>
        </div>

        <% if @lead.contacted_at.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Contacted</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= @lead.contacted_at.strftime('%B %d, %Y at %I:%M %p') %>
              <span class="text-gray-500">(<%= time_ago_in_words(@lead.contacted_at) %> ago)</span>
            </p>
          </div>
        <% end %>

        <% if @lead.qualified_at.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Qualified</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= @lead.qualified_at.strftime('%B %d, %Y at %I:%M %p') %>
              <span class="text-gray-500">(<%= time_ago_in_words(@lead.qualified_at) %> ago)</span>
            </p>
          </div>
        <% end %>

        <% if @lead.assigned_to.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Assigned To</label>
            <p class="mt-1 text-sm text-gray-900"><%= @lead.assigned_to %></p>
          </div>
        <% end %>

        <% if @lead.source.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Lead Source</label>
            <p class="mt-1 text-sm text-gray-900 capitalize"><%= @lead.source %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>

      <div class="space-y-3">
        <%= mail_to @lead.email,
            class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          Send Email
        <% end %>

        <% if @lead.phone.present? %>
          <%= link_to "tel:#{@lead.phone}",
              class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            Call <%= @lead.phone %>
          <% end %>
        <% end %>

        <% if @lead.website.present? %>
          <%= link_to @lead.website, target: "_blank",
              class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"></path>
            </svg>
            Visit Website
          <% end %>
        <% end %>

        <%= link_to admin_lead_path(@lead), method: :delete,
            class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
            confirm: "Are you sure you want to delete this lead? This action cannot be undone." do %>
          <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 012 0v4a1 1 0 11-2 0V7zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V7a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          Delete Lead
        <% end %>
      </div>
    </div>
  </div>
</div>