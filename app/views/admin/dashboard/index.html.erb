<% content_for :title, "Admin Dashboard" %>
<% content_for :body_class, "admin-dashboard" %>

<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
    </svg>
    <span class="ml-2 text-sm text-gray-500">Dashboard</span>
  </li>
<% end %>

<!-- Page Header -->
<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  <p class="text-gray-600">Welcome to your business intelligence center</p>
</div>

<!-- Key Performance Indicators -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Leads -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 truncate">Total Leads</dt>
          <dd class="text-lg font-medium text-gray-900"><%= @stats[:leads][:total] %></dd>
        </dl>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-500">This week</div>
        <div class="text-lg font-semibold text-green-600">+<%= @stats[:leads][:this_week] %></div>
      </div>
    </div>
  </div>

  <!-- High Priority Leads -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 truncate">High Priority</dt>
          <dd class="text-lg font-medium text-gray-900"><%= @stats[:leads][:high_priority] %></dd>
        </dl>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-500">Conversion</div>
        <div class="text-lg font-semibold text-blue-600"><%= @stats[:leads][:conversion_rate] %>%</div>
      </div>
    </div>
  </div>

  <!-- Total Projects -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 truncate">Total Projects</dt>
          <dd class="text-lg font-medium text-gray-900"><%= @stats[:projects][:total] %></dd>
        </dl>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-500">Published</div>
        <div class="text-lg font-semibold text-green-600"><%= @stats[:projects][:published] %></div>
      </div>
    </div>
  </div>

  <!-- Blog Posts -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 truncate">Blog Posts</dt>
          <dd class="text-lg font-medium text-gray-900"><%= @stats[:blog][:total] %></dd>
        </dl>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-500">This month</div>
        <div class="text-lg font-semibold text-purple-600"><%= @stats[:blog][:this_month] %></div>
      </div>
    </div>
  </div>
</div>

<!-- Charts and Analytics Row -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Lead Conversion Funnel -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Lead Conversion Funnel</h3>
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">Total Leads</span>
        <div class="flex items-center">
          <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
            <div class="bg-blue-600 h-2 rounded-full" style="width: 100%"></div>
          </div>
          <span class="text-sm font-medium text-gray-900"><%= @performance_data[:conversion_funnel][:total] %></span>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">Contacted</span>
        <div class="flex items-center">
          <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
            <div class="bg-yellow-500 h-2 rounded-full" style="width: <%= @performance_data[:conversion_funnel][:contacted_rate] %>%"></div>
          </div>
          <span class="text-sm font-medium text-gray-900"><%= @performance_data[:conversion_funnel][:contacted] %> (<%= @performance_data[:conversion_funnel][:contacted_rate] %>%)</span>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">Qualified</span>
        <div class="flex items-center">
          <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
            <div class="bg-green-500 h-2 rounded-full" style="width: <%= @performance_data[:conversion_funnel][:qualified_rate] %>%"></div>
          </div>
          <span class="text-sm font-medium text-gray-900"><%= @performance_data[:conversion_funnel][:qualified] %> (<%= @performance_data[:conversion_funnel][:qualified_rate] %>%)</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Top Lead Sources -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Top Lead Sources</h3>
    <div class="space-y-3">
      <% @performance_data[:top_sources].each_with_index do |(source, count), index| %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-2 h-2 rounded-full mr-3 <%= ['bg-blue-500', 'bg-green-500', 'bg-yellow-500', 'bg-purple-500', 'bg-red-500'][index] %>"></div>
            <span class="text-sm text-gray-900 capitalize"><%= source || 'Direct' %></span>
          </div>
          <span class="text-sm font-medium text-gray-600"><%= count %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Activity and Priority Leads -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Priority Leads Requiring Attention -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-medium text-gray-900">Priority Leads</h3>
      <%= link_to "View All", admin_leads_path(priority: 'high'), class: "text-sm text-indigo-600 hover:text-indigo-900 font-medium" %>
    </div>

    <% if @priority_leads.any? %>
      <div class="space-y-4">
        <% @priority_leads.each do |lead| %>
          <div class="flex items-center p-3 border border-red-200 rounded-lg bg-red-50 hover:bg-red-100 transition-colors">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                <span class="text-xs font-bold text-white"><%= lead.score %></span>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <div class="flex items-center justify-between">
                <h4 class="text-sm font-medium text-gray-900">
                  <%= link_to lead.full_name, admin_lead_path(lead), class: "hover:text-indigo-600" %>
                </h4>
                <span class="text-xs text-gray-500"><%= time_ago_in_words(lead.created_at) %> ago</span>
              </div>
              <p class="text-sm text-gray-600"><%= lead.company %> â€¢ <%= lead.budget_range_display %></p>
              <p class="text-xs text-gray-500 truncate"><%= truncate(lead.project_description, length: 80) %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-6">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No priority leads</h3>
        <p class="mt-1 text-sm text-gray-500">All leads are being handled appropriately.</p>
      </div>
    <% end %>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Activity</h3>

    <div class="flow-root">
      <ul class="-mb-8">
        <% @stats[:activity].each_with_index do |activity, index| %>
          <li>
            <div class="relative pb-8">
              <% unless index == @stats[:activity].length - 1 %>
                <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
              <% end %>
              <div class="relative flex space-x-3">
                <div>
                  <span class="h-8 w-8 rounded-full <%=
                    case activity[:type]
                    when 'lead' then 'bg-blue-500'
                    when 'project' then 'bg-green-500'
                    when 'blog' then 'bg-purple-500'
                    else 'bg-gray-500'
                    end
                  %> flex items-center justify-center ring-8 ring-white">
                    <% case activity[:type] %>
                    <% when 'lead' %>
                      <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z"></path>
                      </svg>
                    <% when 'project' %>
                      <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                      </svg>
                    <% when 'blog' %>
                      <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  </span>
                </div>
                <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                  <div>
                    <p class="text-sm text-gray-500">
                      <%= link_to activity[:message], activity[:link], class: "font-medium text-gray-900 hover:text-indigo-600" %>
                    </p>
                  </div>
                  <div class="text-right text-sm whitespace-nowrap text-gray-500">
                    <time datetime="<%= activity[:time].iso8601 %>"><%= time_ago_in_words(activity[:time]) %> ago</time>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Quick Actions -->
<div class="mt-8">
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <%= link_to admin_leads_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:border-indigo-300 hover:bg-indigo-50 transition-colors" do %>
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-900">Manage Leads</p>
          <p class="text-sm text-gray-500">Review and follow up</p>
        </div>
      <% end %>

      <%= link_to admin_blog_posts_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:border-indigo-300 hover:bg-indigo-50 transition-colors" do %>
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-900">Blog Posts</p>
          <p class="text-sm text-gray-500">Create content</p>
        </div>
      <% end %>

      <%= link_to projects_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:border-indigo-300 hover:bg-indigo-50 transition-colors" do %>
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-900">Projects</p>
          <p class="text-sm text-gray-500">View portfolio</p>
        </div>
      <% end %>

      <%= link_to admin_leads_path(format: :csv), class: "flex items-center p-4 border border-gray-200 rounded-lg hover:border-indigo-300 hover:bg-indigo-50 transition-colors" do %>
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-900">Export Data</p>
          <p class="text-sm text-gray-500">Download reports</p>
        </div>
      <% end %>
    </div>
  </div>
</div>