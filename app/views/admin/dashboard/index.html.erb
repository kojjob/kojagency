<% content_for :title, "Admin Dashboard" %>
<% content_for :body_class, "admin-dashboard" %>
<% content_for :page_title, "Dashboard Overview" %>

<% content_for :breadcrumbs do %>
  <li class="flex items-center">
    <span class="mx-2 text-gray-400">/</span>
    <span class="text-gray-600">Overview</span>
  </li>
<% end %>

<!-- Welcome Section -->
<div class="mb-8">
  <h2 class="text-3xl font-bold text-gray-900">Welcome back, <%= admin_current_user&.name&.split&.first || 'Admin' %>! ðŸ‘‹</h2>
  <p class="text-gray-600 mt-2">Here's what's happening with your business today.</p>
</div>

<!-- Key Metrics Cards with Gradient Backgrounds -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Leads Card -->
  <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 gradient-card-blue rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l2-2a1 1 0 011.414 0L10 7.586l1.293-1.293a1 1 0 111.414 1.414l-2 2a1 1 0 01-1.414 0L8 8.414 6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          +<%= @stats[:leads][:this_week] %>
        </span>
      </div>
      <h3 class="text-3xl font-bold text-gray-900"><%= @stats[:leads][:total] %></h3>
      <p class="text-sm text-gray-500 mt-1">Total Leads</p>
      <div class="mt-4 flex items-center text-xs text-green-600">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        <span>12% from last month</span>
      </div>
    </div>
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-3">
      <div class="text-xs text-gray-600">This week: <span class="font-semibold text-gray-900"><%= @stats[:leads][:this_week] %> new leads</span></div>
    </div>
  </div>

  <!-- High Priority Leads Card -->
  <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 gradient-card-red rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
          Urgent
        </span>
      </div>
      <h3 class="text-3xl font-bold text-gray-900"><%= @stats[:leads][:high_priority] %></h3>
      <p class="text-sm text-gray-500 mt-1">High Priority</p>
      <div class="mt-4 flex items-center text-xs text-blue-600">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Conversion: <%= @stats[:leads][:conversion_rate] %>%</span>
      </div>
    </div>
    <div class="bg-gradient-to-r from-red-50 to-pink-50 px-6 py-3">
      <div class="text-xs text-gray-600">Requires: <span class="font-semibold text-gray-900">Immediate attention</span></div>
    </div>
  </div>

  <!-- Total Users Card -->
  <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 gradient-card-green rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Active
        </span>
      </div>
      <h3 class="text-3xl font-bold text-gray-900"><%= @stats[:users][:total] %></h3>
      <p class="text-sm text-gray-500 mt-1">Total Users</p>
      <div class="mt-4 flex items-center text-xs text-indigo-600">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>Admins: <%= @stats[:users][:admins] %></span>
      </div>
    </div>
    <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-3">
      <div class="text-xs text-gray-600">Active today: <span class="font-semibold text-gray-900">85% users</span></div>
    </div>
  </div>

  <!-- Blog Posts Card -->
  <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 gradient-card rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
          Content
        </span>
      </div>
      <h3 class="text-3xl font-bold text-gray-900"><%= @stats[:blog][:total] %></h3>
      <p class="text-sm text-gray-500 mt-1">Blog Posts</p>
      <div class="mt-4 flex items-center text-xs text-purple-600">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>This month: <%= @stats[:blog][:this_month] %></span>
      </div>
    </div>
    <div class="bg-gradient-to-r from-purple-50 to-pink-50 px-6 py-3">
      <div class="text-xs text-gray-600">Publishing rate: <span class="font-semibold text-gray-900">3 per week</span></div>
    </div>
  </div>
</div>

<!-- Charts Row -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Lead Conversion Chart -->
  <div class="bg-white rounded-2xl shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Lead Conversion Funnel</h3>
      <select class="text-sm border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">
        <option>Last 30 days</option>
        <option>Last 7 days</option>
        <option>Last 90 days</option>
      </select>
    </div>

    <div class="space-y-6">
      <% [
        { label: "Total Leads", value: @performance_data[:conversion_funnel][:total], rate: 100, color: "indigo" },
        { label: "Contacted", value: @performance_data[:conversion_funnel][:contacted], rate: @performance_data[:conversion_funnel][:contacted_rate], color: "blue" },
        { label: "Qualified", value: @performance_data[:conversion_funnel][:qualified], rate: @performance_data[:conversion_funnel][:qualified_rate], color: "green" }
      ].each do |stage| %>
        <div>
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-medium text-gray-700"><%= stage[:label] %></span>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-bold text-gray-900"><%= stage[:value] %></span>
              <span class="text-xs text-gray-500">(<%= stage[:rate] %>%)</span>
            </div>
          </div>
          <div class="w-full bg-gray-100 rounded-full h-3">
            <div class="bg-gradient-to-r from-<%= stage[:color] %>-400 to-<%= stage[:color] %>-600 h-3 rounded-full transition-all duration-500"
                 style="width: <%= stage[:rate] %>%"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Top Lead Sources -->
  <div class="bg-white rounded-2xl shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Top Lead Sources</h3>
      <%= link_to "View All", "#", class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>

    <div class="space-y-4">
      <% @performance_data[:top_sources].each_with_index do |(source, count), index| %>
        <% colors = ["blue", "green", "amber", "purple", "red"] %>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-gradient-to-br from-<%= colors[index] %>-400 to-<%= colors[index] %>-600 rounded-xl flex items-center justify-center">
              <span class="text-white text-sm font-bold"><%= index + 1 %></span>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <div class="flex items-center justify-between">
              <p class="text-sm font-medium text-gray-900 capitalize"><%= source || 'Direct' %></p>
              <p class="text-sm font-semibold text-gray-900"><%= count %></p>
            </div>
            <div class="mt-1 w-full bg-gray-100 rounded-full h-2">
              <div class="bg-gradient-to-r from-<%= colors[index] %>-400 to-<%= colors[index] %>-500 h-2 rounded-full"
                   style="width: <%= (count.to_f / @performance_data[:top_sources].values.sum * 100).round %>%"></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Activity & Priority Leads -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Priority Leads -->
  <div class="bg-white rounded-2xl shadow-sm">
    <div class="p-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Priority Leads</h3>
        <%= link_to admin_leads_path(priority: 'high'), class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium flex items-center" do %>
          View All
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <div class="p-6">
      <% if @priority_leads.any? %>
        <div class="space-y-4">
          <% @priority_leads.first(4).each do |lead| %>
            <div class="group hover:bg-gray-50 p-4 rounded-xl transition-colors">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-pink-600 rounded-xl flex items-center justify-center">
                    <span class="text-white text-sm font-bold"><%= lead.score %></span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="flex items-center justify-between">
                    <h4 class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600">
                      <%= link_to lead.full_name, admin_lead_path(lead) %>
                    </h4>
                    <span class="text-xs text-gray-500"><%= time_ago_in_words(lead.created_at) %> ago</span>
                  </div>
                  <p class="text-sm text-gray-600 mt-1"><%= lead.company %> â€¢ <%= lead.budget_range_display %></p>
                  <p class="text-xs text-gray-500 mt-2 line-clamp-2"><%= truncate(lead.project_description, length: 100) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-sm font-medium text-gray-900">No priority leads</h3>
          <p class="mt-1 text-sm text-gray-500">All leads are being handled appropriately.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-2xl shadow-sm">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
    </div>

    <div class="p-6">
      <div class="flow-root">
        <ul class="-mb-8">
          <% @stats[:activity].first(5).each_with_index do |activity, index| %>
            <li>
              <div class="relative pb-8">
                <% unless index == [@stats[:activity].length - 1, 4].min %>
                  <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200"></span>
                <% end %>
                <div class="relative flex items-start space-x-3">
                  <div class="relative">
                    <div class="h-10 w-10 rounded-xl <%=
                      case activity[:type]
                      when 'lead' then 'bg-gradient-to-br from-blue-500 to-indigo-600'
                      when 'project' then 'bg-gradient-to-br from-green-500 to-emerald-600'
                      when 'blog' then 'bg-gradient-to-br from-purple-500 to-pink-600'
                      else 'bg-gradient-to-br from-gray-500 to-gray-600'
                      end
                    %> flex items-center justify-center">
                      <% case activity[:type] %>
                      <% when 'lead' %>
                        <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z"></path>
                        </svg>
                      <% when 'project' %>
                        <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                        </svg>
                      <% when 'blog' %>
                        <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div>
                      <p class="text-sm text-gray-900">
                        <%= link_to activity[:message], activity[:link], class: "font-medium hover:text-indigo-600" %>
                      </p>
                      <p class="mt-0.5 text-xs text-gray-500">
                        <%= time_ago_in_words(activity[:time]) %> ago
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Analytics Chart -->
<div class="bg-white rounded-2xl shadow-sm p-6 mb-8">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-semibold text-gray-900">Performance Overview</h3>
    <div class="flex space-x-2">
      <button class="px-3 py-1 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700">Week</button>
      <button class="px-3 py-1 text-sm font-medium text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200">Month</button>
      <button class="px-3 py-1 text-sm font-medium text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200">Year</button>
    </div>
  </div>

  <div class="h-64">
    <canvas id="performanceChart"></canvas>
  </div>
</div>

<!-- Quick Actions -->
<div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-lg p-8 text-white">
  <h3 class="text-2xl font-bold mb-4">Quick Actions</h3>
  <p class="text-indigo-100 mb-6">Jump to your most common tasks</p>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <%= link_to admin_leads_path, class: "bg-white bg-opacity-20 backdrop-blur-sm rounded-xl p-4 hover:bg-opacity-30 transition-all duration-200 flex flex-col items-center text-center" do %>
      <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z"></path>
      </svg>
      <span class="text-sm font-medium">Manage Leads</span>
    <% end %>

    <%= link_to new_admin_blog_post_path, class: "bg-white bg-opacity-20 backdrop-blur-sm rounded-xl p-4 hover:bg-opacity-30 transition-all duration-200 flex flex-col items-center text-center" do %>
      <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
      </svg>
      <span class="text-sm font-medium">New Post</span>
    <% end %>

    <%= link_to "#", class: "bg-white bg-opacity-20 backdrop-blur-sm rounded-xl p-4 hover:bg-opacity-30 transition-all duration-200 flex flex-col items-center text-center" do %>
      <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
      <span class="text-sm font-medium">Export Data</span>
    <% end %>

    <%= link_to "#", class: "bg-white bg-opacity-20 backdrop-blur-sm rounded-xl p-4 hover:bg-opacity-30 transition-all duration-200 flex flex-col items-center text-center" do %>
      <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
      </svg>
      <span class="text-sm font-medium">Analytics</span>
    <% end %>
  </div>
</div>

<script>
  // Performance Chart
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('performanceChart')?.getContext('2d');
    if (ctx) {
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
          datasets: [
            {
              label: 'Leads',
              data: [12, 19, 15, 25, 22, 30, 28],
              borderColor: 'rgb(99, 102, 241)',
              backgroundColor: 'rgba(99, 102, 241, 0.1)',
              tension: 0.4
            },
            {
              label: 'Conversions',
              data: [3, 5, 4, 7, 6, 8, 9],
              borderColor: 'rgb(34, 197, 94)',
              backgroundColor: 'rgba(34, 197, 94, 0.1)',
              tension: 0.4
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              position: 'bottom'
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(0, 0, 0, 0.05)'
              }
            },
            x: {
              grid: {
                display: false
              }
            }
          }
        }
      });
    }
  });
</script>