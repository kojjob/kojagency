<% content_for :title, "Admin Dashboard" %>
<% content_for :body_class, "admin-dashboard" %>
<% content_for :page_title, "Dashboard Overview" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Welcome Section -->
    <div class="mb-6 md:mb-8">
      <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 text-white shadow-2xl">
        <div class="flex items-center justify-between">
          <div class="flex-1 pr-4">
            <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">
              Welcome back, <%= admin_current_user&.name&.split&.first || 'Admin' %>!
              <span class="inline-block animate-bounce">ðŸ‘‹</span>
            </h1>
            <p class="text-indigo-100 text-sm md:text-base lg:text-lg leading-relaxed">
              Here's what's happening with your business today. Your team is performing exceptionally well!
            </p>
          </div>
          <div class="hidden md:block flex-shrink-0">
            <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-white/20 backdrop-blur-sm rounded-xl md:rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 mb-6 md:mb-8">
      <!-- Total Leads Card -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 border border-blue-300">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l2-2a1 1 0 011.414 0L10 7.586l1.293-1.293a1 1 0 111.414 1.414l-2 2a1 1 0 01-1.414 0L8 8.414 6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              +<%= @stats[:leads][:this_week] %>
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">
            <%= @stats[:leads][:total] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">Total Leads</p>
          <div class="mt-3 md:mt-4 flex items-center text-xs text-green-600 bg-green-50 px-2 py-1 rounded-lg">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            <span class="font-semibold">12% from last month</span>
          </div>
        </div>
        <div class="bg-gradient-to-r from-blue-50/80 to-indigo-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-blue-100/50">
          <div class="text-xs text-gray-700">
            This week: <span class="font-bold text-blue-600"><%= @stats[:leads][:this_week] %> new leads</span>
          </div>
        </div>
      </div>

      <!-- High Priority Leads Card -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-red-500 to-red-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-red-100 to-red-200 text-red-800 border border-red-300">
              Urgent
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-red-600 to-red-800 bg-clip-text text-transparent">
            <%= @stats[:leads][:high_priority] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">High Priority</p>
          <div class="mt-3 md:mt-4 flex items-center text-xs text-blue-600 bg-blue-50 px-2 py-1 rounded-lg">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="font-semibold">Conversion: <%= @stats[:leads][:conversion_rate] %>%</span>
          </div>
        </div>
        <div class="bg-gradient-to-r from-red-50/80 to-pink-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-red-100/50">
          <div class="text-xs text-gray-700">
            Requires: <span class="font-bold text-red-600">Immediate attention</span>
          </div>
        </div>
      </div>

      <!-- Total Users Card -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-green-500 to-green-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-green-100 to-green-200 text-green-800 border border-green-300">
              Active
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">
            <%= @stats[:users][:total] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">Total Users</p>
          <div class="mt-3 md:mt-4 flex items-center text-xs text-indigo-600 bg-indigo-50 px-2 py-1 rounded-lg">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span class="font-semibold">Admins: <%= @stats[:users][:admins] %></span>
          </div>
        </div>
        <div class="bg-gradient-to-r from-green-50/80 to-emerald-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-green-100/50">
          <div class="text-xs text-gray-700">
            Active today: <span class="font-bold text-green-600">85% users</span>
          </div>
        </div>
      </div>

      <!-- Blog Posts Card -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
        <div class="p-4 md:p-6">
          <div class="flex items-center justify-between mb-3 md:mb-4">
            <div class="w-12 h-12 md:w-14 md:h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl md:rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <span class="inline-flex items-center px-2 md:px-3 py-1 rounded-full text-xs font-bold bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 border border-purple-300">
              Content
            </span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent">
            <%= @stats[:blog][:total] %>
          </h3>
          <p class="text-sm font-medium text-gray-600 mt-1">Blog Posts</p>
          <div class="mt-3 md:mt-4 flex items-center text-xs text-purple-600 bg-purple-50 px-2 py-1 rounded-lg">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="font-semibold">This month: <%= @stats[:blog][:this_month] %></span>
          </div>
        </div>
        <div class="bg-gradient-to-r from-purple-50/80 to-pink-50/80 backdrop-blur-sm px-4 md:px-6 py-2 md:py-3 border-t border-purple-100/50">
          <div class="text-xs text-gray-700">
            Publishing rate: <span class="font-bold text-purple-600">3 per week</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6 lg:gap-8 mb-6 md:mb-8">
      <!-- Lead Conversion Chart -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl p-4 md:p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 md:mb-6 space-y-3 sm:space-y-0">
          <div class="flex-1">
            <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-4 h-4 md:w-5 md:h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              Lead Conversion Funnel
            </h3>
            <p class="text-xs md:text-sm text-gray-600">Track your sales pipeline performance</p>
          </div>
          <select class="py-1.5 text-xs md:text-sm border-gray-300 rounded-lg md:rounded-xl focus:ring-indigo-500 focus:border-indigo-500 bg-white/80 backdrop-blur-sm shadow-sm min-w-0 sm:min-w-[140px]">
            <option>Last 30 days</option>
            <option>Last 7 days</option>
            <option>Last 90 days</option>
          </select>
        </div>

        <div class="space-y-6">
          <% [
            { label: "Total Leads", value: @performance_data[:conversion_funnel][:total], rate: 100, color: "indigo" },
            { label: "Contacted", value: @performance_data[:conversion_funnel][:contacted], rate: @performance_data[:conversion_funnel][:contacted_rate], color: "blue" },
            { label: "Qualified", value: @performance_data[:conversion_funnel][:qualified], rate: @performance_data[:conversion_funnel][:qualified_rate], color: "green" }
          ].each do |stage| %>
            <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm font-semibold text-gray-800"><%= stage[:label] %></span>
                <div class="flex items-center space-x-2">
                  <span class="text-lg font-bold text-gray-900"><%= stage[:value] %></span>
                  <span class="text-sm text-gray-600 bg-gray-100 px-2 py-1 rounded-md">(<%= stage[:rate] %>%)</span>
                </div>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
                <div class="bg-gradient-to-r from-<%= stage[:color] %>-400 to-<%= stage[:color] %>-600 h-4 rounded-full transition-all duration-700 shadow-sm"
                     style="width: <%= stage[:rate] %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Top Lead Sources -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl p-4 md:p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 md:mb-6 space-y-3 sm:space-y-0">
          <div class="flex-1">
            <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
              <svg class="w-4 h-4 md:w-5 md:h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
              Top Lead Sources
            </h3>
            <p class="text-xs md:text-sm text-gray-600">Your most effective channels</p>
          </div>
          <%= link_to "View All", "#", class: "text-xs md:text-sm text-indigo-600 hover:text-indigo-800 font-semibold bg-indigo-50 px-2 md:px-3 py-1 rounded-lg hover:bg-indigo-100 transition-colors" %>
        </div>

        <div class="space-y-4">
          <% @performance_data[:top_sources].each_with_index do |(source, count), index| %>
            <% colors = ["blue", "green", "amber", "purple", "red"] %>
            <div class="flex items-center bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-<%= colors[index] %>-400 to-<%= colors[index] %>-600 rounded-xl flex items-center justify-center shadow-lg">
                  <span class="text-white text-lg font-bold"><%= index + 1 %></span>
                </div>
              </div>
              <div class="ml-4 flex-1">
                <div class="flex items-center justify-between mb-2">
                  <p class="text-sm font-semibold text-gray-900 capitalize"><%= source || 'Direct' %></p>
                  <p class="text-lg font-bold text-gray-900"><%= count %></p>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div class="bg-gradient-to-r from-<%= colors[index] %>-400 to-<%= colors[index] %>-500 h-3 rounded-full shadow-sm transition-all duration-500"
                       style="width: <%= (count.to_f / @performance_data[:top_sources].map(&:last).sum * 100).round %>%"></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Activity & Priority Leads -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6 lg:gap-8 mb-6 md:mb-8">
      <!-- Priority Leads -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl overflow-hidden">
        <div class="p-4 md:p-6 border-b border-gray-200/50 bg-gradient-to-r from-red-50/50 to-pink-50/50">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0">
            <div class="flex-1">
              <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
                <svg class="w-4 h-4 md:w-5 md:h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Priority Leads
              </h3>
              <p class="text-xs md:text-sm text-gray-600">Leads requiring immediate attention</p>
            </div>
            <%= link_to admin_leads_path(priority: 'high'), class: "text-xs md:text-sm text-red-600 hover:text-red-800 font-semibold bg-red-50 px-2 md:px-3 py-1 rounded-lg hover:bg-red-100 transition-colors flex items-center" do %>
              View All
              <svg class="w-3 h-3 md:w-4 md:h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <div class="p-4 md:p-6">
          <% if @priority_leads.any? %>
            <div class="space-y-4">
              <% @priority_leads.first(4).each do |lead| %>
                <div class="group hover:bg-white/60 p-4 rounded-xl transition-all duration-200 border border-transparent hover:border-red-200">
                  <div class="flex items-start">
                    <div class="flex-shrink-0">
                      <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-pink-600 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
                        <span class="text-white text-sm font-bold"><%= lead.score %></span>
                      </div>
                    </div>
                    <div class="ml-4 flex-1">
                      <div class="flex items-center justify-between">
                        <h4 class="text-sm font-bold text-gray-900 group-hover:text-red-600 transition-colors">
                          <%= link_to lead.full_name, admin_lead_path(lead) %>
                        </h4>
                        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-md">
                          <%= time_ago_in_words(lead.created_at) %> ago
                        </span>
                      </div>
                      <p class="text-sm text-gray-700 mt-1 font-medium">
                        <%= lead.company %> â€¢
                        <span class="text-green-600 font-semibold"><%= lead.budget.humanize.gsub('_', ' ') %></span>
                      </p>
                      <p class="text-xs text-gray-600 mt-2 line-clamp-2 bg-gray-50 p-2 rounded-lg">
                        <%= truncate(lead.project_description, length: 100) %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-100 to-green-200 rounded-2xl flex items-center justify-center">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-sm font-semibold text-gray-900">No priority leads</h3>
              <p class="mt-1 text-sm text-gray-600">All leads are being handled appropriately.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl md:rounded-2xl border border-white/20 shadow-xl overflow-hidden">
        <div class="p-4 md:p-6 border-b border-gray-200/50 bg-gradient-to-r from-blue-50/50 to-indigo-50/50">
          <h3 class="text-base md:text-lg font-bold text-gray-900 flex items-center">
            <svg class="w-4 h-4 md:w-5 md:h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Recent Activity
          </h3>
          <p class="text-xs md:text-sm text-gray-600">Latest updates from your team</p>
        </div>

        <div class="p-4 md:p-6">
          <div class="flow-root">
            <ul class="-mb-8">
              <% @stats[:activity].first(5).each_with_index do |activity, index| %>
                <li>
                  <div class="relative pb-8">
                    <% unless index == [@stats[:activity].length - 1, 4].min %>
                      <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gradient-to-b from-gray-300 to-transparent"></span>
                    <% end %>
                    <div class="relative flex items-start space-x-3">
                      <div class="relative">
                        <div class="h-12 w-12 rounded-xl shadow-lg <%=
                          case activity[:type]
                          when 'lead' then 'bg-gradient-to-br from-blue-500 to-indigo-600'
                          when 'project' then 'bg-gradient-to-br from-green-500 to-emerald-600'
