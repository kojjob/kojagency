<!-- Sidebar -->
<div class="hidden lg:flex lg:flex-shrink-0" data-admin-sidebar-target="sidebar">
  <div class="flex flex-col w-64">
    <div class="flex flex-col flex-grow pt-6 pb-4 overflow-y-auto bg-gray-900">
      <!-- Logo -->
      <div class="flex items-center flex-shrink-0 px-6 mb-8">
        <%= link_to admin_root_path, class: "flex items-center space-x-3" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div>
            <span class="text-lg font-bold text-white">
              KojAgency
            </span>
            <div class="text-xs text-gray-400">Admin Panel</div>
          </div>
        <% end %>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-4 space-y-1">
        <!-- Dashboard -->
        <%= link_to admin_root_path,
            class: "#{current_page?(admin_root_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
          <svg class="#{current_page?(admin_root_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Dashboard
        <% end %>

        <!-- Leads Management -->
        <div class="space-y-1 mt-8">
          <div class="flex items-center px-3 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
            Lead Management
          </div>

          <%= link_to admin_leads_path,
              class: "#{current_page?(admin_leads_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_leads_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            All Leads
            <% if defined?(@high_priority_count) && @high_priority_count > 0 %>
              <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white">
                <%= @high_priority_count %>
              </span>
            <% end %>
          <% end %>

          <%= link_to admin_leads_path(format: :csv),
              class: "text-gray-300 hover:bg-gray-800 hover:text-white group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200",
              target: "_blank" do %>
            <svg class="text-gray-400 group-hover:text-white mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Export Leads
          <% end %>
        </div>

        <!-- Content Management -->
        <div class="space-y-1 mt-8">
          <div class="flex items-center px-3 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
            Content Management
          </div>

          <%= link_to admin_blog_posts_path,
              class: "#{current_page?(admin_blog_posts_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_blog_posts_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            Blog Posts
          <% end %>

          <%= link_to admin_blog_categories_path,
              class: "#{current_page?(admin_blog_categories_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_blog_categories_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Categories
          <% end %>

          <%= link_to admin_blog_tags_path,
              class: "#{current_page?(admin_blog_tags_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_blog_tags_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            Tags
          <% end %>

          <%= link_to admin_blog_authors_path,
              class: "#{current_page?(admin_blog_authors_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_blog_authors_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Authors
          <% end %>

          <%= link_to admin_blog_comments_path,
              class: "#{current_page?(admin_blog_comments_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_blog_comments_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Comments
          <% end %>
        </div>

        <!-- Analytics & Reports -->
        <div class="space-y-1 mt-8">
          <div class="flex items-center px-3 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
            Analytics & Reports
          </div>

          <%= link_to admin_analytics_path,
              class: "#{current_page?(admin_analytics_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_analytics_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Analytics Dashboard
          <% end %>

          <%= link_to funnel_admin_analytics_path,
              class: "#{current_page?(funnel_admin_analytics_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(funnel_admin_analytics_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
            </svg>
            Conversion Funnel
          <% end %>

          <%= link_to sources_admin_analytics_path,
              class: "#{current_page?(sources_admin_analytics_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(sources_admin_analytics_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
            Source Attribution
          <% end %>

          <%= link_to roi_admin_analytics_path,
              class: "#{current_page?(roi_admin_analytics_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(roi_admin_analytics_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            ROI by Channel
          <% end %>
        </div>

        <!-- CRM Integration -->
        <div class="space-y-1 mt-8">
          <div class="flex items-center px-3 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
            CRM Integration
          </div>

          <%= link_to dashboard_admin_crm_syncs_path,
              class: "#{current_page?(dashboard_admin_crm_syncs_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(dashboard_admin_crm_syncs_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Sync Dashboard
          <% end %>

          <%= link_to admin_crm_syncs_path,
              class: "#{current_page?(admin_crm_syncs_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_crm_syncs_path) ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Sync Records
          <% end %>

          <%= link_to admin_crm_syncs_path(status: 'failed'),
              class: "#{current_page?(admin_crm_syncs_path) && params[:status] == 'failed' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'} group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200" do %>
            <svg class="#{current_page?(admin_crm_syncs_path) && params[:status] == 'failed' ? 'text-white' : 'text-gray-400 group-hover:text-white'} mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            Failed Syncs
          <% end %>
        </div>

        <!-- Settings -->
        <div class="space-y-1 mt-8">
          <div class="flex items-center px-3 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
            Settings
          </div>

          <%= link_to root_path,
              class: "text-gray-300 hover:bg-gray-800 hover:text-white group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200",
              target: "_blank" do %>
            <svg class="text-gray-400 group-hover:text-white mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            View Website
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</div>

<!-- Mobile sidebar -->
<div class="md:hidden" data-admin-sidebar-target="mobileSidebar" style="display: none;">
  <div class="fixed inset-0 flex z-40">
    <div class="fixed inset-0" data-action="click->admin-sidebar#closeMobile">
      <div class="absolute inset-0 bg-gray-600 opacity-75"></div>
    </div>
    <div class="relative flex-1 flex flex-col max-w-xs w-full bg-white">
      <div class="absolute top-0 right-0 -mr-12 pt-2">
        <button
          type="button"
          class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          data-action="click->admin-sidebar#closeMobile"
        >
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <!-- Mobile navigation content (same as desktop) -->
      <div class="flex-1 h-0 pt-5 pb-4 overflow-y-auto">
        <!-- Same navigation content as desktop version -->
        <nav class="mt-5 px-2 space-y-1">
          <!-- Copy the same navigation items here -->
        </nav>
      </div>
    </div>
  </div>
</div>