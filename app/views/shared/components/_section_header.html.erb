<%#
  Reusable Section Header Component
  Usage: <%= render "shared/components/section_header",
             title: "Section Title",
             subtitle: "Optional description",
             badge: "Optional Badge",
             gradient: :primary %>
%>

<%
  gradient ||= :primary
  centered ||= true

  gradient_text = case gradient
  when :primary
    "from-gray-900 via-indigo-600 to-purple-600"
  when :secondary
    "from-gray-900 via-purple-600 to-pink-600"
  when :success
    "from-gray-900 via-green-600 to-emerald-600"
  end
%>

<div class="<%= centered ? 'text-center' : '' %> mb-16 lg:mb-20">
  <% if defined?(badge) && badge.present? %>
    <span class="inline-block px-4 py-2 bg-gradient-to-r from-indigo-50 via-purple-50 to-pink-50 text-indigo-700 rounded-full text-sm font-semibold mb-4">
      <%= badge %>
    </span>
  <% end %>

  <h2 class="text-4xl lg:text-5xl font-black text-gray-900 dark:text-gray-100 mb-6">
    <%= raw title.gsub(/<span>(.*?)<\/span>/) { |match| "<span class='bg-gradient-to-r #{gradient_text} bg-clip-text text-transparent'>#{$1}</span>" } %>
  </h2>

  <% if defined?(subtitle) && subtitle.present? %>
    <p class="<%= centered ? 'max-w-3xl mx-auto' : 'max-w-3xl' %> text-lg lg:text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
      <%= subtitle %>
    </p>
  <% end %>
</div>
