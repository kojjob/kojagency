<%#
  Reusable Form Select Component
  Usage: <%= render "shared/components/select",
             form: f,
             field: :service_type,
             label: "Service Type",
             options: [["Web Development", "web"], ["Mobile Apps", "mobile"]],
             required: true,
             prompt: "Select a service...",
             error: false %>
%>

<%
  required ||= false
  prompt ||= nil
  error ||= false
  classes ||= ""

  label_class = label_classes
  select_class = input_classes(error: error) + " " + classes
%>

<div class="mb-6">
  <% if defined?(label) && label.present? %>
    <%= form.label field, label, class: label_class %>
  <% end %>

  <%= form.select field, options,
      { prompt: prompt, required: required },
      { class: select_class } %>

  <% if error && defined?(error_message) && error_message.present? %>
    <p class="mt-2 text-sm text-red-600 dark:text-red-400">
      <%= error_message %>
    </p>
  <% end %>
</div>
