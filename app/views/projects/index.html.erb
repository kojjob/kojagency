<!-- Projects Hero Section -->
<section class="relative py-24 bg-gradient-to-br from-indigo-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
      Our <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Portfolio</span>
    </h1>
    <p class="max-w-3xl mx-auto text-xl text-gray-600">
      Explore our latest work and see how we've helped businesses transform their digital presence.
    </p>
  </div>
</section>

<!-- Filter Tabs -->
<section class="py-8 bg-white sticky top-16 lg:top-20 z-40 border-b" data-controller="filter">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap gap-2 justify-center">
      <% @categories.each do |category| %>
        <button
          data-filter-target="tab"
          data-category="<%= category %>"
          data-action="click->filter#filter"
          class="px-6 py-2 rounded-full font-medium transition-all duration-200 <%= category == 'All' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
          <%= category %>
        </button>
      <% end %>
    </div>
  </div>

  <!-- Projects Grid (moved inside controller element) -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div id="projects-grid" class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% @projects.each do |project| %>
        <div
          data-filter-target="item"
          data-category="<%= project[:category] %>"
          class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group opacity-100 scale-100">
          <!-- Project Image -->
          <div class="aspect-w-16 aspect-h-10 bg-gradient-to-br from-indigo-100 to-purple-100 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute bottom-4 left-4 right-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
              <span class="inline-block px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-sm font-medium text-gray-700">
                <%= project[:category] %>
              </span>
            </div>
          </div>

          <!-- Project Content -->
          <div class="p-8">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-2xl font-bold text-gray-900"><%= project[:title] %></h3>
              <span class="text-sm text-gray-500"><%= project[:client] %></span>
            </div>

            <p class="text-gray-600 mb-6">
              <%= project[:description] %>
            </p>

            <!-- Technologies -->
            <div class="flex flex-wrap gap-2 mb-6">
              <% project[:technologies].first(4).each do |tech| %>
                <span class="px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-sm font-medium">
                  <%= tech %>
                </span>
              <% end %>
              <% if project[:technologies].length > 4 %>
                <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
                  +<%= project[:technologies].length - 4 %> more
                </span>
              <% end %>
            </div>

            <!-- Results -->
            <div class="grid grid-cols-3 gap-4 pt-6 border-t border-gray-100">
              <% project[:results].each do |key, value| %>
                <div>
                  <div class="text-lg font-bold text-indigo-600"><%= value.split(' ').first %></div>
                  <div class="text-xs text-gray-500 uppercase"><%= value.split(' ')[1..-1].join(' ') %></div>
                </div>
              <% end %>
            </div>

            <!-- Testimonial -->
            <div class="mt-6 pt-6 border-t border-gray-100">
              <p class="text-gray-600 italic">
                "<%= project[:testimonial] %>"
              </p>
            </div>

            <!-- View Case Study -->
            <%= link_to project_path(project[:id]), class: "mt-6 inline-flex items-center text-indigo-600 font-medium hover:text-purple-600 transition-colors group" do %>
              View Case Study
              <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </section>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gradient-to-r from-indigo-600 to-purple-600">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
      Ready to Start Your Project?
    </h2>
    <p class="text-xl text-indigo-100 mb-8">
      Let's create something amazing together.
    </p>
    <%= link_to contact_path, class: "inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-semibold rounded-full hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" do %>
      Get Started
      <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    <% end %>
  </div>
</section>