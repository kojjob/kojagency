<!-- Projects Hero Section -->
<section class="relative py-32 bg-gradient-to-br from-indigo-50 via-white to-purple-50 overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -left-40 w-96 h-96 bg-indigo-400 rounded-full opacity-20 blur-3xl animate-blob"></div>
    <div class="absolute -bottom-40 -right-40 w-96 h-96 bg-purple-400 rounded-full opacity-20 blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-pink-400 rounded-full opacity-20 blur-3xl animate-blob animation-delay-4000"></div>
  </div>

  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="w-full h-full" style="background-image: linear-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(99, 102, 241, 0.1) 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="inline-flex items-center bg-gradient-to-r from-indigo-100 to-purple-100 px-6 py-2 rounded-full mb-8">
      <span class="text-indigo-600 font-semibold">ðŸ’¼ Our Work</span>
    </div>
    <h1 class="text-5xl lg:text-7xl font-black text-gray-900 mb-8 leading-tight">
      Our <span class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">Portfolio</span>
    </h1>
    <p class="max-w-4xl mx-auto text-xl lg:text-2xl text-gray-600 leading-relaxed">
      Explore our latest work and see how we've helped businesses transform their digital presence.
    </p>
  </div>
</section>

<!-- Filter Section -->
<% if @services.any? %>
  <section class="py-8 bg-white/80 backdrop-blur-sm sticky top-16 lg:top-20 z-40 border-b border-gray-100 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-3 justify-center">
        <%= link_to projects_path, class: "relative px-8 py-3 rounded-full font-semibold transition-all duration-300 group #{params[:service_id].blank? ? 'bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 text-white shadow-lg shadow-indigo-500/30' : 'bg-gray-50 text-gray-700 hover:bg-white hover:shadow-md'}" do %>
          <span class="relative z-10">All Projects</span>
        <% end %>

        <% @services.each do |service| %>
          <%= link_to projects_path(service_id: service.id), class: "relative px-8 py-3 rounded-full font-semibold transition-all duration-300 group #{params[:service_id].to_i == service.id ? 'bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 text-white shadow-lg shadow-indigo-500/30' : 'bg-gray-50 text-gray-700 hover:bg-white hover:shadow-md'}" do %>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <span class="relative z-10 group-hover:text-white transition-colors duration-300"><%= service.name %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Projects Grid -->
<section class="py-20 bg-gradient-to-br from-gray-50 via-white to-indigo-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @projects.any? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @projects.each do |project| %>
          <article class="group relative bg-white rounded-3xl shadow-sm hover:shadow-2xl transition-all duration-500 overflow-hidden transform hover:-translate-y-2">
            <!-- Featured Image -->
            <div class="relative h-64 bg-gradient-to-br from-indigo-100 to-purple-100 overflow-hidden">
              <% if project.featured_image.attached? %>
                <%= image_tag project.featured_image.variant(resize_to_limit: [600, 400]),
                              class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                              alt: project.title %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-gray-400">
                  <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>

              <!-- Featured Badge -->
              <% if project.featured? %>
                <div class="absolute top-4 right-4 bg-gradient-to-r from-yellow-400 to-yellow-500 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg flex items-center gap-2">
                  <span>â˜…</span> Featured
                </div>
              <% end %>
            </div>

            <div class="p-8">
              <!-- Client Name -->
              <div class="text-sm text-indigo-600 font-semibold mb-2"><%= project.client_name %></div>

              <!-- Title -->
              <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-indigo-600 transition-colors">
                <%= link_to project.title, project_path(project), class: "hover:text-indigo-600" %>
              </h3>

              <!-- Description -->
              <p class="text-gray-600 mb-6 line-clamp-3"><%= project.description.truncate(150) %></p>

              <!-- Technologies -->
              <% if project.technologies.any? %>
                <div class="flex flex-wrap gap-2 mb-6">
                  <% project.technologies.first(3).each do |tech| %>
                    <span class="px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-xs font-medium">
                      <%= tech.name %>
                    </span>
                  <% end %>
                  <% if project.technologies.count > 3 %>
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs font-medium">
                      +<%= project.technologies.count - 3 %> more
                    </span>
                  <% end %>
                </div>
              <% end %>

              <!-- View Project Link -->
              <%= link_to project_path(project), class: "inline-flex items-center text-indigo-600 font-semibold group-hover:text-indigo-700 transition-colors" do %>
                View Project
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              <% end %>
            </div>
          </article>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-12 flex justify-center">
        <%= paginate @projects %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-6">
          <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">No Projects Found</h3>
        <p class="text-gray-600 mb-6">We haven't published any projects yet. Check back soon!</p>
        <%= link_to "View All Services", services_path, class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-semibold rounded-full hover:bg-indigo-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</section>