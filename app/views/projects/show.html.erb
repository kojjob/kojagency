<!-- Project Detail Hero -->
<section class="relative py-24 bg-gradient-to-br from-indigo-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%= link_to projects_path, class: "inline-flex items-center text-gray-600 hover:text-indigo-600 mb-8 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Portfolio
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <span class="inline-block px-4 py-2 bg-indigo-100 text-indigo-700 rounded-full text-sm font-medium mb-4">
          <%= @project[:category] %>
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          <%= @project[:title] %>
        </h1>
        <div class="flex flex-wrap gap-6 text-gray-600 mb-8">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <%= @project[:client] %>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <%= @project[:year] %>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= @project[:duration] %>
          </div>
        </div>
        <p class="text-lg text-gray-600">
          <%= @project[:description] %>
        </p>
      </div>
      <div class="aspect-w-16 aspect-h-10 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl"></div>
    </div>
  </div>
</section>

<!-- Project Details -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-12">
        <!-- The Challenge -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">The Challenge</h2>
          <p class="text-lg text-gray-600">
            <%= @project[:challenge] %>
          </p>
        </div>

        <!-- The Solution -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Solution</h2>
          <p class="text-lg text-gray-600 mb-8">
            <%= @project[:solution] %>
          </p>

          <div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Key Features</h3>
            <ul class="space-y-3">
              <% @project[:features].each do |feature| %>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-indigo-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-gray-600"><%= feature %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

        <!-- Results -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">The Results</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
            <% @project[:results].each do |key, value| %>
              <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl p-6">
                <div class="text-2xl font-bold text-indigo-600 mb-2">
                  <%= value.split(' ')[0..1].join(' ') %>
                </div>
                <div class="text-gray-600">
                  <%= value.split(' ')[2..-1].join(' ') %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Testimonial -->
        <div class="bg-gray-50 rounded-2xl p-8">
          <svg class="w-10 h-10 text-indigo-600 mb-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          <p class="text-xl text-gray-700 italic mb-6">
            <%= @project[:testimonial][:content] %>
          </p>
          <div>
            <div class="font-semibold text-gray-900"><%= @project[:testimonial][:author] %></div>
            <div class="text-gray-600"><%= @project[:testimonial][:position] %></div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Technologies -->
        <div class="bg-white rounded-2xl border-2 border-gray-100 p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Technologies Used</h3>
          <div class="flex flex-wrap gap-2">
            <% @project[:technologies].each do |tech| %>
              <span class="px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-sm font-medium">
                <%= tech %>
              </span>
            <% end %>
          </div>
        </div>

        <!-- Project Info -->
        <div class="bg-white rounded-2xl border-2 border-gray-100 p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Project Info</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm text-gray-500">Client</dt>
              <dd class="font-medium text-gray-900"><%= @project[:client] %></dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Year</dt>
              <dd class="font-medium text-gray-900"><%= @project[:year] %></dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Duration</dt>
              <dd class="font-medium text-gray-900"><%= @project[:duration] %></dd>
            </div>
            <div>
              <dt class="text-sm text-gray-500">Team Size</dt>
              <dd class="font-medium text-gray-900"><%= @project[:team_size] %></dd>
            </div>
          </dl>
        </div>

        <!-- CTA -->
        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-2xl p-6 text-white">
          <h3 class="text-xl font-bold mb-4">Start Your Project</h3>
          <p class="text-indigo-100 mb-6">
            Ready to transform your business with innovative technology?
          </p>
          <%= link_to contact_path, class: "inline-flex items-center px-6 py-3 bg-white text-indigo-600 font-semibold rounded-lg hover:shadow-lg transition-all duration-300" do %>
            Get Started
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>