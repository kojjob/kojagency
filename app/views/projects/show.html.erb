<!-- Project Detail Hero -->
<section class="relative py-24 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -left-40 w-96 h-96 bg-indigo-400 rounded-full opacity-20 blur-3xl animate-blob"></div>
    <div class="absolute -bottom-40 -right-40 w-96 h-96 bg-purple-400 rounded-full opacity-20 blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-pink-400 rounded-full opacity-20 blur-3xl animate-blob animation-delay-4000"></div>
  </div>

  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="w-full h-full" style="background-image: linear-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(99, 102, 241, 0.1) 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%= link_to projects_path, class: "group inline-flex items-center text-gray-600 hover:text-indigo-600 mb-8 transition-all duration-300 font-medium" do %>
      <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Portfolio
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <span class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white rounded-2xl text-sm font-bold mb-6 shadow-lg">
          <%= @project[:category] %>
        </span>
        <h1 class="text-5xl lg:text-6xl font-black text-gray-900 mb-6 leading-tight">
          <%= @project[:title] %>
        </h1>
        <div class="flex flex-wrap gap-6 text-gray-600 mb-8">
          <div class="flex items-center group">
            <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center mr-3 shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <span class="font-medium"><%= @project[:client] %></span>
          </div>
          <div class="flex items-center group">
            <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mr-3 shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <span class="font-medium"><%= @project[:year] %></span>
          </div>
          <div class="flex items-center group">
            <div class="w-10 h-10 bg-gradient-to-br from-pink-500 to-indigo-500 rounded-xl flex items-center justify-center mr-3 shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="font-medium"><%= @project[:duration] %></span>
          </div>
        </div>
        <p class="text-xl text-gray-600 leading-relaxed">
          <%= @project[:description] %>
        </p>
      </div>
      <div class="relative group">
        <div class="absolute -inset-1 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>
        <div class="relative aspect-w-16 aspect-h-10 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-3xl shadow-2xl transform group-hover:scale-105 transition-transform duration-500"></div>
      </div>
    </div>
  </div>
</section>

<!-- Project Details -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-12">
        <!-- The Challenge -->
        <div class="group">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-orange-500 rounded-2xl flex items-center justify-center mr-4 shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <h2 class="text-4xl font-black bg-gradient-to-r from-gray-900 via-indigo-600 to-purple-600 bg-clip-text text-transparent">The Challenge</h2>
          </div>
          <div class="bg-gradient-to-br from-gray-50 to-indigo-50/30 rounded-2xl p-8 border-2 border-gray-100 hover:border-indigo-200 transition-colors duration-300">
            <p class="text-lg text-gray-700 leading-relaxed">
              <%= @project[:challenge] %>
            </p>
          </div>
        </div>

        <!-- The Solution -->
        <div class="group">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl flex items-center justify-center mr-4 shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h2 class="text-4xl font-black bg-gradient-to-r from-gray-900 via-indigo-600 to-purple-600 bg-clip-text text-transparent">Our Solution</h2>
          </div>
          <div class="bg-gradient-to-br from-gray-50 to-purple-50/30 rounded-2xl p-8 border-2 border-gray-100 hover:border-purple-200 transition-colors duration-300 mb-8">
            <p class="text-lg text-gray-700 leading-relaxed">
              <%= @project[:solution] %>
            </p>
          </div>

          <div class="bg-white rounded-2xl border-2 border-gray-100 p-8">
            <h3 class="text-2xl font-black text-gray-900 mb-6 flex items-center">
              <span class="w-8 h-1 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full mr-3"></span>
              Key Features
            </h3>
            <ul class="space-y-4">
              <% @project[:features].each do |feature| %>
                <li class="flex items-start group">
                  <div class="relative flex-shrink-0 mr-4">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-xl blur-lg opacity-0 group-hover:opacity-50 transition-opacity duration-300"></div>
                    <div class="relative w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                  </div>
                  <span class="text-gray-700 text-lg flex-1"><%= feature %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

        <!-- Results -->
        <div class="group">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center mr-4 shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h2 class="text-4xl font-black bg-gradient-to-r from-gray-900 via-green-600 to-emerald-600 bg-clip-text text-transparent">The Results</h2>
          </div>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
            <% @project[:results].each do |key, value| %>
              <div class="group relative">
                <div class="absolute -inset-0.5 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 rounded-2xl opacity-0 group-hover:opacity-100 blur-sm transition-opacity duration-500"></div>
                <div class="relative bg-white rounded-2xl p-6 border-2 border-gray-100 hover:border-transparent transition-colors duration-300 transform hover:-translate-y-1">
                  <div class="text-3xl font-black bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">
                    <%= value.split(' ')[0..1].join(' ') %>
                  </div>
                  <div class="text-gray-600 font-medium">
                    <%= value.split(' ')[2..-1].join(' ') %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Testimonial -->
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 rounded-3xl blur-2xl opacity-20 group-hover:opacity-30 transition-opacity duration-500"></div>
          <div class="relative bg-gradient-to-br from-gray-50 to-indigo-50 rounded-3xl p-10 border-2 border-gray-100">
            <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl flex items-center justify-center mb-6 shadow-xl">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
            </div>
            <p class="text-2xl text-gray-800 font-medium italic mb-8 leading-relaxed">
              "<%= @project[:testimonial][:content] %>"
            </p>
            <div class="flex items-center">
              <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl mr-4"></div>
              <div>
                <div class="text-xl font-bold text-gray-900"><%= @project[:testimonial][:author] %></div>
                <div class="text-gray-600 font-medium"><%= @project[:testimonial][:position] %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Technologies -->
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl opacity-0 group-hover:opacity-100 blur-sm transition-opacity duration-500"></div>
          <div class="relative bg-white rounded-2xl border-2 border-gray-100 p-6 hover:border-transparent transition-colors duration-300">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-black text-gray-900">Technologies Used</h3>
            </div>
            <div class="flex flex-wrap gap-2">
              <% @project[:technologies].each do |tech| %>
                <span class="px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-xl text-sm font-bold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                  <%= tech %>
                </span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Project Info -->
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-purple-500 to-pink-500 rounded-2xl opacity-0 group-hover:opacity-100 blur-sm transition-opacity duration-500"></div>
          <div class="relative bg-white rounded-2xl border-2 border-gray-100 p-6 hover:border-transparent transition-colors duration-300">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-black text-gray-900">Project Info</h3>
            </div>
            <dl class="space-y-4">
              <div class="flex justify-between items-center pb-3 border-b border-gray-100">
                <dt class="text-sm text-gray-500 font-medium">Client</dt>
                <dd class="font-bold text-gray-900"><%= @project[:client] %></dd>
              </div>
              <div class="flex justify-between items-center pb-3 border-b border-gray-100">
                <dt class="text-sm text-gray-500 font-medium">Year</dt>
                <dd class="font-bold text-gray-900"><%= @project[:year] %></dd>
              </div>
              <div class="flex justify-between items-center pb-3 border-b border-gray-100">
                <dt class="text-sm text-gray-500 font-medium">Duration</dt>
                <dd class="font-bold text-gray-900"><%= @project[:duration] %></dd>
              </div>
              <div class="flex justify-between items-center">
                <dt class="text-sm text-gray-500 font-medium">Team Size</dt>
                <dd class="font-bold text-gray-900"><%= @project[:team_size] %></dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- CTA -->
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 rounded-3xl blur-xl opacity-75 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 rounded-3xl p-8 text-white shadow-2xl">
            <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black mb-4">Start Your Project</h3>
            <p class="text-indigo-100 mb-6 leading-relaxed">
              Ready to transform your business with innovative technology?
            </p>
            <%= link_to contact_path, class: "relative group/btn inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-bold rounded-2xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1 w-full justify-center" do %>
              <span class="absolute -inset-0.5 bg-gradient-to-r from-yellow-400 via-pink-400 to-purple-400 rounded-2xl opacity-0 group-hover/btn:opacity-100 blur-sm transition-opacity duration-500"></span>
              <span class="relative z-10 flex items-center">
                Get Started
                <svg class="ml-2 w-5 h-5 transform group-hover/btn:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>