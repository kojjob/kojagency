<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= content_for(:title) || "Admin Dashboard - KojAgency" %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="KojAgency Admin Dashboard - Manage leads, content, and business operations">
    <meta name="robots" content="noindex, nofollow">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/icon.png" type="image/png">

    <!-- External Resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <%= yield :head %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= content_for(:body_class) %> bg-gray-50 font-sans antialiased">
    <div class="flex h-screen bg-gray-50" data-controller="admin-sidebar">
      <!-- Sidebar -->
      <%= render "shared/admin_sidebar" %>

      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Navigation Bar -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="flex items-center justify-between px-6 py-4">
            <!-- Mobile menu button -->
            <button
              type="button"
              class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
              data-action="click->admin-sidebar#toggleMobile"
            >
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>

            <!-- Breadcrumbs -->
            <nav class="hidden md:flex" aria-label="Breadcrumb">
              <ol class="flex items-center space-x-4">
                <li>
                  <%= link_to admin_root_path, class: "text-gray-500 hover:text-gray-700" do %>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                    </svg>
                    <span class="sr-only">Home</span>
                  <% end %>
                </li>
                <% if content_for?(:breadcrumbs) %>
                  <%= yield :breadcrumbs %>
                <% end %>
              </ol>
            </nav>

            <!-- User Menu -->
            <div class="flex items-center space-x-4">
              <!-- Notifications -->
              <button class="p-2 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 rounded-full">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
              </button>

              <!-- User Profile -->
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center">
                    <span class="text-sm font-medium text-white">
                      <%= admin_current_user&.name&.first&.upcase || 'A' %>
                    </span>
                  </div>
                </div>
                <div class="hidden md:block">
                  <div class="text-sm font-medium text-gray-900">
                    <%= admin_current_user&.name || 'Admin User' %>
                  </div>
                  <div class="text-xs text-gray-500">Administrator</div>
                </div>
              </div>
            </div>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="bg-green-50 border-l-4 border-green-400 p-4 mx-6 mt-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-green-700"><%= notice %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if alert %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mx-6 mt-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700"><%= alert %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Main Content -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto">
          <div class="p-6">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>

    <%= yield :scripts %>
  </body>
</html>