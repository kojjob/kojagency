<% content_for :title, @blog_post.title %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <%= link_to "← Back to My Posts", user_blog_posts_path,
          class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
    </div>

    <article class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-8">
        <header class="mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @blog_post.title %></h1>

          <div class="flex items-center space-x-4 text-sm text-gray-500 mb-4">
            <span>Status:
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                         <%= @blog_post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @blog_post.status.humanize %>
              </span>
            </span>
            <span>Created: <%= @blog_post.created_at.strftime("%B %d, %Y") %></span>
            <% if @blog_post.published_at %>
              <span>Published: <%= @blog_post.published_at.strftime("%B %d, %Y") %></span>
            <% end %>
          </div>

          <% if @blog_post.excerpt.present? %>
            <p class="text-xl text-gray-600 leading-relaxed mb-6"><%= @blog_post.excerpt %></p>
          <% end %>

          <div class="flex space-x-4">
            <%= link_to "Edit", edit_user_blog_post_path(@blog_post),
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            <% if @blog_post.draft? %>
              <%= link_to "Publish", publish_user_blog_post_path(@blog_post),
                  method: :post,
                  class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded",
                  data: { confirm: "Are you sure you want to publish this post?" } %>
            <% elsif @blog_post.published? %>
              <%= link_to "Unpublish", unpublish_user_blog_post_path(@blog_post),
                  method: :post,
                  class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded",
                  data: { confirm: "Are you sure you want to unpublish this post?" } %>
            <% end %>
            <%= link_to "Delete", user_blog_post_path(@blog_post),
                method: :delete,
                class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
                data: { confirm: "Are you sure you want to delete this post?" } %>
          </div>
        </header>

        <div class="prose max-w-none">
          <%= simple_format(@blog_post.content) %>
        </div>
      </div>
    </article>
  </div>
</div>