<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>

    <% if params[:category].present? %>
      <div class="mb-4">
        <p class="text-gray-600">Category: <%= params[:category] %></p>
      </div>
    <% end %>

    <% if params[:tag].present? %>
      <div class="mb-4">
        <p class="text-gray-600">Tag: <%= params[:tag] %></p>
      </div>
    <% end %>

    <% if params[:q].present? %>
      <div class="mb-4">
        <p class="text-gray-600">Search results for: "<%= params[:q] %>"</p>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @posts.each do |post| %>
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <% if post.featured_image.attached? %>
            <%= link_to blog_post_path(post), class: "block" do %>
              <%= image_tag post.featured_image, class: "w-full h-48 object-cover" %>
            <% end %>
          <% end %>

          <div class="p-6">
            <% if post.category %>
              <%= link_to post.category.name, blog_category_path(post.category), class: "text-sm text-blue-600 hover:text-blue-800" %>
            <% end %>

            <h2 class="text-xl font-semibold mb-2 mt-2">
              <%= link_to post.title, blog_post_path(post), class: "text-gray-900 hover:text-blue-600" %>
            </h2>

            <p class="text-gray-600 mb-4">
              <%= truncate(post.excerpt || post.content, length: 150) %>
            </p>

            <div class="flex items-center justify-between text-sm text-gray-500">
              <div class="flex items-center">
                <span><%= post.author.name %></span>
                <span class="mx-2">Â·</span>
                <span><%= post.published_at&.strftime("%B %d, %Y") %></span>
              </div>

              <span><%= post.reading_time %> min read</span>
            </div>
          </div>
        </article>
      <% end %>
    </div>

    <% if @posts.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No posts found.</p>
      </div>
    <% end %>

    <div class="mt-8">
      <%= paginate @posts %>
    </div>
  </div>
</div>