<!-- Professional Hero Section -->
<div class="relative bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 py-20 overflow-hidden">
  <!-- Subtle Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-indigo-300 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-purple-300 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-0 left-1/2 w-96 h-96 bg-blue-300 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 tracking-tight">
        Our Blog
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto leading-relaxed">
        Insights, tutorials, and stories from the world of software development and digital innovation.
      </p>

      <!-- Enhanced Tags Filter -->
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 shadow-lg">
        <h5 class="text-sm font-semibold text-gray-700 mb-4 uppercase tracking-wider">Filter by Topic</h5>
        <div class="flex flex-wrap justify-center gap-2">
          <%= link_to "All Posts", blog_posts_path, class: "px-4 py-2 rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md #{params[:tag].blank? ? 'bg-gradient-to-r from-indigo-600 to-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50 border border-gray-200'}" %>
          <% @tags&.each do |tag| %>
            <%= link_to tag.name, blog_posts_path(tag: tag.slug), class: "px-4 py-2 rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md #{params[:tag] == tag.slug ? 'bg-gradient-to-r from-indigo-600 to-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50 border border-gray-200'}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-16">
  <div class="max-w-7xl mx-auto">

    <!-- Professional Active Filters Display -->
    <% if params[:category].present? || params[:tag].present? || params[:q].present? %>
      <div class="mb-10 bg-white rounded-xl p-5 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-2 flex-wrap">
          <span class="text-sm font-semibold text-gray-700">Active filters:</span>
          <% if params[:category].present? %>
            <span class="inline-flex items-center bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-lg border border-blue-200">
              Category: <%= params[:category] %>
              <%= link_to blog_posts_path(params.permit(:tag, :q, :page).to_h), class: "ml-2 text-blue-600 hover:text-blue-800 font-semibold" do %>×<% end %>
            </span>
          <% end %>
          <% if params[:tag].present? %>
            <span class="inline-flex items-center bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-lg border border-green-200">
              Tag: <%= params[:tag] %>
              <%= link_to blog_posts_path(params.permit(:category, :q, :page).to_h), class: "ml-2 text-green-600 hover:text-green-800 font-semibold" do %>×<% end %>
            </span>
          <% end %>
          <% if params[:q].present? %>
            <span class="inline-flex items-center bg-purple-100 text-purple-800 text-sm font-medium px-3 py-1 rounded-lg border border-purple-200">
              Search: "<%= params[:q] %>"
              <%= link_to blog_posts_path(params.permit(:category, :tag, :page).to_h), class: "ml-2 text-purple-600 hover:text-purple-800 font-semibold" do %>×<% end %>
            </span>
          <% end %>
          <%= link_to "Clear all", blog_posts_path, class: "text-sm text-gray-600 hover:text-gray-900 font-medium underline ml-2" %>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-10">

      <!-- Main Content Area -->
      <div class="lg:col-span-3">
        <% if @featured_post.present? %>
          <!-- Enhanced Featured Post -->
          <div class="mb-12">
            <article class="group relative bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 border border-gray-200">
              <% if @featured_post.featured_image.attached? %>
                <%= link_to blog_post_path(@featured_post), class: "block relative overflow-hidden" do %>
                  <%= image_tag @featured_post.featured_image, class: "w-full h-72 md:h-96 object-cover group-hover:scale-105 transition-transform duration-500" %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-black/10 to-transparent"></div>
                  <div class="absolute top-4 left-4">
                    <span class="inline-block px-3 py-1 bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-xs font-bold rounded-lg shadow-lg">
                      ✨ FEATURED
                    </span>
                  </div>
                <% end %>
              <% end %>

              <div class="p-8 md:p-10">
                <% if @featured_post.category %>
                  <%= link_to @featured_post.category.name, blog_category_path(@featured_post.category),
                      class: "inline-block px-3 py-1.5 bg-indigo-100 text-indigo-800 text-sm font-semibold rounded-lg mb-4 hover:bg-indigo-200 transition-colors border border-indigo-200" %>
                <% end %>

                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 leading-tight">
                  <%= link_to @featured_post.title, blog_post_path(@featured_post),
                      class: "hover:text-indigo-600 transition-colors" %>
                </h2>

                <p class="text-gray-600 text-lg mb-6 leading-relaxed">
                  <% if @featured_post.excerpt.present? %>
                    <%= truncate(@featured_post.excerpt, length: 220) %>
                  <% elsif @featured_post.content.present? %>
                    <%= truncate(@featured_post.content.to_plain_text, length: 220) %>
                  <% else %>
                    <span class="text-gray-400 italic">No content available</span>
                  <% end %>
                </p>

                <div class="flex items-center justify-between">
                  <div class="flex items-center text-sm text-gray-600">
                    <% if @featured_post.author.present? %>
                      <span class="font-semibold text-gray-900"><%= @featured_post.author.name %></span>
                      <span class="mx-2 text-gray-400">·</span>
                    <% end %>
                    <span><%= @featured_post.published_at&.strftime("%b %d, %Y") %></span>
                    <span class="mx-2 text-gray-400">·</span>
                    <span><%= @featured_post.reading_time %> min read</span>
                  </div>
                  <%= link_to "Read Full Article →", blog_post_path(@featured_post),
                      class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-semibold text-sm group-hover:translate-x-1 transition-transform" %>
                </div>
              </div>
            </article>
          </div>
        <% end %>

        <!-- Professional Blog Posts Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <% (@featured_post ? @posts.where.not(id: @featured_post.id) : @posts).each do |post| %>
            <article class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200">
              <% if post.featured_image.attached? %>
                <%= link_to blog_post_path(post), class: "block relative overflow-hidden" do %>
                  <%= image_tag post.featured_image, class: "w-full h-52 object-cover group-hover:scale-105 transition-transform duration-500" %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <% end %>
              <% else %>
                <div class="w-full h-52 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>

              <div class="p-6">
                <% if post.category %>
                  <%= link_to post.category.name, blog_category_path(post.category),
                      class: "inline-block px-2.5 py-1 bg-gray-100 text-gray-700 text-xs font-semibold rounded-md mb-3 hover:bg-gray-200 transition-colors border border-gray-200" %>
                <% end %>

                <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight">
                  <%= link_to post.title, blog_post_path(post),
                      class: "hover:text-indigo-600 transition-colors line-clamp-2" %>
                </h3>

                <p class="text-gray-600 mb-4 leading-relaxed text-sm line-clamp-3">
                  <% if post.excerpt.present? %>
                    <%= truncate(post.excerpt, length: 140) %>
                  <% elsif post.content.present? %>
                    <%= truncate(post.content.to_plain_text, length: 140) %>
                  <% else %>
                    <span class="text-gray-400 italic">No content available</span>
                  <% end %>
                </p>

                <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                  <div class="flex items-center text-xs text-gray-500">
                    <% if post.author.present? %>
                      <span class="font-semibold text-gray-700"><%= post.author.name %></span>
                      <span class="mx-2">·</span>
                    <% end %>
                    <span><%= post.published_at&.strftime("%b %d") %></span>
                    <span class="mx-2">·</span>
                    <span><%= post.reading_time %> min</span>
                  </div>
                  <%= link_to blog_post_path(post),
                      class: "text-indigo-600 hover:text-indigo-700 font-semibold text-sm group-hover:translate-x-1 transition-transform inline-block" do %>
                    Read →
                  <% end %>
                </div>
              </div>
            </article>
          <% end %>
        </div>

        <!-- Professional Empty State -->
        <% if @posts.empty? %>
          <div class="text-center py-20">
            <div class="max-w-md mx-auto bg-white rounded-2xl p-12 border border-gray-200 shadow-lg">
              <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl flex items-center justify-center shadow-md">
                <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">No Posts Found</h3>
              <p class="text-gray-600 mb-6">We couldn't find any posts matching your criteria. Try adjusting your filters or search terms.</p>
              <%= link_to "View All Posts", blog_posts_path,
                  class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all" %>
            </div>
          </div>
        <% end %>

        <!-- Professional Pagination -->
        <% if @posts.respond_to?(:current_page) && @posts.total_pages > 1 %>
          <div class="mt-16 flex justify-center">
            <div class="pagination-wrapper">
              <%= paginate @posts %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Enhanced Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-8 space-y-8">

          <!-- Premium Newsletter Signup -->
          <div class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 rounded-2xl p-8 text-white shadow-xl">
            <div class="absolute inset-0 bg-white/10"></div>
            <div class="relative z-10">
              <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4 backdrop-blur-sm">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h4 class="text-xl font-bold mb-3">Stay Updated</h4>
              <p class="text-indigo-100 text-sm mb-6 leading-relaxed">
                Get weekly insights on product development, design patterns, and industry best practices.
              </p>

              <%= form_with url: subscribe_blog_posts_path, method: :post, local: false,
                  class: "space-y-3", data: { turbo: false } do |form| %>
                <%= form.email_field :email,
                    placeholder: "your@email.com",
                    class: "w-full px-4 py-3 rounded-lg border-0 text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-white/50 focus:outline-none shadow-md",
                    required: true %>
                <%= form.submit "Subscribe Now",
                    class: "w-full bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all cursor-pointer shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>
              <% end %>

              <p class="text-xs text-indigo-200 mt-4 flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                No spam. Unsubscribe anytime.
              </p>
            </div>
          </div>

          <!-- Professional Popular Categories -->
          <% if @categories&.any? %>
            <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
              <h4 class="text-lg font-bold text-gray-900 mb-5 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                Categories
              </h4>
              <div class="space-y-2">
                <% @categories.limit(6).each do |category| %>
                  <%= link_to blog_category_path(category),
                      class: "flex items-center justify-between py-2.5 px-3 rounded-lg hover:bg-gray-50 transition-all group border border-transparent hover:border-gray-200" do %>
                    <span class="text-gray-700 font-medium group-hover:text-indigo-600 transition-colors"><%= category.name %></span>
                    <span class="text-xs font-semibold text-gray-500 bg-gray-100 px-2.5 py-1 rounded-full group-hover:bg-indigo-100 group-hover:text-indigo-600 transition-colors">
                      <%= category.blog_posts.published.count %>
                    </span>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Professional Recent Posts -->
          <% if @recent_posts&.any? %>
            <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
              <h4 class="text-lg font-bold text-gray-900 mb-5 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Recent Posts
              </h4>
              <div class="space-y-4">
                <% @recent_posts.limit(4).each do |post| %>
                  <article class="group">
                    <%= link_to blog_post_path(post), class: "block" do %>
                      <div class="flex space-x-3">
                        <% if post.featured_image.attached? %>
                          <%= image_tag post.featured_image, class: "w-20 h-20 object-cover rounded-lg flex-shrink-0 border border-gray-200 group-hover:border-indigo-300 transition-colors shadow-sm" %>
                        <% else %>
                          <div class="w-20 h-20 bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg flex-shrink-0 border border-gray-200 flex items-center justify-center">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                          </div>
                        <% end %>
                        <div class="flex-1 min-w-0">
                          <h5 class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors line-clamp-2 leading-tight mb-1">
                            <%= truncate(post.title, length: 70) %>
                          </h5>
                          <p class="text-xs text-gray-500 flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <%= post.published_at&.strftime("%b %d, %Y") %>
                          </p>
                        </div>
                      </div>
                    <% end %>
                  </article>
                <% end %>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Professional Styles -->
<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Professional Pagination Styles */
  .pagination-wrapper .pagination {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .pagination-wrapper .pagination a,
  .pagination-wrapper .pagination span {
    padding: 0.625rem 0.875rem;
    border-radius: 0.5rem;
    border: 1px solid #d1d5db;
    background: #ffffff;
    color: #374151;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .pagination-wrapper .pagination a:hover {
    background: #f3f4f6;
    border-color: #9ca3af;
    transform: translateY(-1px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .pagination-wrapper .pagination .current {
    background: linear-gradient(135deg, #6366f1, #a855f7);
    border-color: #6366f1;
    color: white;
    box-shadow: 0 4px 8px rgba(99, 102, 241, 0.3);
  }
</style>