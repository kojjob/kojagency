<div class="bg-gray-50 rounded-lg p-6 mt-8" id="comment-form">
  <h3 class="text-xl font-semibold mb-4">Leave a Comment</h3>

  <%= form_with model: [blog_post, BlogComment.new], url: blog_post_comments_path(blog_post), local: false, data: { turbo: true } do |f| %>
    <div id="comment-form-errors"></div>

    <% if parent_comment %>
      <%= f.hidden_field :parent_id, value: parent_comment.id %>
      <div class="mb-4 p-3 bg-blue-50 border-l-4 border-blue-400">
        <p class="text-sm text-gray-700">Replying to <%= parent_comment.author_name %></p>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.label :author_name, "Name *", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :author_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500", required: true %>
      </div>

      <div>
        <%= f.label :author_email, "Email * (will not be published)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :author_email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500", required: true %>
      </div>
    </div>

    <div class="mb-4">
      <%= f.label :author_website, "Website (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.url_field :author_website, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "https://example.com" %>
    </div>

    <div class="mb-4">
      <%= f.label :content, "Comment *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :content, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500", required: true %>
      <p class="text-sm text-gray-500 mt-1">Maximum 1000 characters</p>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Post Comment", class: "px-6 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700 transition-colors cursor-pointer" %>

      <p class="text-sm text-gray-500">
        Your comment may be held for moderation.
      </p>
    </div>
  <% end %>
</div>