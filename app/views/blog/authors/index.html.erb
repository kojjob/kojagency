<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Our Authors</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @authors.each do |author| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-xl font-semibold mb-2">
            <%= link_to author.name, blog_author_path(author), class: "text-gray-900 hover:text-blue-600" %>
          </h2>

          <% if author.bio.present? %>
            <p class="text-gray-600 mb-4">
              <%= truncate(author.bio, length: 150) %>
            </p>
          <% end %>

          <p class="text-sm text-gray-500">
            <%= author.posts_count %> <%= "article".pluralize(author.posts_count) %> published
          </p>
        </div>
      <% end %>
    </div>

    <% if @authors.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No authors found.</p>
      </div>
    <% end %>
  </div>
</div>