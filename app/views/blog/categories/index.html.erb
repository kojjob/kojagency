<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Blog Categories</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @categories.each do |category| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-xl font-semibold mb-2">
            <%= link_to category.name, blog_category_path(category), class: "text-gray-900 hover:text-blue-600" %>
          </h2>

          <% if category.description.present? %>
            <p class="text-gray-600 mb-4">
              <%= truncate(category.description, length: 150) %>
            </p>
          <% end %>

          <p class="text-sm text-gray-500">
            <%= category.posts_count %> <%= "post".pluralize(category.posts_count) %>
          </p>
        </div>
      <% end %>
    </div>

    <% if @categories.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No categories found.</p>
      </div>
    <% end %>
  </div>
</div>