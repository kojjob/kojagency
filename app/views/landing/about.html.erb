<!-- About Hero Section -->
<section class="relative py-24 bg-gradient-to-br from-indigo-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
      About <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">KojAgency</span>
    </h1>
    <p class="max-w-3xl mx-auto text-xl text-gray-600">
      We're a team of passionate technologists, designers, and strategists dedicated to building digital solutions that make a difference.
    </p>
  </div>
</section>

<!-- Mission Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
          Our Mission
        </h2>
        <p class="text-lg text-gray-600 mb-6">
          To empower businesses with innovative digital solutions that drive growth, enhance efficiency, and create lasting value in an ever-evolving technological landscape.
        </p>
        <p class="text-lg text-gray-600">
          Since our founding, we've helped over 150 companies transform their digital presence, optimize their operations, and achieve measurable business results through technology.
        </p>
      </div>
      <div class="relative">
        <div class="aspect-w-16 aspect-h-9 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl overflow-hidden flex items-center justify-center">
          <!-- Team collaboration and innovation illustration -->
          <svg class="w-full h-full max-w-md max-h-60 text-indigo-600" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Background grid -->
            <defs>
              <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
                <path d="M 20 0 L 0 0 0 20" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.1"/>
              </pattern>
            </defs>
            <rect width="400" height="300" fill="url(#grid)"/>

            <!-- Digital transformation elements -->
            <!-- Cloud icons -->
            <g opacity="0.3">
              <path d="M80 80 Q70 70, 90 70 Q100 60, 120 70 Q130 60, 140 70 Q150 80, 140 90 L90 90 Q80 90, 80 80Z" fill="currentColor"/>
              <path d="M280 60 Q270 50, 290 50 Q300 40, 320 50 Q330 40, 340 50 Q350 60, 340 70 L290 70 Q280 70, 280 60Z" fill="currentColor"/>
            </g>

            <!-- Team figures -->
            <g fill="currentColor">
              <!-- Person 1 - Developer -->
              <circle cx="120" cy="140" r="15" opacity="0.8"/>
              <rect x="110" y="155" width="20" height="35" rx="10" opacity="0.8"/>
              <!-- Laptop -->
              <rect x="100" y="180" width="40" height="25" rx="3" fill="none" stroke="currentColor" stroke-width="2" opacity="0.6"/>
              <rect x="105" y="185" width="30" height="15" rx="1" opacity="0.4"/>

              <!-- Person 2 - Designer -->
              <circle cx="200" cy="130" r="15" opacity="0.8"/>
              <rect x="190" y="145" width="20" height="35" rx="10" opacity="0.8"/>
              <!-- Design tablet -->
              <rect x="180" y="170" width="30" height="20" rx="3" fill="none" stroke="currentColor" stroke-width="2" opacity="0.6"/>
              <circle cx="195" cy="180" r="3" opacity="0.4"/>

              <!-- Person 3 - Strategist -->
              <circle cx="280" cy="145" r="15" opacity="0.8"/>
              <rect x="270" y="160" width="20" height="35" rx="10" opacity="0.8"/>
              <!-- Charts -->
              <rect x="260" y="185" width="35" height="20" rx="2" fill="none" stroke="currentColor" stroke-width="2" opacity="0.6"/>
              <path d="M265 195 L275 190 L285 192 L295 187" stroke="currentColor" stroke-width="2" opacity="0.4"/>
            </g>

            <!-- Connection lines between team members -->
            <g stroke="currentColor" stroke-width="2" opacity="0.3" stroke-dasharray="5,5">
              <line x1="135" y1="155" x2="185" y2="145"/>
              <line x1="215" y1="145" x2="265" y2="160"/>
              <line x1="140" y1="170" x2="260" y2="170"/>
            </g>

            <!-- Innovation elements -->
            <g opacity="0.4">
              <!-- Lightbulb -->
              <circle cx="350" cy="120" r="8" fill="none" stroke="currentColor" stroke-width="2"/>
              <path d="M350 128 L350 135" stroke="currentColor" stroke-width="2"/>
              <path d="M346 135 L354 135" stroke="currentColor" stroke-width="2"/>

              <!-- Gear -->
              <circle cx="50" cy="200" r="12" fill="none" stroke="currentColor" stroke-width="2"/>
              <circle cx="50" cy="200" r="6" fill="currentColor"/>
              <path d="M50 185 L50 188 M62 200 L59 200 M50 215 L50 212 M38 200 L41 200" stroke="currentColor" stroke-width="2"/>

              <!-- Growth arrow -->
              <path d="M320 220 L360 180" stroke="currentColor" stroke-width="3" marker-end="url(#arrowhead)"/>
              <defs>
                <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
                  <polygon points="0 0, 10 3.5, 0 7" fill="currentColor"/>
                </marker>
              </defs>
            </g>

            <!-- Code/Data elements -->
            <g opacity="0.2" font-family="monospace" font-size="8" fill="currentColor">
              <text x="60" y="250">&lt;code&gt;</text>
              <text x="300" y="250">{ api: "REST" }</text>
              <text x="150" y="260">data.transform()</text>
            </g>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Values Section -->
<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Our Core Values
      </h2>
      <p class="max-w-2xl mx-auto text-xl text-gray-600">
        The principles that guide everything we do
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% @values.each_with_index do |value, index| %>
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg mb-4 flex items-center justify-center">
            <% case value[:title] %>
            <% when "Innovation" %>
              <!-- Innovation: Lightbulb with spark -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 2.38 1.19 4.47 3 5.74V17c0 .55.45 1 1 1h6c.55 0 1-.45 1-1v-2.26c1.81-1.27 3-3.36 3-5.74 0-3.87-3.13-7-7-7zm2.85 11.1l-.85.6V16h-4v-2.3l-.85-.6C7.8 12.16 7 10.63 7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 1.63-.8 3.16-2.15 4.1z"/>
                <path d="M9 21h6v1H9zm0-2h6v1H9z"/>
                <!-- Spark elements -->
                <circle cx="18" cy="6" r="1" opacity="0.8"/>
                <circle cx="20" cy="8" r="0.5" opacity="0.6"/>
                <circle cx="16" cy="4" r="0.7" opacity="0.7"/>
              </svg>
            <% when "Quality" %>
              <!-- Quality: Diamond/gem icon -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9l-5.91 3.74L18 22l-6-4.5L6 22l1.91-9.26L2 9l6.91-0.74L12 2z"/>
                <path d="M12 4.5l-2.1 4.25L5 9.5l4 2.5L7.5 17l4.5-3.4L16.5 17L15 12l4-2.5l-4.9-.75L12 4.5z" fill="white" opacity="0.3"/>
              </svg>
            <% when "Partnership" %>
              <!-- Partnership: Handshake/connection icon -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 6h-2v2h2v2h-2l-1 5h-2l-1-5h-4l-1 5H9l-1-5H6V8h2V6H6V4h2v2h8V4h2v2zm-4 2h-8v2l1 5h2l1-5h2l1 5h2l1-5V8z"/>
                <circle cx="7" cy="11" r="2" opacity="0.8"/>
                <circle cx="17" cy="11" r="2" opacity="0.8"/>
                <path d="M9 11h6" stroke="white" stroke-width="1.5" opacity="0.6"/>
              </svg>
            <% when "Impact" %>
              <!-- Impact: Target with arrow -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="12" r="6" fill="none" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="12" r="2"/>
                <!-- Arrow pointing to center -->
                <path d="M4 4l6 6m0 0V6m0 4H6" stroke="white" stroke-width="2" fill="none" opacity="0.8"/>
              </svg>
            <% end %>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3"><%= value[:title] %></h3>
          <p class="text-gray-600"><%= value[:description] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Team Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Meet Our Team
      </h2>
      <p class="max-w-2xl mx-auto text-xl text-gray-600">
        The talented individuals behind our success
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% @team_members.each do |member| %>
        <div class="text-center group">
          <div class="relative mb-4 overflow-hidden rounded-2xl">
            <div class="aspect-w-1 aspect-h-1 bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
              <!-- Professional avatar SVG based on role -->
              <svg class="w-24 h-24 text-indigo-600" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Face -->
                <circle cx="50" cy="35" r="15" fill="currentColor" opacity="0.8"/>
                <!-- Body -->
                <path d="M20 80 Q20 60, 30 60 L70 60 Q80 60, 80 80 L80 100 L20 100 Z" fill="currentColor" opacity="0.8"/>

                <% case member[:role] %>
                <% when "CEO & Founder" %>
                  <!-- Suit tie -->
                  <rect x="47" y="60" width="6" height="20" fill="currentColor" opacity="0.6"/>
                  <!-- Leadership crown -->
                  <path d="M35 25 L40 30 L45 25 L50 30 L55 25 L60 30 L65 25 L60 20 L35 20 Z" fill="currentColor" opacity="0.4"/>
                <% when "CTO" %>
                  <!-- Code brackets -->
                  <text x="25" y="75" font-family="monospace" font-size="8" fill="currentColor" opacity="0.6">&lt;/&gt;</text>
                  <!-- Tech tools -->
                  <rect x="15" y="70" width="8" height="2" fill="currentColor" opacity="0.4"/>
                  <rect x="15" y="73" width="6" height="2" fill="currentColor" opacity="0.4"/>
                <% when "Head of Design" %>
                  <!-- Design tools -->
                  <circle cx="75" cy="70" r="3" fill="currentColor" opacity="0.5"/>
                  <rect x="72" y="75" width="6" height="2" fill="currentColor" opacity="0.5"/>
                  <!-- Color palette -->
                  <rect x="15" y="85" width="3" height="3" fill="#ff6b6b" opacity="0.7"/>
                  <rect x="19" y="85" width="3" height="3" fill="#4ecdc4" opacity="0.7"/>
                  <rect x="23" y="85" width="3" height="3" fill="#45b7d1" opacity="0.7"/>
                <% when "Lead Developer" %>
                  <!-- Terminal -->
                  <rect x="15" y="75" width="15" height="10" rx="2" fill="none" stroke="currentColor" stroke-width="1" opacity="0.5"/>
                  <rect x="17" y="77" width="11" height="1" fill="currentColor" opacity="0.3"/>
                  <rect x="17" y="79" width="8" height="1" fill="currentColor" opacity="0.3"/>
                  <!-- Gears -->
                  <circle cx="75" cy="75" r="4" fill="none" stroke="currentColor" stroke-width="1" opacity="0.4"/>
                  <circle cx="75" cy="75" r="2" fill="currentColor" opacity="0.4"/>
                <% end %>
              </svg>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-1"><%= member[:name] %></h3>
          <p class="text-indigo-600 font-medium mb-2"><%= member[:role] %></p>
          <p class="text-gray-600"><%= member[:bio] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gradient-to-r from-indigo-600 to-purple-600">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
      Ready to Work Together?
    </h2>
    <p class="text-xl text-indigo-100 mb-8">
      Let's create something amazing for your business.
    </p>
    <%= link_to contact_path, class: "inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-semibold rounded-full hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" do %>
      Get in Touch
      <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    <% end %>
  </div>
</section>