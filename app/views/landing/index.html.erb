        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-all duration-200" data-action="click->carousel#next">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>

      <!-- Dots -->
      <div class="flex justify-center mt-8 space-x-2">
        <% @testimonials.each_with_index do |_, index| %>
          <button
            class="w-2 h-2 rounded-full transition-all duration-200 <%= index == 0 ? 'w-8 bg-indigo-600' : 'bg-gray-300 hover:bg-gray-400' %>"
            data-action="click->carousel#goToSlide"
            data-carousel-slide-param="<%= index %>"
          ></button>
        <% end %>
      </div>
    </div>
  </div>
</section>

